<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">
          <div class="module" >
            <div class="module-head">
                <h3>Reference Letter</h3>        
            </div><!--/.module-head-->
            <div class="module-body">

               <div class="outing">  
               <% if current_user.employee.designation.present? %>              
                  <div class="row-fluid">

                    <div class="span6">
                      <label>Date: <%= format_date(Time.now.to_date) %></label>
                    </div>                      
                 </div>
                  <div class="row-fluid" style="margin-left:300px;">
                    <div class="span6">
                      <label><u><b>TO WHOMSOEVER IT MAY CONCERN</b></u></label>
                    </div>                      
                 </div><br>
                 <div class="row-fluid">
                    <div class="span12">
                      <label><p>This is to certify that <b><%= current_user.employee.title %>.<%= current_user.employee.full_name %></b> is a bonafide employee of our Company (Amzur 
Technologies Pvt Ltd) and is working as <b><%= current_user.employee.designation.designation_name  %></b>. We confirm that he/she has been working in our company since <b><%= format_date(current_user.employee.date_of_join )%></b>.</p></label>
                    </div>                      
                 </div><br>
                 <div class="row-fluid">
                    <div class="span12">
                      <label>Yours sincerely,</label><br><br>
                      <label> <%= @hr_manager %>, </label>
                      <label> Human Resources </label>
                    </div>                      
                 </div>                    
                 <ul class="navigation-btns editthree">                                                       
                   <li><%= link_to "Save as PDF ", "/letters/reference_letter.pdf", :class => "btn btn-success" %></li> 
                   <li><%= link_to " Send to My Mail", reference_notification_path, :class => "btn btn-success" %></li>
                   <li><%= link_to " Cancel", letters_path, :class => "btn btn-danger" %></li>
                 </ul>
                <% else %>
                  <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                         You Don't have designation, please contact HR manager
                  </div>   
                <% end %>
               </div><!--/.outing-->                                  
            </div><!--/.module-body-->                    
          </div><!--/.module-->                
        </div><!--/.content-->            
      </div><!--/.span12-->
    </div><!--/.row-->    
  </div><!--/.container-->	
</div><!--/.Wrapper-->


<style>
   .outing{
   width:1000px;   
   margin-left:100px;
   margin-top:50px;
   }
     
</style>

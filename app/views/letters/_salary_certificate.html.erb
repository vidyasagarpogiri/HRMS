<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">
          <div class="module" >
            <div class="module-head">
                <h3>Salary Certificate</h3>        
            </div><!--/.module-head-->
              <div class="module-body">
                <div class="outing">   
                <% if @salary.present? %>             
                  <div class="row-fluid">
                    <div class="span6">
                      <label>Date: <%= format_date(Time.now.to_date) %></label>
                    </div>                      
                 </div>
                  <div class="row-fluid" style="margin-left:300px;">
                    <div class="span6">
                      <label><u><b>TO WHOMSOEVER IT MAY CONCERN</b></u></label>
                    </div>                      
                 </div>   <br>
                 <div class="row-fluid">
                    <div class="span12">
                      <label><p>This is to certify that <b><%= current_user.employee.title %>.<%= current_user.employee.full_name %></b>  <b><%= current_user.employee.designation.designation_name if current_user.employee.designation.present? %></b> is an employee of Amzur Technologies,since <b><%= format_date(current_user.employee.date_of_join )%>. </b></p></label>
                    </div>                      
                 </div> <br>
                 <div class="row-fluid">
                    <div class="span12">
                      <label><p>As per our records his / her Salary details in Indian Rupee is as follows :</p></label>
                    </div>                      
                 </div> <br>
                 
                    <div class="row-fluid">
                      <div class="span6">                    
                        <label>BASIC:</label>
                      </div>
                      <div >
                        <label><%= (@salary.basic_salary/12).round(2) %></label>
                      </div></div>
                      <% if @salary.allowances.present? %>
                      <% @salary.allowances.each do |allowance| %>
                       <div class="row-fluid">
                        <div class="span6">
                          <label><%= allowance.allowance_name %></label>
                        </div>
                        <div class="">
                          <label ><%= (allowance.total_value/12).round(2) %></label>
                        </div>
                      </div>
                      <% end %> 
                     <% end %>                                         
                    <!-- <div class="row-fluid">
                        <div class="span6">
                          <label >AMZUR BENEFITS PLAN:</label>
                        </div>
                        <div class="">
                          <label >5654</label>
                        </div>
                    </div>      -->              
                    <div class="row-fluid">
                        <div class="span6">
                          <label >ADDITIONAL ALLOWANCE:</label>
                        </div>
                        <div class="">
                          <label ><%= (@salary.special_allowance/12).round(2) %></label>
                        </div>
                    </div>                    
                    <div class="row-fluid">
                        <div class="span6">
                          <label >PROVIDENT FUND:</label>
                        </div>
                        <div class="">
                          <label ><%= (@salary.pf/12).round(2) %></label>
                        </div>
                    </div>                    
                    <div class="row-fluid">
                        <div class="span6">
                          <label >GRATUITY:</label>
                        </div>
                        <div class="">
                          <label ><%= (@salary.gratuity/12).round(2) %></label>
                        </div>
                    </div>  
                    <div class="row-fluid">
                        <div class="span6">
                          <label >QPLC:</label>
                        </div>
                        <div class="">
                          <label ><%= (@salary.bonus/12).round(2) %></label>
                        </div>
                    </div>    
                   <!-- <div class="row-fluid">
                        <div class="span6">
                          <label >MEDICAL:</label>
                        </div>
                        <div class="">
                          <label >xxx</label>
                        </div>
                    </div>  -->
                    <div class="row-fluid">
                        <div class="span6">
                          <label ><b>MONTHLY GROSS:</b></label>
                        </div>
                        <div class="">
                          <label ><b><%= (@salary.gross_salary/12).round(2) %></b></label>
                        </div>
                    </div>                                   
                  <br>
                  <div class="row-fluid">
                    <div class="span12">
                      <label><p>This certificate is issued at employee request.</p></label>
                      <label><p>For Verification of this letter, you can get in touch with (Mail ID): <b>hr@amzur.com</b></p></label><br>
                      <label><p>For Amzur Technologies</p></label><br>
                      <label><p>AUTHORISED SIGNATORY</p></label>
                    </div>                      
                 </div> <br>
                 <ul class="navigation-btns editthree">                                                       
                   <li><%= link_to "Save as PDF ", "/letters/salary_certificate.pdf", :class => "btn btn-success" %></li> 
                   <li><%= link_to " Send to My Mail", salary_notification_path, :class => "btn btn-success" %></li>
                   <li><%= link_to " Back", letters_path, :class => "btn btn-info" %></li>
                 </ul>
                 <% else %>
                     <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                         Please Contact HR Manager, You don't have Salary Details.
                     </div>   
                  <% end %>  
               </div>  <!--/.outing--> 
            </div><!--/.module-body-->                    
          </div><!--/.module-->                
        </div><!--/.content-->            
      </div><!--/.span12-->
    </div><!--/.row-->    
  </div><!--/.container-->	
</div><!--/.Wrapper-->


<style>
   .outing{
   width:1000px;   
   margin-left:100px;
   margin-top:50px;
   }
     
</style>

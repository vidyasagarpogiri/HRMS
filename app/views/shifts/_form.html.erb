<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head"> 
              <h3>Add New Shift</h3>
            </div>
            <div class="module-body">
              <%= form_for @shift,  :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal row-fluid shift_from"} do |s| %>
              <div class="control-group">
                <label class="control-label" for="basicinput">Shift Name:</label>
                <div class="controls">
                  <%= s.text_field :name, :class => "span8 form-control ", :placeholder =>"Enter Shift Name", :data => {:error => "Please Enter valid Shift Name"}, :required => true %>
                  <span class="help-block with-errors"></span>
                </div>
              </div>
              
              <div class="control-group">
                <label class="control-label" for="basicinput">From Time:</label>
                <div class="controls">
                  <%= s.text_field :from_time, :class => "span8 form-control time-picker", :placeholder =>"Enter Login Time", :data => {:error => "Please Enter Login Time  "}, :required => true %>
                  <span class="help-block with-errors"></span>
                </div>
              </div>
              
              <div class="control-group">
                <label class="control-label" for="basicinput">To Time</label>                                         
                <div class="controls">
                  <%= s.text_field :to_time, :class => "span8 form-control time-picker", :placeholder =>"Enter Logout Time", :data => {:error => "Please Enter Logout Time"}, :required => true %>
                  <span class="help-block with-errors"></span>
                </div>
              </div>
              <ul class="navigation-btns pull-left" >
              <li><button type="submit" class="btn btn-success">Save</button></li>
              <li><%= link_to "Cancel", shifts_path,:class => "btn btn-danger" %></li>
              </ul>	
              <% end %>
            </div><!--/.module-body-->
          </div><!--/.module-->
        </div><!--/.content-->
      </div><!--/.span12-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->
	
	
<script>
  $(function(){
    $(".time-picker").timepicker();
  });
</script>

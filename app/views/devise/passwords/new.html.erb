<body class="login-body">

    <div class="container">


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html => { class: "form-signin" }) do |f| %>
<h2 class="form-signin-heading">Forgot your password?</h2>
  <div class="login-wrap">
<span class="help-block with-errors">
  <%= devise_error_messages!%>
</span>
  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, :class => "form-control" %></br>

  <%= f.submit "Send me reset instructions", :class=>"btn btn-sm btn-login btn-block" %>
  </div>
<% end %>

</div>
</div>

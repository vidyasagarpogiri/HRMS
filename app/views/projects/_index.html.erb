
          <div class="module">
            <div class="module-head">
				      <h3>My Projects</h3>
				      <% if current_user.employee == @employee %>
 				      <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-plus-sign"></i></a> <%= link_to 'New Project',  new_project_path, :remote => true %></label>
 				      <% end %>
				     </div> 
				      <div class="module-body">
				      <% if @projects.present? %>
				       <% @projects.each do |project| %>
         <div class ="row-fluid">
          <% if current_user.employee == @employee %>
 				      <label style="" class = "pull-right"> <%= link_to 'Edit',  edit_project_path(project), :class => "btn btn-success", :remote => true %></label>
 				      <% end %>
          <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Project Tille: </strong> <%= project.title %></label>                
              </div>
            </div>
            
            
          <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Key Skills used: </strong> <%= project.skills %></label>                
              </div>
            </div>
            
            
          <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Start Date: </strong> <%= project.start_date %></label>                
              </div>
            </div>
            
            <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>End Date: </strong> <%= project.end_date %></label>                
              </div>
            </div>
            <div class="span8">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Description: </strong> <%= raw(project.description) %></label>                
              </div>
            </div><br>
            <div class="span8">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Tasks Performed: </strong> <%= project.tasks_performed %></label>                
              </div>
            </div><br>
            
         </div>
         
         <% end %>
				      <%else%>
				      <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  No Projects to display.
              </div>
            <% end %> 	           
						</div><!--/.module-body-->
					</div><!--/.module-->
		
	

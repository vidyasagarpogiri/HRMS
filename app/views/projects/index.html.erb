
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
				      <h3>My Projects</h3>
				      <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-plus-sign"></i></a> <%= link_to 'New Project',  new_project_path %></label>
				     </div> 
				      <div class="module-body">
				      <% if @projects.present? %>
				       <% @projects.each do |project| %>
         <div class ="row-fluid">
          
          <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Project Tille: </strong> <%= project.title %></label>                
              </div>
            </div>
            
            
          <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Key Skills used: </strong> <%= project.skills %></label>                
              </div>
            </div>
            
            
          <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Start Date: </strong> <%= project.start_date %></label>                
              </div>
            </div>
            
            <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Start Date: </strong> <%= project.end_date %></label>                
              </div>
            </div>
            <div class="span8">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Description: </strong> <%= raw(project.description) %></label>                
              </div>
            </div><br>
            
         </div>
         
         <% end %>
				      <%else%>
				      <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  No Projects to display.
              </div>
            <% end %> 	           
						</div><!--/.module-body-->
					</div><!--/.module-->
				</div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->
	

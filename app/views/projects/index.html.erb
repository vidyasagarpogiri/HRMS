
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
				      <h3>My Projects</h3>
				      <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-plus-sign"></i></a> <%= link_to 'New Project',  new_project_path %></label>
				     </div> 
				      <div class="module-body">
				      <% if @projects.present? %>
				       <% @projects.each do |project| %>
				       <h5><%= project.title %></h5> 
				       <ul class="navigation-btns pull-right" style="margin-top:-20px">
                    <li><%= link_to 'Edit', edit_project_path(project), :class => "btn btn-success " %></li>
                    <li><%= link_to "Delete", project_path(project.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>     
                  </ul> 
                  
                 <label class="desc">Description:</label><%= project.description %>
                 <label>Tasks Performed:<%= project.tasks_performed %></label>
                 Roles:<%= project.roles %>
                 skills:<%= project.skills %>
				       <%end%>
				      <%else%>
				      <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  No Projects to display.
              </div>
            <% end %> 	           
						</div><!--/.module-body-->
					</div><!--/.module-->
				</div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->
	

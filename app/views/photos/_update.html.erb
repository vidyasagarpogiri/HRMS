
<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
						  <h3>Album</h3>
						  <label style="font-weight:normal;margin-top:-10px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "New Album", new_album_path %></label>   
					  </div>
					  <div class="module-body">
						  <%= image_tag @photo.image %>
              <%= form_for(@photo) do |f| %>
                <div class="field">
                  <%= f.label :album %><br>
                  <%= f.file_field :image %>
                </div>
                <div class="actions">
                  <%= f.submit %>
                </div>
              <% end %>								
						</div><!--.module-body-->
					</div><!--/.module -->
		    </div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->

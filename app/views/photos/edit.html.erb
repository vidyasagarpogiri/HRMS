
<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
						  <h3>Album</h3>
						  <label style="font-weight:normal;margin-top:-10px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%# link_to "New Photo to this album", new_album_path %></label>   
					  </div>
					  <div class="module-body">
					    
					     <div class="control-group">
						    <label class="control-label" for="basicinput">Old Images</label>
						    <div class="controls">
						       
						       <%= image_tag @photo.image_url, :width =>"100", :height => "100" %>                        
                   <span class="help-block with-errors"></span>
						    </div> 
						  </div>
						  <div class="control-group">
						    <label class="control-label" for="basicinput">Upload Images</label>
						    <div class="controls">
						      <input type="file">						       						                               
                   <span class="help-block with-errors"></span>
						    </div>
						  </div>
						  <%= link_to 'Save', :class=>"btn btn-success" %>
									  						
						</div><!--.module-body-->
					</div><!--/.module -->
		    </div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->

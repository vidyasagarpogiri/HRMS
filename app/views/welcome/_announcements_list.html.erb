<div class="module">	
  <div class="box-title">   		 
    <div class="module-head">
      <h3>Announcements</h3>  
    </div>                                            
  </div>
  
    <div class="module-body"> 
  <% if @welcome_announcements.present? %>	
  <% @welcome_announcements.each do |welcome_announcement| %>
	
    <div class="control-group">
      <a href="#"><strong><%= welcome_announcement.title %> </strong></a>
    </div>
    <div class="control-group">
      <label class="idesc" for="basicinput">  <%= raw welcome_announcement.description %> </label>
    </div>
    <%= link_to "Continue..", announcement_path(welcome_announcement), :class => "pt4" %><br>      
    <div style="border-top: 1px solid #eeeeee;"></div>
    <% end %>     
  <div id="paginator">
     <%= paginate @welcome_announcements, :remote => true, :param_name => 'page2' %>
  </div>  
  <% else %>

    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        There are no announcements
    </div>

  <% end %> <br>
  </div><!--module body-->  
</div><!--module-->


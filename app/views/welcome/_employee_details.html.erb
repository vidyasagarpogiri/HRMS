<div class="module">
 <%= render 'employees/my_info'%>
</div><!--/.module --> 

<br><br>

<div class="module">
  <div class="module-head">							
    <h3>Reporting</h3>   
  </div>

  <div class="module-body exp">
    <table class="table table-striped table-hover text" id="test">					      
      <tr>
        <th>Report-to</th>
        <td><%= @employee.reporting_manager %></td>
      </tr>
      <tr>
        <th>Reporting-to-me</th>
        <td><% @reportee_employees.each do |emp|%><tr><td></td><td><%= emp.full_name %></td></tr><% end %></td>
      </tr>                
    </table>
    <button class="btn btn-primary pull-right"><i class="glyphicon glyphicon-sort"></i> All Employees</button> <br>
  </div><!--/.module-body -->
</div><!--/.module -->      
                                
<br><br>                                
                                
<div class="module">
  <div class="module-head">							
    <h3>My Leaves</h3>   
  </div>

  <div class="module-body exp">
  <% if @employee.department.leave_policy.present? %>
    <table class="table table-striped table-hover" id="sample-table-2"> 
    <div class="">     											      

        <tr>
          <th>Leaves-Earned</th>         
          <td> <%= pluralize(total_leaves(@employee)+0, 'day') %> </td>
        </tr>
        <tr>
          <th>Leaves Utilized</th>
          <td><%= pluralize(total_used_leaves(@employee)+0, 'day') %></td>
        </tr>  
         <tr>
          <th>Balance Leaves</th>
          <td><%= pluralize(total_balance_leaves(@employee)+0, 'day') %></td>
        </tr>  
         <tr>
          <th>Upcoming Leaves</th>
          <td>
            <% if @latest_leave.present? && @latest_leave.from_date.to_date > Date.today %>
            <%= format_date(@latest_leave.from_date) %> TO <%= format_date(@latest_leave.to_date)%>
            <% end %>
          </td>
        </tr> </div>              
    </table> 
   <% else %>
     <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
         Your leave policy did not set,  please contact HR
     </div>
   <% end %>   
  </div><!--/.module-body -->
</div><!--/.module -->      
   
   
<script type="text/javascript">
  $("#test tr:nth-child(n+5)").hide()
    $('.btn').click(function(){  
    $("#test tr:nth-child(n+5)").toggle()
  });
</script>


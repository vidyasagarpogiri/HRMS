<div class="module">
 <%= render 'employees/my_info'%>
</div><!--/.module --> 

<br><br>

<div class="module">
  <div class="module-head">							
    <h3>Reporting</h3>   
  </div>
  <div class="module-body">
    <table class="table table-striped table-hover" id="sample-table-2">
									      
        <tr>
          <th>Report-to</th>
          <td><%= @employee.reporting_manager %></td>
        </tr>
        <tr>
          <th>Reporting-to-me</th>
          <td><% @reportee_employees.each do |emp|%><%= emp.full_name %>, <% end %></td>
        </tr>           

    </table>   
  </div><!--/.module-body -->
</div><!--/.module -->      
                                
<br><br>                                
                                
<div class="module">
  <div class="module-head">							
    <h3>My Leaves</h3>   
  </div>
  <div class="module-body">
    <table class="table table-striped table-hover" id="sample-table-2">
      											      
        <tr>
          <th>Leaves-Earned</th>
          <td> <%= total_leaves(@employee).to_f  %></td>
        </tr>
        <tr>
          <th>Leaves Utilized</th>
          <td><%= total_used_leaves(@employee)%></td>
        </tr>  
         <tr>
          <th>Balance Leaves</th>
          <td><%= total_balance_leaves(@employee) %></td>
        </tr>  
         <tr>
          <th>Upcoming Leaves</th>
          <td><% if @latest_leave.present? && @latest_leave.from_date.to_date > Date.today %>
                  <%= format_date(@latest_leave.from_date) %> TO <%= format_date(@latest_leave.to_date)%>
               <% end %>
          </td>
          
        </tr>           
    
    </table>   
  </div><!--/.module-body -->
</div><!--/.module -->      
                                                                                                                                                                            


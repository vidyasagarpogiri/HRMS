<div id='calendar'>
</div>

<script>
$(document).ready(function() {
    $('#calendar').fullCalendar({
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'month,agendaWeek,agendaDay'
    },
          <% department_id = @department.id if @department.present?  %>
          events: '/calendars/department_leaves_calendar.json?department=<%= department_id%>',
           
          eventBackgroundColor: '#FFFFD1',
          eventTextColor: 'black'                                                  
     });
});
</script>

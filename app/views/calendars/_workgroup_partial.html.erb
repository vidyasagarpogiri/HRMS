<div id='calendar'>
</div>

<script>
$(document).ready(function() {
    $('#calendar').fullCalendar({
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'month,agendaWeek,agendaDay'
    },
          <% workgroup_id = @workgroup.id if @workgroup.present?  %>
          events: '/calendars/workgroup_calendar.json?workgroup=<%= workgroup_id%>',
           
          eventBackgroundColor: '#FFFFD1',
          eventTextColor: 'black'                                                  
     });
});
</script>

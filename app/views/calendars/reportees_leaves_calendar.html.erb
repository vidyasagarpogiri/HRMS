<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
              <h3>Reportees Leaves Calendar</h3>
              <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a><i class=" icon-arrow-right"></i></a> <%= link_to 'Reportees Events',  calendars_reporting_manager_calendar_path %></label>            
					  </div>
					  <div class="module-body">
					    <div id='calendar'>						     					        					     					          
					    </div>
					    <label><strong>Reportee Leaves:</strong></label>
					      
					      <% if @reportee_employees.present? %>
					        <% @reportee_employees.each do |reportee_employee|%>					          
					          <% if reportee_employee.leave_histories.present? %>					          
					            <% reportee_employee.leave_histories.each do |employee_record| %>
					            <label>Reportee Name: <%= reportee_employee.full_name %></label>
					              <%= employee_record.from_date %> to <%= employee_record.to_date %>
					            <% end %>					         
					          <% end %>			          
					        <% end %>
					      <% else %>
                  <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    You have No Reportees.
                  </div>
					      <% end %>					      
	          </div><!--.module-body-->
					</div><!--/.module -->
		    </div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><style>
  #calendar {
  max-width: 900px;
  margin: 0 auto;
}
</style>
<script>
$(document).ready(function() {
    $('#calendar').fullCalendar({
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'month,agendaWeek,agendaDay'
    },
          events: '/calendars/reportees_leaves_calendar.json',
            
          eventBackgroundColor: '#FFFFD1',
          eventTextColor: 'black'                                             
     
     });
});
</script><!--/.wrapper-->



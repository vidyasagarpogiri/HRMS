        <div class="module">
		      <div class="module-head">							
             <h3> Holiday calender</h3>
		          <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "Add Holidays",  new_group_holiday_calender_path(@group), :remote => true %></label> 
          </div>		   	         
		        <div class="module-body">   
		          <% if @holiday_calenders.present? %> 
    		        <table class="table table-striped table-bordered table-condensed">
								  <thead>
										<tr>
											<th class="center">Holiday Name</th>
											<th> Holiday Date  </th>
											<th> Mandatory/Optional  </th>
										</tr>
									</thead>
									
									<% @holiday_calenders.each do |holiday| %>
									<tbody>
										<tr>
										  <td class="center"><%= holiday.event.event_name %></td>	
										  <td class="center"><%=format_date(holiday.event.event_date) %></td>
										   <td class="center"><% if holiday.mandatory_or_optional? %>Mandatory<%else%>Optional<%end%></td>		
									  </tr>
								 </tbody>
								 <% end %>
							</table>
							<% else %>  
							    <div class="alert alert-success alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          No Holidays List for this Group
                  </div>                                   
						  <% end %>		        		     		    
		      </div><!--module -body-->                                                                                
     </div><!--/.module -->

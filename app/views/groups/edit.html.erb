        <div id="page-wrapper">
           <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header"> Add Group And Policies</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                   <%= form_for(@group) do |f| %>
   
                                        <div class="form-group col-lg-6">
                                           <label class="required">Group Name</label>
                                            <%= f.text_field :group_name,  :class =>"form-control", :placeholder => "Enter group name" %>  
                                        </div>
                                         
                                        <div class="form-group col-lg-6"">
                                            <label class="required">Add Reporting Manager</label><br>
                                               <%= f.collection_select :id, Employee.all, :id, :first_name, { :prompt => "Please Select" }, { :class => "employee, form-control", :id => "disabledSelect", :name=>"emp_id" } %>
                                        </div>                                
                              
                                       <button type="submit" class="btn btn-success pull-right" >Save </button>
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
         </div>

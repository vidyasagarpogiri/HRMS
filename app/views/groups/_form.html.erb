<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <div class="panel-heading">
        Add Group
      </div>
		  <div class="panel-body">	
			  <%= form_for(@group) do |f| %>
			    <div class="row">
				    <div class="form-group">   
				      <label class="control-label col-lg-2" for="basicinput">Group Name</label>
              <div class="col-lg-8">
                 <%= f.text_field :group_name,  :class =>"form-control", :placeholder => "Enter group name", :required =>true %>
                <span class="help-block with-errors"></span>
              </div>
		        </div>
		      </div>
		      <div class="row">
		        <div class="col-lg-offset-2 col-lg-10">  						      				     				      								        							
					    <button type="submit" class="btn btn-success">Save </button>
					    <%= link_to "Cancel", groups_path,:class => "btn btn-danger" %>
					  </div>
					</div>
				<% end %>
      </div>
    </div>
  </div>
</div>






















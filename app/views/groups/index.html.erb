


<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Groups List </h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                          <label style="font-weight:normal;padding:20px;" class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "New Group", new_group_path %></label>
                           <% if @groups.present? %>      
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <table class="table table-striped table-hover" id="sample-table-2">
											                  <thead>											      
												                  <tr>
													                  <th class="center">Group Name</th>
													                  <th>Reporting Manager</th>	
													                  <th>No.of Employees</th>	
													                 <!-- <th>No.of Holidays</th>	-->
													                  <th></th>
													                 	                  										      		
												                  </tr>
											                  </thead>											                  
	                                       <% @groups.each do |group| %>
											                  <tbody>
												                  <tr>               
													                  <td class="center"> <%= link_to group.group_name, group_path(group) %>  </td>
													                  <td> <%= group.reporting_manager_full_name %> </td>
													                  <td> <%= group.employees.count if group.employees.present? %> </td>
													                  <td><%= link_to "Edit", edit_group_path(group.id) %>  </td>
													                 </tr>
											                  </tbody>
											                  <% end %>
									                  </table>              
                             <% else %>
                               <div class="alert alert-info alert-dismissable">
                                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                   Please add New Group
                              </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                        <% end %>

                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>


        <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>



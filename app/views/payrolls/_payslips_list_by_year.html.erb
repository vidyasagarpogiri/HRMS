<div class="row">                                             
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">Payslips</header>

          <div class="panel-body"> 
              <div class="row-fluid">
               <div class="span6">
               <label><strong>Select Month to View payslip :&nbsp&nbsp </strong></label>
             <%= form_tag( payrolls_employee_payslips_by_year_path,  :class => "form-horizontal form-inline", :remote => true) do %>
            
                <div class="form-group">
                  <div class="col-lg-4">
                  <select name="payslip_view_year" class="payroll_year form-control">
                    <option value=0>-select year-</option>
                    <% @years.each do |year| %>
                      <option value="<%= year %>"><%= year %></option>
                    <% end %>             
                  </select> 
                 </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-4">
                    <input type="submit" class="btn btn-success" value="View"> 
                  </div>  
                </div>             
           <% end %>  
               </div>
             </div><hr>
                <% if @payslips.present? %>               
                <!-- code for displayin all employees payslips -->   
                <div class="employee_payslip">             
                <table class="table table-striped table-bordered table-condensed">
                   <thead>
                   <tr>
                      <th>Month</th>
                      <th>Year</th>
                      <th>Total Working days</th>
                      <th>Basic</th>
                      <th>Gross</th>
                      <th>Total Deductions</th>
                      <th>NetPay</th>
                    </tr>
                   </thead>
                   <% @payslips.each do |payslip| %>
                   <tbody>
                    <tr>
                      <td><%= link_to Date::MONTHNAMES[payslip.month], "/monthly_payslip_view/#{payslip.id}" %></td>
                      <td><%= payslip.year %></td>
                      <td><%= payslip.no_of_working_days%></td>
                      <td><%= payslip.basic_salary%></td>
                      <td><%= payslip.gross_salary %></td>
                      <td><%= payslip.total_deductions %></td>
                      <td><%= payslip.netpay %></td>
                    </tr>
                   </tbody>
                       <% end %> 
                </table>
                </div> 
                 <% else %>
                    <div class="alert alert-danger alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <b>There is no payslips</b>
                    </div>
                <% end %>           
              </div>
            </div>
           </div>

<section class="panel">
  <header class="panel-heading">
      Announcement Details
 	 </header>
	<div class="panel-body">											    
     <h5><%= @announcement.title %></h5>
    <div class="form-group">
     <div class="controls">
      <strong>Announcement for <%if @announcement.announceable_type.nil? %> ALL <%else%> <%=@announceable %>  <%=@announcement.announceable_type%> <%end%></strong>
      </div>
     </div>
        <% if current_user.department == Department::HR %>  
        
          <%= link_to 'Edit', edit_announcement_path(@announcement), :class => "btn btn-success " %>
          <%= link_to "Delete", announcement_path(@announcement), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %>
      
       <% end %><br>
               <div class="form-group"> 
                 <div class="controls"  >             
                    <%= raw @announcement.description%>
                 </div>
               </div>
               <% if current_user.department == Department::HR %>                 
               <% end %>                        
						  </div><!--/.module-body-->
					  </div><!--/.module-->
				  </div><!--/.content-->
			  </div><!--/.span8-->
			  <div class="span4">	
          <div class="module">	
            <div class="box-title">
              <div class="module-head">
                <h3>All Announcements</h3> 
              </div>                                            
            </div>
            <div class="module-body">
              <% @announcements.each do |announcement| %>
              <div class="module-body"> 	
                 <div class="control-group">
                    <a href="#"><strong><%= announcement.title %> </strong></a>
                 </div>
                 <div class="control-group">
                    <label class="idesc" for="basicinput">  <%= raw announcement.description %> </label>
                 </div>
                 <%= link_to "Continue..", announcement_path(announcement), :class => "pt4" %><br>          
                 <div style="border-top: 1px solid #eeeeee;padding-bottom:-20px;"></div>       
              </div><!--module body-->
              <% end %>
              <%= paginate  @announcements %> 
            </div><!--/.module-body-->
         </div><!--/.module-->
		  </div><!--/.span4-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->
	



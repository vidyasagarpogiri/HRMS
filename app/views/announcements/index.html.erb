<div class="wrapper">
 <div class="container">
	<div class="row">

  <div class="span12">
		<div class="content">

			<div class="module">
				<div class="module-head">
					<h3>Announcement Details</h3>
					<% if current_user.department == Department::HR %>  
					<label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-edit"></i></a> <%= link_to 'Add New Announcement',  new_announcement_path %></label>
					<% end %>
						</div>
							<div class="module-body">
							
							 <% if @announcements.present? %> 
                                                                                                         
        <table class="table table-striped table-hover" id="sample-table-2">     
            <thead>											      
	            <tr>
		            <th>Title</th>
		            <th>Description</th>											            									      		
	            </tr>
            </thead>
             <% @announcements.each do |announcement| %>
            <tbody>
	            <tr>               
		            <td class="center"><%= announcement.title %></td>
		            <td><%= raw announcement.description %></td>
		            <% if current_user.department == Department::HR %>
		            <td style="width:150px"> 
		               <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                     <li><%= link_to 'Edit', edit_announcement_path(announcement), :class => "btn btn-success " %></li>
                     <li><%= link_to "Delete", announcement_path(announcement.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                   </ul>
                 </td>
               <% end %>
	            </tr>
            </tbody>
            <% end %>
        </table>                                                              
                                
                              
          <% else %>
   
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          No Announcements to display.
   </div>
      <% end %>
      
	           
							</div><!--/.module-body-->
						</div><!--/.module-->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
	



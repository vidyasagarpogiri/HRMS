<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
					    <h3>Announcement Details</h3>
					    <% if current_user.department == Department::HR %>  
					    <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-plus-sign"></i></a> <%= link_to 'Add Announcement',  new_announcement_path %></label>
					    <% end %>
					  </div>
				    <div class="module-body">							
				     <% if @announcements.present? %>									            									      		
             <% @announcements.each do |announcement| %> 
             <h4><%= announcement.title %></h4> 
             <% if current_user.department == Department::HR %>                   
           
             <ul class="navigation-btns pull-right" style="margin-top:-20px">
               <li><%= link_to 'Edit', edit_announcement_path(announcement), :class => "btn btn-success " %></li>
               <li><%= link_to "Delete", announcement_path(announcement.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger" %></li>
             </ul>  
               <% end %>           
             <label class="idesc">
               <%= raw announcement.description %>             
             </label>
             <%= link_to "Continue..", announcement_path(announcement), :class => "pt4" %><br><hr>
                          
            <% end %>   

            <% else %> 
            <div class="alert alert-success alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                No Announcements to display.
            </div>
           <% end %> 
           <%= paginate  @announcements %>      	           
						</div><!--/.module-body-->
					</div><!--/.module-->
				</div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->
	





<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"> Leave Policies</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Leave Policies Form 
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <% @leaves.each do |leave| %>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Pl leaves:</label>
                                            <%= leave.pl_per_year %>                                 
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Total Personal Leaves Available:</label>
                                            <%= leave.sl_per_year %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Total Sick Leaves Availabe</label>
                                            <%= leave.eligible_carry_forward_leaves %>                                        
                                        </div>
                                        <ul class="navigation-btns" style="list-style: none;display:inline;">
                                          
                                        </ul>
                                  <hr>
                                   <% end %>
                                </div>
                                
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>


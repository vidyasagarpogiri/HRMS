<div class="row">
<div class="col-lg-12">
<div class="panel panel-info">
  <div class="panel-heading">
    New Leave Policy For : <%= @group.group_name %>
 </div>                      
 <div class="panel-body">
  <%= form_for ([@group, @leave_policy]), :html => {:class=>"form-horizontal row-fluid edit-leave_policy-form"}, :remote => true do |f| %> 
    <div class="form-group">   
			 <label class="col-lg-2 control-label" for="basicinput">Leaves per Month</label>
          <div class="col-lg-8">
               <%= f.text_field :pl_this_year,  :class => "form-control", :data => {:error => "Please Enter Valid Number Of Leaves Per Month"}, :required =>true, :pattern =>'[0-9]*\.[0-9]+|[0-9]+' %>
            <span class="help-block with-errors"></span>
			     </div>
	  </div>
	                                                                             
    <div class="form-group">   
			 <label class="col-lg-2 control-label" for="basicinput">Carry forword Leaves per Year</label>
           <div class="col-lg-8">
               <%= f.text_field :eligible_carry_forward_leaves,  :class => "form-control", :data => {:error => "Please Enter Maximum Carryforward Leaves Per Year"}, :required =>true, :pattern =>'[0-9]*\.[0-9]+|[0-9]+' %>
            <span class="help-block with-errors"></span>
			      </div>
	  </div>

	  <div class="form-group">   
			 <label class="col-lg-2 control-label" for="basicinput">Maximum Carry forword Leaves</label>
           <div class="col-lg-8">
               <%= f.text_field :max_carry_forward_leaves,  :class => "form-control", :data => {:error => "Please Enter Maximum Carryforward Leaves Per Year"}, :required =>true, :pattern =>'[0-9]*\.[0-9]+|[0-9]+' %>
            <span class="help-block with-errors"></span>
			      </div>
			      </div>
			 
			  <div class="form-group">   
			 <label class="col-lg-2 control-label" for="basicinput">Floating Leave Period</label>
           <div class="col-lg-8">    
			      
			      <%= f.select(:floating_leave_period, options_for_select([['Quarterly', 1], ['Half Yearly', 2], ['Annually', 3]]), {}, :class =>  "form-control") %>
			    <span class="help-block with-errors"></span>
			  </div>
			  </div>
		                                                                                                       
    <%= f.submit  'Save', :class => "btn btn-success pull-left" %>                                                   
     <% end %>
 </div><!--/.module-body-->
</div><!--/.module-->
</div>
</div>


<script>
$(function(){
  $(".edit-leave_policy-form").validator();
 });  
</script>


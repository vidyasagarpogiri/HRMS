
<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                   
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            New Leave Policy For :<label> <%= @group.group_name %></label>
                        </div>
                        <div class="panel-body">
   
                                 <%= form_for ([@group, @leave_policy]) do |f| %>
                                        
                                        <div class="form-group">
                                            <label class="required" >Personal leaves Per Year</label>
                                            <%= f.text_field :pl_this_year,  :class => "form-control" %>
                                        </div>
                                        <div class="form-group">
                                            <label class="required" >Sick Leaves per Year</label>
                                            <%= f.text_field :sl_this_year,  :class => "form-control" %>
                                        </div>
                                        <div class="form-group">
                                            <label class="required" >Minimum Carry forword Leaves</label>
                                            <%= f.text_field :eligible_carry_forward_leaves,  :class => "form-control" %>
                                        </div>
                                        <ul class="navigation-btns" style="list-style: none;display:inline;">
                                           <li> <%= f.submit  'Save', :class => "btn btn-success pull-left" %></li> 
                                        </ul> 
                                                    
                                    <% end %>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
         </div>
          <!-- /#page wrapper -->

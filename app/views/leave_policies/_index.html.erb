 <% unless @leave_policy.nil? %>
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Policies for this group </h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
             <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Leave Policies
                            
                        </div>
                        <% unless @leave_policy.nil? %>
                        <div class="panel-body">
                                    <table class="table table-striped table-hover" id="sample-table-2">
											                  <thead>											      
												                  <tr>
													                  <th class="center">Personal leaves Per Month </th>
													                  <th>Maximum Carry forward Leaves For Year</th>
													                </tr>
											                  </thead>											                 
											                  <tbody>
												                  <tr>               
													                  <td class="center"> <%= @leave_policy.pl_this_year %>  </td>
													                  <td> <%= @leave_policy.eligible_carry_forward_leaves %></td>
												                  </tr>
											                  </tbody>
									                  </table>
									                  <% else %>
										                <div class="alert alert-success alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                         Add Leave Policy to this group
                                   </div>                                                                                   
                                </div>                                
                                <!-- /.col-lg-6 (nested) -->
                                <% end %>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                  </div>
                        <!-- /.col-lg-12 -->
               </div><!-- /.row -->
<% end %>

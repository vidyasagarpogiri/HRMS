 <% unless @leave_policy.nil? %>
 
 <div class="wrapper">
		<div class="container">
			<div class="row">
        <div class="span12">
					<div class="content">
						<div class="module">
							
							
							
							<div class="module-head">
                 <h3>  Leave Policies<h3>
               </div>             
                        
      <% unless @leave_policy.nil? %>
           <div class="module-body">
                <table class="table table-striped table-hover" id="sample-table-2"> 
                  <thead>											      
	                  <tr>
		                  <th class="center">Personal leaves Per Month </th>
		                  <th>Carry forward Leaves For Year</th>
		                  <th>Maximum Carry forward Leaves</th>
		                </tr>
                  </thead>											                 
                  <tbody>
	                  <tr>               
		                  <td class="center"> <%= @leave_policy.pl_this_year %>  </td>
		                  <td> <%= @leave_policy.eligible_carry_forward_leaves %></td>
		                  <td><%= @leave_policy.max_carry_forward_leaves %></td>
	                  </tr>
                  </tbody>
              </table>
              <% else %>
              <div class="alert alert-success alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                   Add Leave Policy to this group
               </div>                                                                                   
          </div>                                
                                
      <% end %>
                                
           </div><!--/.module -->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
                        
<% end %>

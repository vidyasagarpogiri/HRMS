<!-- /navbar -->
<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">   
              <h3> Pay Roll Master </h3> 
              <label style="font-weight:normal;margin-top:5px;margin-right:10px;" class = "pull-right"><a><i class="icon-cog"></i></a><%= link_to ' Configure Salary',new_static_salary_path, :remote => true %></label><br>
            </div>  
              <div id="salary_divisions">
                <%= render "static_salaries/index" %>
              </div>                             
              <div id="form_salary">
              </div>
            </div>
            <div class="module">       
              <div class="module-head">
                <h3>Allowances List</h3>
                <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to "New Allowance",  new_static_allowance_path %></label>                                
              </div>
              <div class="module-body">
              <% if @allowances.present? %>
                <table class="table table-striped table-bordered table-condensed">
                  <thead>											      
                    <tr>
                      <th>Allowance</th>
                      <th>Percentage </th>	
                      <th>Value</th>
                      <th>Deductable/Non Deductable</th>									      		
                    </tr>
                  </thead>
                <% @allowances.each do |allowance| %>
                <tbody>
                <tr>               
                  <td><%= allowance.name %></td>
                  <% if allowance.percentage.present? %>
                  <td><%= allowance.percentage %>&#37</td>
                  <td>---</td>
                  <% else %>
                  <td>---</td>
                  <td><%= allowance.value %></td>
                  <% end %>
                  <% if allowance.is_deductable == true %>
                    <td> Deductable</td>
                   <%else%> 
                      <td>Non Deductable</td>
                   <%end%>
                  
                  <% if current_user.department == Department::HR %>
                  <td>
                    <ul class="navigation-btns  pull-left" >
                      <li> <%= link_to 'Edit',  edit_static_allowance_path(allowance.id), :class => "btn btn-success" %></li>
                      <li> <%= link_to 'Delete', static_allowance_path(allowance.id), method: :delete ,data: {confirm: "Are You sure?"}, :class => "btn btn-danger" %></li>
                    </ul>
                  </td>
                </tr>
              <% end %>
              </tbody>
              <% end %>
              </table> 
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

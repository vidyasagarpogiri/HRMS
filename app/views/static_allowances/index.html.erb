<!-- /navbar -->
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Pay Roll Master
        <span class="pull-right">
          <%= link_to ' Configure Salary',new_static_salary_path, :remote => true, :class =>" btn btn-success btn-xs" %>
        </span>
      </header>
      <div class="panel-body">
        <div id="salary_divisions">
          <%= render "static_salaries/index" %>
        </div>                             
        <div id="form_salary">
        </div>
      </div>
   </section>

  <section class="panel">
    <header class="panel-heading">
      Allowances List
      <span class="pull-right">
        <%= link_to "New Allowance",  new_static_allowance_path, :class =>" btn btn-success btn-xs"  %>
      </span>
    </header>
    <div class="panel-body">
      <% if @allowances.present? %>
        <table class="table table-striped table-bordered table-condensed">
          <thead>											      
            <tr>
              <th>Allowance</th>
              <th>Percentage </th>	
              <th>Value</th>
              <th>Deductable/Non Deductable</th>	
              <th>Actions</th>								      		
            </tr>
          </thead>
          <% @allowances.each do |allowance| %>
            <tbody>
              <tr>               
                <td><%= allowance.name %></td>
                <% if allowance.percentage.present? %>
                  <td><%= allowance.percentage %>&#37</td>
                  <td>---</td>
                <% else %>
                  <td>---</td>
                  <td><%= allowance.value %></td>
                <% end %>
                <% if allowance.is_deductable == true %>
                  <td> Deductable</td>
                <%else%> 
                  <td>Non Deductable</td>
                <%end%>
                <td>
                <% if current_user.department == Department::HR %>
                  
                    <%= link_to 'Edit',  edit_static_allowance_path(allowance.id), :class => "btn btn-success" %>
                    <%= link_to 'Delete', static_allowance_path(allowance.id), method: :delete ,data: {confirm: "Are You sure?"}, :class => "btn btn-danger" %>
                <% end %>
                </td>
                </tr>
              
            </tbody>
          <% end %>
        </table> 
       <% end %>
      </div>
    </section>                         
  </div>
</div>



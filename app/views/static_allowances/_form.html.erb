<div class="row">                
  <div class="col-lg-12">
    <section class="panel panel-info">
      <header class="panel-heading">
        Allowance Form
      </header>
      
      <div class="panel-body">
        <%= form_for @allowance,:data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"} do |f| %>
          <div class="form-group">
					  <label class="control-label col-lg-2" for="basicinput">Allowance Name</label>
					  <div class="col-lg-8">
						   <%= f.text_field :name, :class => "form-control", :placeholder=> "Enter Allowance", :data => {:error => "Please Enter Valid Allowance Name"}, :required =>true, :pattern => '[a-zA-Z/- /s ]*' %>
               <div class="help-block with-errors"></div>  
					  </div>
				  </div>
				  
				  <div class="form-group">
					  <label class="control-label col-lg-2" for="basicinput" data-error ="Please Enter Select value" required>Allowance Value Type</label>
					  <div class="col-lg-8 allowance_select">
						   <select name="allowance_type">
						      <option value="1">Percentage</option>
						      <option value="2">value</option>
						   </select>
               <div class="help-block with-errors"></div>  
					  </div>
				  </div> 
				   
				  <div class="form-group">
					  <label class="control-label col-lg-2" for="basicinput">Value</label>
					  <div class="col-lg-8">
				      <input type="text" class="form-control" placeholder= "Enter Value" name="value" id="valueofallowance" data-error ="Please Enter Valid Allowance Value" required pattern="[0-9/.]*" %>
              <div class="help-block with-errors"></div>  
					  </div>
				  </div>
				
				  <div class="form-group">
				    <div class="col-lg-offset-2 col-lg-10">
				      <%= f.check_box :is_deductable %> Please Check in If Deductable  
				    </div>
				  </div>
													
			    <div class="form-group">
				    <div class="col-lg-offset-2 col-lg-10">
				      <button type="submit" class="btn btn-success">Save</button>
				      <%= link_to 'Cancel', static_allowances_path, :class=>"btn btn-danger" %>
				    </div>
				  </div>
        <% end %>                         
          </div>
          </section>
        </div>
      </div>

          
         <script>
          $(function(){
            <% unless @allowance.new_record? %>
              <% if @allowance.percentage.present? %>
                $("#valueofallowance").val('<%=  @allowance.percentage %>');
                $(".allowance_select select").val("1");
              <% else %>
                $("#valueofallowance").val('<%=  @allowance.value %>');
                $(".allowance_select select").val("2");
              <% end %>
            <% end %>
          });
         </script>
         
         <script>
          $(".new_allowance_form").validator();
        </script>   
          
          
      

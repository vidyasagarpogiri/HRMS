<div class="wrapper">
 <div class="container">
   <div class="row">                
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3> Allowance Form </h3>
            </div>
            <div class="module-body">     
              <%= form_for @allowance,:data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"} do |f| %>
                <div class="control-group">
									<label class="control-label" for="basicinput">Allowance Name</label>
									<div class="controls">
										 <%= f.text_field :name, :class => "span8 form-control", :placeholder=> "Enter Allowance", :data => {:error => "Please Enter Valid Allowance Name"}, :required =>true, :pattern => '[a-zA-Z/- /s ]*' %>
                     <div class="help-block with-errors"></div>  
									</div>
								</div>
								<div class="control-group">
									<label class="control-label" for="basicinput" data-error ="Please Enter Select value" required>Allowance Value Type</label>
									<div class="controls">
										 <select name="allowance_type">
										    <option value="1">Percentage</option>
										    <option value="2">value</option>
										 </select>
                     <div class="help-block with-errors"></div>  
									</div>
								</div> 
								 
								<div class="control-group">
									<label class="control-label" for="basicinput">Value</label>
									<div class="controls">
								    <input type="text" class="span8 form-control" placeholder= "Enter Value" name="value" id="valueofallowance" data-error ="Please Enter Valid Allowance Value" required pattern="[0-9/.]*" %>
                    <div class="help-block with-errors"></div>  
									</div>
								</div>
								
								<div class="control-group">
								  <div class="controls">
								    <%= f.check_box :is_deductable %> Please Check in If Detactable  
								  </div>
								</div><br>
																	
								 <ul class="navigation-btns pull-left" >
								   <li><button type="submit" class="btn btn-success">Save</button></li>
								   <li><%= link_to 'Cancel', static_allowances_path, :class=>"btn btn-danger" %></li>
								 </ul><br><br>
            <% end %>                         
           </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

          
         <script>
          $(function(){
            <% unless @allowance.new_record? %>
              <% if @allowance.percentage.present? %>
                $("#valueofallowance").val('<%=  @allowance.percentage %>');
              <% else %>
                $("#valueofallowance").val('<%=  @allowance.value %>');
              <% end %>
            <% end %>
          });
         </script>
         
         <script>
          $(".new_allowance_form").validator();
        </script>   
          
          
      

      <div class="wrapper">
		         <div class="container">
			         <div class="row">                                             
                 <div class="span12">
                    <div class="content">
                        <div class="module">
                            <div class="module-head">
                            <h3> <%= @designation.designation_name %> Designation</h3>
                            <div>
                          <div class="module-head">
                          List Of Employees
                          <label style="font-weight:normal;" class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "Add New Employee ", add_employee_designation_path(@designation) %></label>                                                         
                       <div>
                       
                       <div class="module-body">
                          <%= form_for(@designation) do |designation| %> 
                                  <table class="table table-striped table-hover" id="sample-table-2">
											          <thead>
												          <tr>
													          <th class="center">Employee Name</th>
													          <th> Email  </th>
													           <th> Grade  </th>
													           
												          </tr>
											          </thead>
											          <% @employees.each do |employee| %>
											          <tbody>
												          <tr>
													          <th class="center"><%= link_to employee.first_name, employee_path(employee) %></th>	
													          <th class="center"><%= employee.user.email %></th>
													          <th class="center"><%= employee.grade.value %></th	
												          </tr>
											          </tbody>
									          <% end %>

										          </table>                       
                             
                                    <% end %>
                        </div><!--module body-->
                                
                         <div class="module-head">    
                          List Of Grades 
                         
                           <label style="font-weight:normal;" class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "Add New Grade",new_grade_path %></label>
                                                                      
                       </div>
                         <div class="module-body">
                                  <table class="table table-striped table-hover" id="sample-table-2">
											          <thead>
												          <tr>
													          <th class="center">Grade</th>
													          <th>No.of.Employees</th>
												          </tr>
											          </thead>
											          <% @grades.each do |grade| %>
											          <tbody>
												          <tr>
													          <th class="center"><%= link_to grade.value, grade_path(grade) %></th>
													          <th><%= grade.employees.count %>
												          </tr>
											          </tbody>
									          <% end %>

										          </table>                       
                             
                       </div><!--module body-->
           </div><!--/.module -->
			    </div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper--> 
                       

<script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>




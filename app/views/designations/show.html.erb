<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
              <h3> <%= @designation.designation_name %> Designation</h3>
            </div>
                 <div class="module-body">         
                    
                                
                        
                          List Of Grades 
                         
                           <label style="font-weight:normal;" class = "pull-right"><a><i class="icon-plus-sign "></i></a>&nbsp<%= link_to "Add Grade",new_grade_path %></label>
                                                                      
                     
                        
                            <table class="table table-striped table-bordered table-condensed">
									            <thead>
										            <tr>
											            <th class="center">Grade</th>
											            <th>No.of.Employees</th>
										            </tr>
									            </thead>
									            <% @grades.each do |grade| %>
									            <tbody>
										            <tr>
											            <th class="center"><%= link_to grade.value, grade_path(grade) %></th>
											            <th><%= grade.employees.count %>
										            </tr>
									            </tbody>
							            <% end %>

								            </table>                                                  
                       </div><!--module body-->
           </div><!--/.module -->
			    </div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper--> 
                       




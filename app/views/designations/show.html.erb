<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
              <h3> List of Grades in <%= @designation.designation_name %></h3>
              <label style="font-weight:normal;margin-top:-20px" class = "pull-right" ><a><i class="icon-plus-sign "></i></a><%= link_to " Add Grade",new_grade_path %> </label>             
            </div>
            <div class="module-body">                                                                                 
                            
                                                                                                        
              <table class="table table-striped table-bordered table-condensed">
		            <thead>
			            <tr>
				            <th class="center">Grade</th>
				            <th>No.of.Employees</th>
			            </tr>
		            </thead>
		            <% @grades.each do |grade| %>
		            <tbody>
			            <tr>
				            <th class="center"><%= grade.value %></th>
				            <th><%= grade.employees.count %>
			            </tr>
		            </tbody>
                <% end %>
	            </table>                                                  
            </div><!--module body-->
          </div><!--/.module -->
        </div><!--/.content-->
      </div><!--/.span12-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper--> 
                     




                
<div class="wrapper">
 <div class="container">
	<div class="row">

  <div class="span12">
		<div class="content">

			<div class="module">
				<div class="module-head">
					<h3>Add New Designation</h3>
						</div>
							<div class="module-body">
							
							<%= form_for @designation, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal row-fluid"} do |des| %>
							
					
			         <div class="control-group">
                  <label class="control-label" for="basicinput">Department Name</label>
                      <div class="controls">
                     <%= des.collection_select :department_id, Department.all, :id, :department_name, { :prompt => "Please Select" }, { :class => "departments, span8 form-control", :id => "disabledSelect1" } %>
                       <span class="help-block with-errors"></span>
                      </div>
								</div>
               
               <div class="control-group">
               <label class="control-label" for="basicinput">Name Of Designation</label>
                <div class="controls">
                <%= des.text_field :designation_name, :class => "span8 form-control", :placeholder =>"Enter Designation Name", :data => {:error => "Please Enter  Designation name"}, :required =>true, :pattern => '[a-zA-Z/s ]*'%>
								<span class="help-block with-errors"></span>
								 </div>
								</div>
								  <%= des.submit  'Save', :class => "btn btn-success pull-left" %>
                 <%= link_to 'Cancel', designations_path, :class=>"btn btn-danger btn btn-success pull-left" %>
							
												 
										<% end %>
							</div><!--/.module-body-->
						</div><!--/.module-->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
 

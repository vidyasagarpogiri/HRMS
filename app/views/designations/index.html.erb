<div class="wrapper">
    <div class="container">
        <div class="row">                
            <div class="span12">
                <div class="content">         
						<div class="module">
							<div class="module-head">
								<h3>Designation Info</h3>
								<label style="font-weight:normal;margin-top:-50px;" class = "pull-right"><a><i class="fa fa-plus "></i></a> <%= link_to "Add New Designation",  new_designation_path %></label>
							</div>
							<div class="module-body">
								<table class="table table-striped table-bordered table-condensed">
								  <thead>
									<tr>
									  <tr>
				               <th>Name Of Designation</th>
						         
									</tr>
								  </thead>
								    <% @designations.each do |designation| %>
								  <tbody>
									<tr>
									<td><%= link_to designation.designation_name, designation_path(designation)%></td>
		              

                   <% if current_user.department == Department::HR %>
	                  <td> 
	                    <ul class="navigation-btns" style="list-style: none;display:inline;">
                        <li><%= link_to 'Edit', edit_designation_path(designation.id), :class => "btn btn-success pull-left" %></li>                        
                        <li><%= link_to "Delete", designation_path(designation.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger pull-left" %></li>                                         
                      </ul>
                     </td>
                   <% end %>
									</tr>
								  </tbody>
								  <% end %>
								</table>
							</div><!--.module-body-->
						</div><!--/.module -->
			    </div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->

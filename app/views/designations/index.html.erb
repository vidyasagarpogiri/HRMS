<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Designation Info </h2>
                     <label style="font-weight:normal;margin-top:-50px;" class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "New Designation", new_designation_path %></label>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">                         
                        <div class="panel-body">                           
                          <table class="table table-striped table-hover" id="sample-table-2">
                             <% @designations.each do |designation| %>
											       <thead>											      
												        <tr>
													         <th><%= link_to designation.designation_name, designation_path(designation)%></th>	
													         <th>
													            <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                        <li><%= link_to "Edit",edit_designation_path(designation.id),:class => "btn btn-success " %></li>
                                        <li><%= link_to "Delete",designation_path(designation.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                                      </ul>
                                   </th>							      		
												        </tr>
											        </thead>
                              <% end %>   
									         </table>
									         <div class="pagination ">
                            <%= paginate @designations %>                       
                        </div> 
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>                                
            <!-- /.page-wrapper -->
         <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>


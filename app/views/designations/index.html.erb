<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Designation List </h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                          <label style="font-weight:normal;padding:20px;" class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "New Designation", new_designation_path %></label>
  <div class="panel-body">
                            <div class="row">

                        <div class="col-lg-12">
                          <table class="table table-striped table-hover" id="sample-table-2">
                              <% @designations.each do |designation| %>
											            <thead>											      
												            <tr>
													            <th class="center"><%= designation.designation_name %></th>	
													            <th class="center">
													            <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                          <li><%= link_to "Edit",edit_designation_path(designation.id),:class => "btn btn-success " %></li>
                                          <li><%= link_to "Show",designation_path(designation.id),:class => "btn btn-info "%></li>
                                          <li><%= link_to "Delete",designation_path(designation.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                                        </ul>
                                       </th>							      		
												            </tr>
											            </thead>
                                     <% end %>   
									            </table> 
   <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>                                

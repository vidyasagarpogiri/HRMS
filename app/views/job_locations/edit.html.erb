<div class="panel panel-info">
  <div class="panel-heading"> 
    Address Details
  </div>        
  <div class="panel-body">
    <%= form_tag job_location_path, :method => :patch, :data => {:toggle => "validator"} do   %>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 control-label">Address Line 1</label>
            <div class="col-lg-10">
                <%= text_field_tag :line, @address.line, :class => "span8 form-control", :placeholder=> "Enter Address Line 1",:data => {:error => "Please Enter valid Address Line 1"}, :required => true %>
          <span class="help-block with-errors"></span>
                
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label">Address Line 2</label>
            <div class="col-lg-10">
              <%= text_field_tag :line1,  @address.line1, :class => "span8 form-control", :placeholder=> "Enter Address Line 2",:data => {:error => "Please Enter valid Address Line 1"}, :required => true%>  
         <span class="help-block with-errors"></span>
            </div>
        </div>
        
         <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label">City</label>
            <div class="col-lg-10">
             <%= text_field_tag :city,  @address.city,  :class => "span8 form-control", :placeholder=> "Enter City",:data => {:error => "Please Enter valid City"}, :required =>true, :pattern => '[a-zA-Z/s ]*' %> 
         <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label">State</label>
            <div class="col-lg-10">
             <%= text_field_tag :state,  @address.state,  :class => "span8 form-control", :placeholder=> "Enter sate",:data => {:error => "Please Enter valid City"}, :required =>true, :pattern => '[a-zA-Z/s ]*' %> 
         <span class="help-block with-errors"></span>
            </div>
        </div>
         <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 control-label">Country</label>
            <div class="col-lg-10">
                    <%= text_field_tag :country,  @address.country,  :class => "span8 form-control", :placeholder=> "Enter Country",:data => {:error => "Please Enter valid Country"}, :required =>true, :pattern => '[a-zA-Z/s ]*' %>
        <span class="help-block with-errors"></span>
                
            </div>
        </div>
        
        
        <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 control-label">ZipCode</label>
            <div class="col-lg-10">
                  <%= text_field_tag :zipcode,  @address.zipcode, :class => "span8 form-control",  :placeholder=> "Enter ZipCode",:data => {:error => "Please Enter valid ZipCode "}, :pattern => '[0-9]{6}', :required =>true %> 
        <span class="help-block with-errors"></span>
                
            </div>
        </div>   
        <div class="panel-body">              
          <%= submit_tag "Save", :class => "btn btn-success" %>&nbsp&nbsp
         <%= link_to 'Cancel', job_locations_path(@job_locations), :class => "btn btn-danger" %>             
        </div>
    </form>      
    <% end %>
  </div>
</div>




			<script>
			  $(function(){
          $(".address-edit-form").validator();
         });  
			</script>


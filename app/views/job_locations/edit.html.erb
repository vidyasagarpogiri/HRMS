<div class="wrapper">
  <div class="container">
    <div class="row">                                             
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3>Address Details</h3>
            </div>						    
            <div class="module-body"> 
              <%= form_tag job_location_path, :method => :patch, :data => {:toggle => "validator"} do   %>
              <div class="control-group">
                <label class="control-label" for="basicinput">Address Line 1</label>
                <div class="controls">                 
                  <%= text_field_tag :line, @address.line, :class => "span8 form-control", :placeholder=> "Enter Address Line 1",:data => {:error => "Please Enter valid Address Line 1"}, :required => true %>
                  <span class="help-block with-errors"></span>
                </div>
              </div>	
					      					    
              <div class="control-group">
                <label class="control-label" for="basicinput">Address Line 2</label>
                <div class="controls">
                  <%= text_field_tag :line1,  @address.line1, :class => "span8 form-control", :placeholder=> "Enter Address Line 1",:data => {:error => "Please Enter valid Address Line 1"}, :required => true%>  
                  <span class="help-block with-errors"></span>
               </div>
             </div> 
				
				     <div class="control-group">
               <label class="control-label" for="basicinput">City</label>
               <div class="controls">
                 <%= text_field_tag :city,  @address.city,  :class => "span8 form-control", :placeholder=> "Enter City",:data => {:error => "Please Enter valid City"}, :required =>true, :pattern => '[a-zA-Z/s ]*' %> 
                 <span class="help-block with-errors"></span>
              </div>
				    </div>
				
			      <div class="control-group">
              <label class="control-label" for="basicinput">State</label>
                <div class="controls">
                  <%= text_field_tag :state,  @address.state, :class => "span8 form-control", :placeholder=> "Enter State",:data => {:error => "Please Enter valid State"}, :required =>true, :pattern => '[a-zA-Z/s ]*' %>   
                   <span class="help-block with-errors"></span>
                </div>
			      </div>
			
			      <div class="control-group">
              <label class="control-label" for="basicinput">Country</label>
                <div class="controls">
                  <%= text_field_tag :country,  @address.country,  :class => "span8 form-control", :placeholder=> "Enter Country",:data => {:error => "Please Enter valid Country"}, :required =>true, :pattern => '[a-zA-Z/s ]*' %> 
                   <span class="help-block with-errors"></span>
                </div>
			      </div> 
			
			      <div class="control-group">
              <label class="control-label" for="basicinput">ZipCode</label>
                <div class="controls">
                  <%= text_field_tag :zipcode,  @address.zipcode, :class => "span8 form-control",  :placeholder=> "Enter ZipCode",:data => {:error => "Please Enter valid ZipCode "}, :pattern => '[0-9]{6}', :required =>true %> 
                   <span class="help-block with-errors"></span>
                </div>
			      </div> 													                                                                               
            <%= submit_tag "Update", :class => "btn btn-success" %>
            <%= link_to 'Cancel', job_locations_path(@job_locations), :class => "btn btn-danger" %>
            <% end %>							                   
				    </div><!--/.module-body-->
			    </div><!--/.module-->
        </div>
      </div>
    </div>
  </div>
</div>



			<script>
			  $(function(){
          $(".address-edit-form").validator();
         });  
			</script>


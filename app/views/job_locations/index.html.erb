<div class="wrapper">
  <div class="container">
    <div class="row">                                             
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3>All Job Locations</h3>
              <% if current_user.department == Department::HR %>
              <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a><%= link_to " Job Location",new_job_location_path%></label>
              <% end %>
            </div>                                         
            <div class="module-body">                     
              <table class="table table-striped table-bordered table-condensed" id="sample-table-2">     
                <thead>											      
                  <tr>
                    <th>City</th>
                    <th> Number of Employees</th>															            									      		
                  </tr>
                  </thead>
                <% @job_locations.each do |job| %>
                <tbody>
                  <tr>               
                    <td class="center"><%=link_to job.address.city, job_location_path(job) if job.address.present? %></td>
                    <td><%= job.employees.count %></td>
                    <% if current_user.department == Department::HR %>
                    <td> 
                      <ul class="navigation-btns pull-right" >
                        <li><%= link_to 'Edit', edit_job_location_path(job.id), :class => "btn btn-success " %></li>
                        <li><%= link_to "Delete",job_location_path(job.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                      </ul>
                    </td>
                  <% end %>
                  </tr>
                </tbody>
                <% end %>
              </table>                                           
            </div><!--module-body -->    																																											                               
          </div><!-- /.module-->									      				                                      
        </div><!--/.content-->                    
      </div><!--/.span12-->                
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->


                       
                       
               

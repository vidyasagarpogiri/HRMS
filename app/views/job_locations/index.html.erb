<section class="panel panel-info">
  <div class="panel-heading">
    All Job Locations
    <% if current_user.department == Department::HR %> <i class="fa fa-plus pull-right icon-position"></i><%= link_to " Add Job Location",new_job_location_path, :class=>"pull-right" %><% end %>
  </div>
  <div class="panel-body">   
    <% if @job_locations.present? %>                                           
    <table class="table table-bordered">     
      <thead>											      
        <tr>
          <th>City</th>
          <th> Number of Employees</th>	
          <th>Actions</th>														            									      		
        </tr>
        </thead>
      <% @job_locations.each do |job| %>
      <tbody>
        <tr>               
          <td class="center"><%=link_to job.address.city, job_location_path(job) if job.address.present? %></td>
          <td><%= job.employees.count %></td>
          <% if current_user.department == Department::HR %>
          <td> 
         <%= link_to 'Edit', edit_job_location_path(job.id), :class => "btn btn-success btn-sm" %>
         <%= link_to "Delete",job_location_path(job.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger btn-sm" %>
          </td>
        <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>    
    <% else %>                                      
      <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          No Job Locations to display.
      </div> 
    <% end %>
  </div>
</section><!--module-body --> 

<% title "Job Locations" %>  																																											                               



                       
                       
               

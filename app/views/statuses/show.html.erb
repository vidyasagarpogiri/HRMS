<div class="wrapper">
	<div class="container">
		<div class="row">     			
			<div class="span12">	
			  <div class="module">
          <div class="module-head">
			      <h3>Status Details
			          <div class="pull-right" ><a href="/statuses" style="color:#5ecad4 pull-right"><i class="icon-circle-arrow-left"> Back to Employee Wall</i></a></div>  
			      </h3>	
			      </div>
			        <div class="module-body">
			        <div class="row-fluid">
			         <div class="span1">
                <% if @status.employee.avatar_url.present? %>
                  <%= link_to image_tag(@status.employee.avatar_url,size: "60x20") %>
                <% else %>
                  <% if @status.employee.gender == "Female" %>
                    <%= image_tag("1.jpg", :style => "width:60px;height:60px;") %> 
                      <% else %>
                        <%= image_tag "user.png", :width => "60px", :height => "60px" %> 
                       <% end %>
                  <% end %>
               </div>   
                              
					<!--/.module-body-->
				   <div class="span10">
              <h4>
                <%= @status.employee.full_name %>
              </h4>
                <%= @status.status %>
              <hr>
           </div>
                    
              
           <div class="span10">      
					    <h5>Comments (<%= @status.comments.count %>)  , 
					    <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Likes List</button>
					    <%= 'Likes' %>
					    (<%= @status.likes_count %>), <%#raise @status.likes.second.employee.inspect %>   
                <% if @status.likes.where(:employee_id => current_user.employee.id, :is_like => true).first %>  
                  <%= link_to 'UnLike', remove_like_status_path(@status.id, :employee_id => current_user.employee), :method => "post" %> </span>  </h5>
                <% else %> 
                  <%= link_to 'Like', add_like_status_path(@status.id, :employee_id => current_user.employee), :method => "post" %></span> 
                  , <%= time_ago_in_words(@status.created_at)%> ago </h5>
                <% end %>
            </div>
           </div><hr>
           
					 <h5>
					  <% @comments.each do |com| %>
					 </h5> 
					 
					 <p>
					  <%= link_to image_tag(com.employee.avatar_url,size: "20x20") %> <b> <%= com.employee.full_name %> </b><%=com.comment %> 
					 </p>
					 
					 <p>
					    <%= time_ago_in_words(com.created_at)%> ago 
           </p> 
            
           <% end %>
           <%= render "comments/form", :status => @status%>
					
				  </div><!--/.module-->
			  </div>	<!--/.span8-->	
			  			
			
             <div class="module">	    				    
  		      </div><!--/.module-->
	    		
        </div><!--/.row-->		
      </div><!--/.container-->	
  </div><!--/.Wrapper-->	

<!-- Small modal -->
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" style="height: 180px; width: 200px;">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    <h4 class="modal-title" id="myModalLabel">Likes List</h4>
      <% @employees.each do |emp| %> 
					 <%= emp.first_name %> <br>
					  <% end %>
					  <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button> 
      </div>
    </div>
  </div>
</div>




<div class="wrapper">
	<div class="container">
		<div class="row">     			
			<div class="span12">	
			  <div class="module">
          <div class="module-head">
			      <h3>Status Details</h3>	
			      </div>
			      <div class="pull-right" ><a href="/statuses" style="color:#5ecad4 pull-right"><i class="icon-circle-arrow-left"> Back to Employee Wall</i></a></div>  
			        <div class="module-body">	       
            <h4><%= @status.status %></h4>                   
					</div><!--/.module-body-->
				
					<h5><%= @status.comments.count %> Comments , 
					<%=link_to @status.likes_count %> Likes <%#raise @status.likes.second.employee.inspect %>   
            <% if @status.likes.where(:employee_id => current_user.employee.id).first %>  
          <%= link_to 'You Liked', remove_like_status_path(@status.id, :employee_id => current_user.employee), :method => "post" %> </span> </h5>
            <% else %> 
          <%= link_to 'Like', add_like_status_path(@status.id, :employee_id => current_user.employee), :method => "post" %></span> </h5>
           <% end %>
           
					 <h5><% @comments.each do |com| %></h5> 
					 <p><%= link_to image_tag(com.employee.avatar_url,size: "20x20") %> <b> <%= com.employee.full_name %> </b><%= time_ago_in_words(com.created_at)%> ago </p>
           <p><%=com.comment %> </p>  
           <% end %>
           
					<%= render "comments/form", :status => @status%>
					
				</div><!--/.module-->
			</div>	<!--/.span8-->				
			
        <div class="module">	
                                                     
          
           	
           <%#paginate  @policies %> 					
         
  		   </div><!--/.module-->
	    		
     </div><!--/.row-->		
  </div><!--/.container-->	
</div><!--/.Wrapper-->	


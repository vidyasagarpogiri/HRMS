  <%= form_tag add_comments_statuses_path, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal row-fluid shift_from"}, method: :post do %>
  
  
    <div class="control-group">
      
        <div class="controls">
        <%= text_area_tag  'comment', " ", :style => "width: 650px;",:placeholder =>"Comment",:data => {:error => "Please Enter Comment"}, required: true %>
        <span class="help-block with-errors"></span>
      </div>
    </div>
     <input type="hidden" value="<%= status %>" name="status_id">
     <ul class="navigation-btns " style="margin: 10px 0 10px 550px;">
       <li><button type="submit" class="btn btn-success"> Comment </button></li>
    									
     </ul>
  <% end %>
  
  

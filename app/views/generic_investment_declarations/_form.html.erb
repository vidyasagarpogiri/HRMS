<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
		    <div class="content">
			    <div class="module">
				    <div class="module-head">
					    <h3>Add Investment Declaration</h3>
				    </div>
						<div class="module-body">						
						<%= form_for @generic_investment, :html => {:class=>"form-horizontal row-fluid new_event_form"} do |generic| %>
						<div>
				    <% @generic_investment.errors.full_messages.each do |msg| %>
              <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= msg %>
            <%end%>          
						</div>
						
						<div class="control-group">   
						 <label class="control-label" for="basicinput">Section Name</label>
               <div class="controls">
                  <%= generic.text_field :section, :class => "span8 form-control", :placeholder =>"Enter Section  Name", :data => {:error => "Section Should not be Empty"}, :required =>true %>
                <span class="help-block with-errors"></span>
					    </div>
						</div>
							      
						<div class="control-group">   
						 <label class="control-label" for="basicinput"> Title </label>
               <div class="controls">
                  <%= generic.text_field :title, :class => "span8 form-control", :placeholder =>"Enter Title", :data => {:error => "Title Should not be Empty"}, :required =>true,:pattern => '[a-zA-Z/s ]*' %>
                <span class="help-block with-errors"></span>
					    </div>
						</div>  
						<div class="control-group">   
						 <label class="control-label" for="basicinput"> Maximum Limit</label>
               <div class="controls">
                  <%= generic.text_field :maximum_limit, :class => "span8 form-control", :placeholder =>"Enter Maximum limit value", :data => {:error => "maxlimit Should not be Empty"}, :required =>true,:pattern => '[0-9]*\.?[0-9]*' %>
                 <span class="help-block with-errors"></span>
					     </div>
						</div>
						<div class="control-group">   
						 <label class="control-label" for="basicinput"> Description </label>
               <div class="controls">
                  <%= generic.text_area :description, :class => "span8 form-control", :placeholder =>"Enter description", :data => {:error => "Description Should not be Empty"}, :required =>true %>
                <span class="help-block with-errors"></span>
					     </div>
						</div>							  								          		
					   <ul class="navigation-btns pull-left" >
					    <li><button type="submit" class="btn btn-success">Save</button></li>
					    <li><%= link_to "Cancel", generic_investment_declarations_path,:class => "btn btn-danger" %></li>
					  </ul>	
						<% end %>
						</div><!--/.module-body-->
					</div><!--/.module-->
				</div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->
	
        <script>
          $(".new_event_form").validator();
        </script>   
            
     

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">							
              <h3>Generic Investment Declaration Info</h3> 
              <% if current_user.department == Department::HR %>                                
              <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to ' Add Investment Declaration', new_generic_investment_declaration_path %></label>
              <% end %>
            </div><!--/.module-head -->
            <div class="module-body">
            <% if @generic_investments.present? %>
            <table class="table table-striped table-bordered table-condensed" >
              <thead>											      
                <tr>
                  <th class="center">Section</th>
                  <th>Title </th>	
                  <th>Maximum Limit </th>
                  <th>Description</th>														            									      		
                </tr>
              </thead>
              <%  @generic_investments.each do |generic| %>
              <tbody>
                <tr>               
                  <td class="center"><%= generic.section %></td>
                  <td> <%= generic.title %> </td>
                  <td> <%= generic.maximum_limit %> </td>
                  <td> <%= generic.description %> </td>
                  <% if current_user.department == Department::HR %>
                  <td> 
                    <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                      <li><%= link_to 'Edit',  edit_generic_investment_declaration_path(generic.id), :class => "btn btn-success " %></li>
                      <!-- <li><%#= link_to "Delete", generic_investment_declaration_path(generic), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li> -->
                    </ul>
                  </td>
                <% end %>
                </tr>
              </tbody>
              <% end %>
            </table> 					                                                      
            <% else %>                      
              <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                You have No Generic Investment Declaration Details to display.
              </div><br>
            <% end %>
            </div><!--/.module-body --> 
          </div><!--/.module -->   
        </div><!--/.content-->
      </div><!--/.span12-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->         




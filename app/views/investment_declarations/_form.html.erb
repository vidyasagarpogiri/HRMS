<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
	      <div class="content">
		      <div class="module">
			      <div class="module-head">
				      <h3>Edit Investment Declaration</h3>
			      </div>
			      <div class="module-body">			
			      <%= form_for @declaration, :html => {:class=>"form-horizontal row-fluid edit_form"} do |d| %>
			      <div>
			           <% @declaration.errors.full_messages.each do |msg| %>
                <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= msg %>
                <%end%>          
		      </div>
			      <div class="control-group">   
			       <label class="control-label" for="basicinput">Monthly Value</label>
                 <div class="controls">
                    <%= d.text_field :monthly_value, :class => "span8 form-control", :placeholder =>"Enter Value", :data => {:error => "Please Enter Value"}, :required =>true,:pattern => '[0-9]*\.?[0-9]*'  %>
                  <span class="help-block with-errors"></span>
			            </div>
			      </div>
			      <div class="control-group">   
			       <label class="control-label" for="basicinput">Yearly Value</label>
                 <div class="controls">
                    <%= d.text_field :yearly_value, :class => "span8 form-control", :placeholder =>"Enter Value", :data => {:error => "Please Enter Value"}, :required =>true,:pattern => '[0-9]*\.?[0-9]*'  %>
                  <span class="help-block with-errors"></span>
			            </div>
			      </div>							            									
								 <ul class="navigation-btns pull-left" >
								  <li><button type="submit" class="btn btn-success">Save</button></li>
								  <li><%= link_to "Cancel", investment_declarations_path,:class => "btn btn-danger" %></li>
								</ul>	
							<% end %>
						</div><!--/.module-body-->
					</div><!--/.module-->
				</div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->
	
    <script>
          $(".edit_form").validator();
        </script>   
               
     

<div class="wrapper">
 <div class="container">
	<div class="row">
  <div class="span12">
		<div class="content">


  <div class="module">
    <div class="module-head">							
      <h3> Investment Declaration Form</h3>                  
     </div>
    <div class="module-body">					                                        
      <table class="table table-striped table-bordered table-condensed" >
        <thead>											      
          <tr>
            <th class="center">Section</th>
            <th>Title </th>	
            <th>Maximum Limit </th>
            <th>Description</th>
            <th>Yealy Value</th>	
            <th>Actions</th>													            									      		
          </tr>
        </thead>
       <% @declarations.each do |dec| %>
        <tbody>
          <tr>               
            <td class="center"><%= dec.general_investment.section_declaration.section if dec.general_investment.section_declaration.present? %></td>
            <td><%= dec.general_investment.title if dec.general_investment.section_declaration.present?%></td>
            <td><%= dec.general_investment.section_declaration.maximum_limit  if dec.general_investment.section_declaration.present? %></td>
            <td><%= dec.general_investment.description if dec.general_investment.section_declaration.present?%></td>
            <td><%= dec.yearly_value if dec.general_investment.section_declaration.present?%></td>
            <td>
          
           <%= link_to 'Edit', "#editInvestmentForm",  :class => "btn btn-success dec ",   :url => edit_investment_declaration_path(dec), :iid => dec.id, "data-toggle" => "modal", :id => "dec_#{dec.id}"   %>
          
		   
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>                                                                                                                    
  </div><!--module-->
  
  
      				</div><!--content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->          


   <script type="text/javascript">
     $(function(){
       $('.dec').click(function() {
          var url = $(this).attr("url");
          $.ajax({
            type : "GET",
            url : url,
            dataType : "script"
            });
        });
     });
       
    </script>

<!-- Modal -->
<div class="modal fade" id="editInvestmentForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Investment Declaration </h4>
      </div>
      <div class="modal-body edit-investment-form">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"></button>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">

    <% if @sections.present? %>
      
      <% @sections.each do |section| %>
      <div class="panel panel-info">
        <div class="panel-heading">				
        <%= section.section  %> Investment Declaration Form 
        <label class="pull-right">Maximum Limit: <%= section.maximum_limit %></label>
        </div>    

        <div class="panel-body">
          <table class="table table-striped table-bordered table-condensed" >
            <thead>											      
              <tr>
                <th width="280px;">Title </th>	
                <th width="280px;">Description</th>
                <th width="280px;">Yealy Value</th>	
                <th>Actions</th>													            									      		
              </tr>
            </thead>
            <tbody>
              <% @declarations.each do |dec| %>
                <% if dec.general_investment.section_declaration == section %>               
                  <tr>               
                    <td><%= dec.general_investment.title if dec.general_investment.section_declaration.present?%></td>
                    <td><%= dec.general_investment.description if dec.general_investment.section_declaration.present?%></td>
                    <td><%= dec.yearly_value if dec.general_investment.section_declaration.present?%></td>
                    <td>
                      <%= link_to 'Edit', "#editInvestmentForm",  :class => "btn btn-success dec ",   :url => edit_investment_declaration_path(dec), :iid => dec.id, "data-toggle" => "modal", :id => "dec_#{dec.id}"   %>   
                    </td>
                  </tr>               
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        </div> 
      <% end %>

      

    <% else %>   

      <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        No Investments to display.
      </div>
    <% end %>                                 



  </div><!--/.span12-->
</div><!--/.row-->


<script type="text/javascript">
  $(function(){
      $('.dec').click(function() {
        var url = $(this).attr("url");
        $.ajax({
type : "GET",
url : url,
dataType : "script"
});
        });
      });

    </script>

    <!-- Modal -->
    <div class="modal fade" id="editInvestmentForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Edit Investment Declaration </h4>
          </div>
          <div class="modal-body edit-investment-form">

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"></button>
          </div>
        </div>
      </div>
    </div>
    
    <% title "My Investment Declaration List" %>


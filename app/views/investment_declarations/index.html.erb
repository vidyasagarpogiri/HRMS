<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <%#if @declarations.present? %>
          <div class="module">
            <div class="module-head">							
              <h3> Investment Declaration Info</h3>                  
            </div> 
            <div class="module-body">					                                        
              <table class="table table-striped table-bordered table-condensed" >
                <thead>											      
                  <tr>
                    <th class="center">Section</th>
                    <th>Title </th>	
                    <th>Maximum Limit </th>
                    <th>Montly Value</th>
                    <th>Yealy Value</th>														            									      		
                  </tr>
                </thead>
               <% @declarations.each do |dec| %>
                <tbody>
                  <tr>               
                    <td class="center"><%= dec.generic_investment_declaration.section %></td>
                    <td><%= dec.generic_investment_declaration.title %></td>
                    <td><%= dec.generic_investment_declaration.maximum_limit %></td>
                    <td><%= dec.monthly_value %></td>
                    <td><%= dec.yearly_value %></td>
                    <td>
                      <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                        <li><%= link_to 'Edit',  edit_investment_declaration_path(dec.id), :class => "btn btn-success " %></li>
                       <!-- <li><%#= link_to "Delete", generic_investment_declaration_path(generic), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li> -->
                      </ul>
                    </td>
                    <% end %>
                  </tr>
                </tbody>
              </table>
            </div>                                                                                                                    
          </div><!--module-->    
    		</div><!--content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->          




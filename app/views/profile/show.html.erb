<div class="row">
    <aside class="profile-nav col-lg-3">
        <section class="panel">
            <div class="user-heading round">
                <a href="#">
                    <% if @employee.present? && @employee.avatar_url.present? %>	  
                      <%= image_tag(@employee.avatar_url) %>     
                   <% else %>
                     <% if @employee.gender == "Female" %>
                        <%= image_tag "1.jpg", :class=> "nav-avatar" %> 
                     <% else %>
                        <%= image_tag "user.png", :class=> "nav-avatar" %> 
                     <% end %>
                   <% end %>					
                </a>
                <h1><%= @employee.title %>.&nbsp<%= @employee.full_name %> </h1>
                <p><%= @employee.user.email %></p>
            </div>

            <ul class="nav nav-pills nav-stacked">
            
             <li class="active"><a href="#basic" data-toggle="tab"><i class="fa fa-user"></i>Basic</a></li>
                                    <li><a href="#contact" data-toggle="tab"><i class="fa fa-user"></i>Contact</a></li>
                                    <li><a href="#emergency" data-toggle="tab"><i class="fa fa-user"></i>Emergency Contact</a></li>
                                    <li><a href="#education" data-toggle="tab"><i class="fa fa-user"></i>Education</a></li>
                                    <li><a href="#experience" data-toggle="tab"><i class="fa fa-user"></i>Experience</a></li>
                                    <li><a href="#salary" data-toggle="tab"><i class="fa fa-user"></i>Salary</a></li>
                                    <li><a href="#promotions" data-toggle="tab"><i class="fa fa-user"></i>Promotions</a></li>
                                    <li><a href="#attachments" data-toggle="tab"><i class="fa fa-user"></i>Attachments</a></li>
                                    <li><a href="#projects" data-toggle="tab"><i class="fa fa-user"></i>Projects</a></li>
                                    <li><a href="#self_description" data-toggle="tab"><i class="fa fa-user"></i>Self Description</a></li>
                                    
                                    <% if current_user.department == Department::HR %>
                                    <li><a href="#exit_info" data-toggle="tab"><i class="fa fa-user"></i>Exit Info</a></li>
                                    <% end %>
                                    
            
       
            </ul>

        </section>
    </aside>
    
    
    
    
    <aside class="profile-info col-lg-9">
        
         <section>
          <div class="profile-tab-content tab-content">                                                                
                                    <div class="tab-pane fade active in" id="basic">
                                         <%= render "employees/show" %>                             
                                    </div><!--/.tab-pane-list--> 

                          <!--contact PANEL--> 
                                   
                                    <div class="tab-pane fade" id="contact">
                                      <%= render "addresses/index" %>   
                                    </div><!--/.tab-pane-list--> 
                                    
                          <!--emergency contact Panel-->
                                    <div class="tab-pane fade" id="emergency">
                                    <%= render "emergency_contacts/index" %>
                                    </div>
                          <!--education PANEL-->   
                                      <div class="tab-pane fade " id="education"> 
                                          <%= render "educations/index" %>  
                                      </div>                                               
                          <!--experience PANEL--> 
                                   <div class="tab-pane fade " id="experience">
                                         <%= render "experiences/index" %>                             
                                      </div>          
                           <!--salary PANEL-->                       
                                      <div class="tab-pane fade " id="salary">
                                        <%= render "salaries/index"%>                                          
                                      </div>
                          <!--promotions PANEL-->             
                                      <div class="tab-pane fade " id="promotions">
                                      <%= render "promotions/index"%>                                           
                                      </div>
                          <!--Attachments PANEL-->             
                                      <div class="tab-pane fade " id="attachments">
                                      <%= render "employees/attachment_index"%>                                                                               
                                      </div>
                          <!--email_etiquette PANEL-->             
                                      <div class="tab-pane fade " id="email_etiquette">
                                      <%= render "email_ettiquities/index" %>                                            
                                      </div>
                           <!--employee projects-->
                                    <div class="tab-pane fade " id="projects">
                                      <%= render "projects/index" %>                                            
                                    </div>
                           
                           <!--employee  Personal description -->
                                    <div class="tab-pane fade " id="self_description">
                                      <%= render "employees/employee_self_description_show", :skills => @skills %>                                            
                                    </div>
                           
                          <!--exit_info PANEL--> 
                                    <div class="tab-pane fade " id="exit_info">
                                      <%= render "ff_statuses/index" %>                                            
                                      </div>
                          
                                </div><!--/.tab-pane-list--> 
                                
                                                                                                                     
                              </div>
        </section>
    </aside>
</div>


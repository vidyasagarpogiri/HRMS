    <div class="wrapper">
        <div class="container">
            <div class="row">                
                <div class="span12">
                    <div class="content">
                        <div class="module">
                            <div class="module-body" style="min-height:800px;">
                                <div class="profile-head media">
                                  <%= render "profile/employee_header"%>  
                                 </div>                                                                           
                                <ul class="profile-tab nav nav-tabs">
                                    <li class="active"><a href="#basic" data-toggle="tab">Basic</a></li>
                                    <li><a href="#contact" data-toggle="tab">Contact</a></li>
                                    <li><a href="#emergency" data-toggle="tab">Emergency Contact</a></li>
                                    <li><a href="#education" data-toggle="tab">Education</a></li>
                                    <li><a href="#experience" data-toggle="tab">Experience</a></li>
                                    <li><a href="#salary" data-toggle="tab">Salary</a></li>
                                    <li><a href="#promotions" data-toggle="tab">Promotions</a></li>
                                    <li><a href="#attachments" data-toggle="tab">Attachments</a></li>
                                    <li><a href="#projects" data-toggle="tab">Projects</a></li>
                                    <li><a href="#self_description" data-toggle="tab">Self Description</a></li>
                                    
                                    <% if current_user.department == Department::HR %>
                                    <li><a href="#exit_info" data-toggle="tab">Exit Info</a></li>
                                    <% end %>
                                </ul>                                                                                                
                                 <div class="profile-tab-content tab-content">                                                                
                                    <div class="tab-pane fade active in" id="basic">
                                         <%= render "employees/show" %>                             
                                    </div><!--/.tab-pane-list--> 

                          <!--contact PANEL--> 
                                   
                                    <div class="tab-pane fade" id="contact">
                                      <%= render "addresses/index" %>   
                                    </div><!--/.tab-pane-list--> 
                                    
                          <!--emergency contact Panel-->
                                    <div class="tab-pane fade" id="emergency">
                                    <%= render "emergency_contacts/index" %>
                                    </div>
                          <!--education PANEL-->   
                                      <div class="tab-pane fade " id="education"> 
                                          <%= render "educations/index" %>  
                                      </div>                                               
                          <!--experience PANEL--> 
                                   <div class="tab-pane fade " id="experience">
                                         <%= render "experiences/index" %>                             
                                      </div>          
                           <!--salary PANEL-->                       
                                      <div class="tab-pane fade " id="salary">
                                        <%= render "salaries/index"%>                                          
                                      </div>
                          <!--promotions PANEL-->             
                                      <div class="tab-pane fade " id="promotions">
                                      <%= render "promotions/index"%>                                           
                                      </div>
                          <!--Attachments PANEL-->             
                                      <div class="tab-pane fade " id="attachments">
                                      <%= render "employees/attachment_index"%>                                                                               
                                      </div>
                          <!--email_etiquette PANEL-->             
                                      <div class="tab-pane fade " id="email_etiquette">
                                      <%= render "email_ettiquities/index" %>                                            
                                      </div>
                           <!--employee projects-->
                                    <div class="tab-pane fade " id="projects">
                                      <%= render "projects/index" %>                                            
                                    </div>
                           
                           <!--employee  Personal description -->
                                    <div class="tab-pane fade " id="self_description">
                                      <%= render "employees/employee_self_description_show", :skills => @skills %>                                            
                                    </div>
                           
                          <!--exit_info PANEL--> 
                                    <div class="tab-pane fade " id="exit_info">
                                      <%= render "ff_statuses/index" %>                                            
                                      </div>
                          
                                </div><!--/.tab-pane-list-->                                                                                      
                              </div>
                            <!--/.module-body-->
                        </div>
                        <!--/.module-->
                    </div>
                    <!--/.content-->
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>	
									
									
									
										   
           
                   




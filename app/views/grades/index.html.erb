<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
						  <h3>Grades Info</h3>
						  <label style="font-weight:normal;margin-top:-10px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "New Grade", new_grade_path %></label>   
					  </div>
					   <div class="module-body">
						  <table class="table table-striped table-bordered table-condensed">
							  <thead>
							    <tr>
				            <th>Name Of Designation</th>
				            <th>Number of Employees</th>
				            <th>Actions</th>
									</tr>
								</thead>
								 <% @designations.each do |des| %>
								<tbody>
							    <tr>
							      <th style="color:green"><%= des.department.department_name%></th>
							      <th colspan="2" style="color:green"><%= des.designation_name %></th>
							     
							    </tr>
								 <% des.grades.each do |grade| %>
								  <tr>
								       <th><%= grade.value %></th>
								       <th><%= grade.employees.count %></th> 
								       <th>
								         <ul class="navigation-btns" style="list-style: none;display:inline;">
								        <% if current_user.department == Department::HR %>
	                      
                            <li><%= link_to 'Edit', edit_grade_path(grade.id), :class => "btn btn-success pull-left" %></li>               
                            <!--<li><%= link_to "Delete",grade_path(grade.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger pull-left" %></li> -->      
                                         
                       <% end %>
                      </ul>  
                       </th>
								    </tr> 
									    <% end %>
									   
								  </tbody>
								   <% end %>
								</table>
								
							</div><!--.module-body-->
						</div><!--/.module -->
			    </div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->



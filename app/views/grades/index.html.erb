<div class="panel panel-info">
  <div class="panel-heading">
    Grades Info <%= link_to " New Grade", new_grade_path, :class => "fa fa-plus pull-right" %>	  
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
	    <thead>
	      <tr>
          <th>Name Of Designation</th>
          <th>Number of Employees</th>
          <th>Actions</th>
			  </tr>
		  </thead>		  
		  <tbody>
		    <% @designations.each do |des| %>
	      <tr>
	        <th style="color:green"><%= des.department.department_name%></th>
	        <th colspan="2" style="color:green"><%= des.designation_name %></th>							     
	      </tr>
		    <% des.grades.each do |grade| %>
		    <tr>
          <th><%= grade.value %></th>
          <th><%= grade.employees.count %></th> 
          <th>             
            <% if current_user.department == Department::HR %>                   
              <%= link_to 'Edit', edit_grade_path(grade.id), :class => "btn btn-success pull-left btn-sm" %>      
            <% end %>          
          </th>
	      </tr> 
	      <% end %>
	      <% end %>								   
	    </tbody>	    
	  </table>								
	</div><!--.module-body-->
</div><!--/.module -->
		  

<%= title 'Grades'%>

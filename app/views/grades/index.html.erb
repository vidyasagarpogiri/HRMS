
                  <h3 class="title">All Grades</h3><hr>
                  
                  <%= link_to "Add New Grade", new_grade_path,:class => "btn btn-success "%><hr>

                        <div class="col-lg-6">
                          <table class="table table-striped table-hover" id="sample-table-2">
                              <% @grades.each do |grade| %>
											            <thead>											      
												            <tr>
													            <th class="center"><%= grade.value %></th>	
													            <th class="center">
													            <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                          <li><%= link_to "Edit",edit_grade_path(grade.id),:class => "btn btn-success " %></li>
                                          <li><%= link_to "Show",grade_path(grade.id),:class => "btn btn-info "%></li>
                                          <li><%= link_to "Destroy",grade_path(grade.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                                        </ul>
                                       </th>							      		
												            </tr>
											            </thead>
                                     <% end %>   
									            </table> 
									          </div>                                  

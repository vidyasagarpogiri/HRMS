
         <div class="wrapper">
		<div class="container">
			<div class="row">
        <div class="span12">
					<div class="content">
						<div class="module">
							<div class="module-head">
								<h3>Grades List</h3>
								<label style="font-weight:normal;margin-top:-50px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "New Grade", new_grade_path %></label>   
							</div>
							<div class="module-body">
								<table class="table table-striped table-bordered table-condensed">
								  <thead>
									<tr>
									  <tr>
				               <th>Name Of Grade</th>
						         
									</tr>
								  </thead>
								    <% @grades.each do |grade| %>
								  <tbody>
									<tr>
									<td><%= grade.value %></td>
		              

                   <% if current_user.department == Department::HR %>
	                  <td> 
	                    <ul class="navigation-btns" style="list-style: none;display:inline;">
                        <li><%= link_to 'Edit', edit_grade_path(grade.id), :class => "btn btn-success pull-left" %></li>  
                        <li><%= link_to "Show",grade_path(grade.id),:class => "btn btn-info ",:class=>"btn btn-info pull-left"%></li>                      
                        <li><%= link_to "Delete",grade_path(grade.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger pull-left" %></li>                         
                                     
                      </ul>
                     </td>
                   <% end %>
									</tr>
								  </tbody>
								  <% end %>
								</table>
								
						</div><!--/.module -->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->  
        <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>

  
  
 




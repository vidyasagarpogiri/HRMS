
<div id="page-wrapper">
           <div class="row">
                <div class="col-lg-12">
                <h3 class="page-header"><%= @grade.value %> Grade</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        List Of Employees 
                        <label style="font-weight:normal;" class = "pull-right"><a><i class="icon-plus-sign "></i></a>&nbsp<%= link_to "Add Employee ", add_employee_grade_path(@grade) %></label>
                      </div>
                        <div class="panel-body">                           
                        <%= form_for(@grade) do |grade| %>                                  
                          <table class="table table-striped table-hover" id="sample-table-2">
											       <thead>
												       <tr>
													       <th class="center">Employee Name</th>
													       <th> Email  </th>
												       </tr>
											       </thead>
											       <% @employees.each do |employee| %>
											       <tbody>
												       <tr>
													       <th class="center"><%= link_to employee.first_name, employee_path(employee) %></th>	
													       <th class="center"><%= employee.user.email %></th>	
												       </tr>
											      </tbody>
											      <% end %> 									      
										       </table>
										     <% end %>                    
                         </div>
                           <!-- /. panel-body -->   
									    </div>
									     <!-- /.panel -->                                  
                   </div>
                     <!-- /.col-lg-6 (nested) -->
                 </div>
                     <!-- /.row (nested) -->                    
               </div>      
                 <!-- /#page wrapper -->

    
         <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>
            
                    
                    





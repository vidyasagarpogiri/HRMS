<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3>Employee Appraisals List</h3>
            </div>
              <table border="0" class="table  table-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Department</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Period</th>
                  <th>Appraisal Cycle</th>
                </tr>
              </thead>
              <% if @appraisals.present? %>
              <% @appraisals.each do |appraisal| %>
                <% i = 0 %>
                <tr>
                <td><%= link_to appraisal.title, "/appraisal_view/#{appraisal.id}" %></td>
                <td><%= appraisal.description %></td>
                <td><%= appraisal.start_date.strftime("%d %b, %Y") %></td>
                <td><%= appraisal.end_date.strftime("%d %b, %Y") %></td>
                <td><%= appraisal.review_period %></td>
                <td><%= @appraisal_cycles[i].title %></td>
              <% end %>
             <% end %>
             </tbody>
            </table>
            </div><!--/.module-body-->
          </div><!--/.module-->
        </div><!--/.content-->
      </div><!--/.span12-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        Appraisal Form
      </div>
      <div class="panel-body">
        <% if @employee_appraisal.present? %>
          <%= form_tag "/manager_feedback/#{@employee.id}", :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"}, method: :post  do %>
            <%= render "appraisals/manager_appraisal_edit"%>
            <%= submit_tag 'Submit', :class => 'btn btn-success pull-right' %>
          <% end %><br/>
        <% else %>
          No Reviews For Employees
        <% end %>
      </div><!--/.module-body-->                         
    </div><!--/.module-->
  </div><!--/.content-->
</div><!--/.span12-->


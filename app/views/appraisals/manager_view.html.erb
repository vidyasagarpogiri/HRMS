<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3>Appraisal Form</h3>
            </div>

            <div class="module-body">
              <% if @employee_appraisal.present? %>
              <%= form_tag "/manager_feedback/#{@employee.id}", :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"}, method: :post  do %>
                <%= render "appraisals/manager_appraisal_edit"%>
              <%= submit_tag 'Submit', :class => 'btn btn-success pull-right' %>
              <% end %><br/>
             <% else %>
                you dont have any appraisal templates
             <% end %>
            </div><!--/.module-body-->                         
          </div><!--/.module-->
        </div><!--/.content-->
      </div><!--/.span12-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper--

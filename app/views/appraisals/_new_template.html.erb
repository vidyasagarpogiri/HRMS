
            <div class="module-head">
              <h3>Appraisal Template</h3>
            </div>
            <div class="module-body">
              <%= form_tag appraisals_create_appraisal_template_path, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"}, method: :post, remote: true  do %>
              <div class ="row-fluid">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Title</label>
                    <div class="controls">
                      <%= text_field_tag 'title', nil, class: "span8", required: true %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
              </div>
              <div class="row-fluid">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Description</label>
                    <div class="controls">
                      <%= text_area_tag :description, nil, :class => "span8", required: true%>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
              </div>
              <div class ="row-fluid">
						    <div class="span5">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Start Date</label>
                    <div class="controls">
                      <%= text_field_tag :start_date, nil, class: "date-picker start_date", required: true %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                </div>
                <div class="span5">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">End Date</label>
                    <div class="controls">
                      <%= text_field_tag :end_date, nil, class: "date-picker end_date", required: true %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                </div>
              </div>
              <div class ="row-fluid">
						    <div class="span5">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Employee</label>
                    <div class="controls">
                      <%= text_field_tag :employee_name %>
                    </div>
                  </div>
                </div>
                <div class="span5">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Manager</label>
                    <div class="controls">
                     <%= text_field_tag :manager_name %>
                    </div>
                  </div>
                </div>
              </div>
              <div class ="row-fluid">
                <div class="span5">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Period</label>
                    <div class="controls">
                      <%= text_field_tag :review_period, nil, required: true%>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                </div>
						    <div class="span5">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Over All Rating</label>
                    <div class="controls">
                      <%= text_field_tag :over_all_rating %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                </div>
              </div>           
            <div class="module-body">
             <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Review Element</th>
                    <th>Performance Indicator</th>
                    <th>Applicable</th>
                  </tr>
               </thead>
              <% if @review_elements.present? %>
                <% @review_elements.each do |review_element, i| %>
                  <%= fields_for "review_elements[]", review_element do |f| %>
                  <tbody>
                    <tr>
                      <td><%= review_element.review_element %></td>
                      <td><%= review_element.performance_indicator %></td>
                      <td><%= check_box_tag 'review_element_ids[]', review_element.id, checked = false , :class => "check" %></td>
                    </tr>
                  </tbody>
                  <% end %>
                <% end %>
              <% end %>
             </table>
         <!--    <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Goal</th>
                    <th>Applicable</th>
                  </tr>
               </thead>
              <%# if @goals.present? %>
                <%# @goals.each do |goal, i| %>
                    <%# fields_for "goals[]", goal do |f| %>
                    <tbody>
                    <tr>
                      <td><%# goal.title %></td>
                      <td><%# check_box_tag 'goal_ids[]', goal.id, checked = false , :class => "check" %></td>
                    </tr>
                   </tbody>
                  <%# end %>
                <%# end %>
              <%# end %>
              </table> -->
             </div>
              <%= submit_tag 'Create Appraisal', :class => 'btn btn-success pull-right' %>
            <% end %><br/>
            </div><!--/.module-body-->

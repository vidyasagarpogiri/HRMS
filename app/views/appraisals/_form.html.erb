            <div class="module-head">
              <h3>Appraisal Template</h3>
            </div>
            <div class="module-body">
              <%= form_for @appraisal, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"}, remote: true  do |f| %>
              <div class ="row-fluid">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Title</label>
                    <div class="controls">
                      <%= f.text_field :title, class: "span8", required: true %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
              </div>
              <div class="row-fluid">
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Description</label>
                    <div class="controls">
                      <%= f.text_area :description, :class => "span8", required: true, size: "50x12" %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
              </div>
            <div class="module-body">
             <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Review Element</th>
                    <th>Performance Indicator</th>
                    <th>Applicable</th>
                  </tr>
               </thead>
              <% if @review_elements.present? %>
                <% @review_elements.each do |review, i| %>
                  <tbody>
                    <% flag = @appraisal.check_appraisal_reviews(review) %>
                    <tr>
                      <td><%= review.review_element %></td>
                      <td><%= review.performance_indicator %></td>
                      <% if flag %>
                      <td><%= check_box_tag 'review_element_ids[]', review.id, checked = true , :class => "check" %></td>
                      <% else %>
                      <td><%= check_box_tag 'review_element_ids[]', review.id, checked = false , :class => "check" %></td>
                      <% end %>
                    </tr>
                  </tbody>
                <% end %>
              <% end %>
             </table>

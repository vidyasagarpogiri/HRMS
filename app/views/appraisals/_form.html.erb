<div class="panel panel-info">
  <div class="panel-heading">
    Appraisal Template
    <i class="fa fa-arrow-circle-left pull-right" style="margin-top:5px;"></i><%= link_to 'Back To Appraisals', appraisals_path, :class=>"pull-right" %>
  </div>
  <div class="panel-body">
    <%= form_for @appraisal, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"}, remote: true  do |f| %>
      <div class ="row">
        <div class="col-lg-12">
          <div class="form-group">
            <label  class="col-lg-2 control-label">Title:</label>
            <div class="col-lg-8">
              <%= f.text_field :title, :class => "form-control", required: true %>
              <span class="help-block with-errors"></span> 
            </div>
          </div>
        </div>
      </div>
      <div class ="row">
        <div class="col-lg-12">
          <div class="form-group">
            <label  class="col-lg-2 control-label">Description:</label>
            <div class="col-lg-8">
              <%= f.text_area :description, :class => "form-control", required: true, size: "50x12" %>
              <span class="help-block with-errors"></span> 
            </div>
          </div>
        </div>
      </div> 
      <% if @review_elements.present? %>                  
        <table class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th>Review Element</th>
              <th>Performance Indicator</th>
              <th>Applicable</th>
            </tr>
          </thead>                              
          <tbody>
            <% @review_elements.each do |review, i| %>
            <% flag = @appraisal.check_appraisal_reviews(review) %>
            <tr>
              <td><%= review.review_element %></td>
              <td><%= review.performance_indicator %></td>
              <% if flag %>
              <td><%= check_box_tag 'review_element_ids[]', review.id, checked = true , :class => "check" %></td>
              <% else %>
              <td><%= check_box_tag 'review_element_ids[]', review.id, checked = false , :class => "check" %></td>
              <% end %>
            </tr>
            <% end %>            
          </tbody>                         
        </table>
      <% end %>
      <%= submit_tag 'Create Appraisal', :class => 'btn btn-success pull-right' %><br/>
    <% end %>
  </div>
</div>      

<% title " New Appraisal" %> 

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        Reportee Appraisal For <%= @employee_appraisal.appraisal_cycle.title %>
          <label class = "pull-right"><a href="#"></a><%= link_to 'Back To Reportees', "/reportee_appraisals/#{@employee.id}"%></label>
      </div>
      <div class="panel-body">
        <%= form_tag "/reportee_appraisal_update/#{@employee.id}", :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"}, method: :post do %>
          <%= render "appraisals/manager_appraisal_edit"%><hr/>
          <% if @employee_appraisal.status == Appraisal::REVIEW %>
            <h4>Add Goal
            <!-- code for employee goals -->
            <span class="fa fa-plus-circle add-goal" style="cursor:pointer";></span></h4>
            <%= fields_for @goal do |g| %>
              <div class="display-area">
              </div><br/>
            <% end %>
          <% end %> 
          <%= submit_tag 'Submit', :class => 'btn btn-success pull-right' %>
        <% end %><br/>
      </div>
    </div>
  </div>
</div>


<script>
  $(function(){
    $(".add-goal").click(function(){
      $(".display-area").append('<div class="display-form"></div>');
      $(".display-form").replaceWith('<%= j render "appraisals/goal_form"%>');
    });
  });
</script>

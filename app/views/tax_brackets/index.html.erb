<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
               <h3>Tax Brackets</h3>
               <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to "New TaxBracket", new_tax_bracket_path %></label> 
            </div>
            <div class="module-body">
              <% if @tax_brackets.present? %>                                           
                  <table class="table table-striped table-hover" id="sample-table-2">
					        <thead>											      
						        <tr>
							        <th>Bracket</th>
							        <th>Lower Limit</th>	
							        <th>Upper Limit</th>	
							        <th>Tax Percentage</th>
							        <th>Minimum Tax </th>								      		
						        </tr>
					        </thead>
                
					        <tbody>
					          <% @tax_brackets.each do |tax| %>
						          <tr>               
							          <td><%= tax.bracket %></td>
							          <td><%= tax.lower_limit %></td>
							          <td><%= tax.upper_limit %></td>
							          <td><%= tax.tax_percentage %></td>
							          <td><%= tax.min_tax %></td>
							          <td>
                          <% if current_user.department == Department::HR %>
							              <ul class="navigation-btns  pull-left" >
							                <li> <%= link_to 'Edit', edit_tax_bracket_path(tax), :class => "btn btn-success" %></li>
							                <li><%= link_to 'Delete', "#", method: :delete ,data: {confirm: "Are You sure?"}, :class => "btn btn-danger" %></li>
										        </ul> 
										      <% end %>
										    </td>
						          </tr>
                    <% end %>
					        </tbody>
					       
				        </table> 
				      <% end %>
            </div>
    
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <section class="panel panel-info">
      <header class="panel-heading">
        Tax Brackets
        <span class="pull-right">
          <%= link_to "New TaxBracket", new_tax_bracket_path, :class =>" btn btn-success btn-xs" %>
        </span>
      </header>
  <div class="panel-body">
    <section id="unseen">
      <% if @tax_brackets.present? %>                                           
  <table class="table table-bordered table-striped table-condensed" id="sample-table-2">
    <thead>											      
      <tr>
        <th>Bracket</th>
        <th>Lower Limit</th>	
        <th>Upper Limit</th>	
        <th>Tax Percentage</th>
        <th>Minimum Tax </th>	
        <th>Action</th>							      		
      </tr>
    </thead>

    <tbody>
      <% @tax_brackets.each do |tax| %>
        <tr>               
          <td><%= tax.bracket %></td>
          <td><%= tax.lower_limit %></td>
          <td><%= tax.upper_limit %></td>
          <td><%= tax.tax_percentage %></td>
          <td><%= tax.min_tax %></td>
          <td>
            <% if current_user.department == Department::HR %>
                 <%= link_to 'Edit', edit_tax_bracket_path(tax), :class => "btn btn-success" %>
                <%= link_to 'Delete', "#", method: :delete ,data: {confirm: "Are You sure?"}, :class => "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table> 
<% end %>

    </section>
  </div>
</div>

 
 <% title "Tax Bracket List" %>




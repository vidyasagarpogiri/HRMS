<%= form_for @static_salary do |s|%>             
<div class="module-body">
  <p style="color:red;"><u>Note:</u></p><p>Basic, Esic, Esic contribution depends on Gross and PF,Pf Contribution depends on basic</p>     
  <table class="table table-striped table-bordered table-condensed">
    <thead>
	    <tr>
		    <th>Salary Type</th>
		    <th>Percentage</th>
	     <tr/>
    </thead>	
    </tbody>				
    <% @static_salaries.each do |salary, i| %>
	  <%= fields_for "salary[]", salary do |f| %>   
    <tr>
      <td><%= salary.name %></td>
      <td><%= f.text_field :value,:placeholder =>"Enter Value", :data => {:error => "Please Enter Value"}, :required => true, :pattern => '[0-9/.]*'%>
      </td>
    <tr>
    <% end %>
    <% end %>
    </tbody>      
  </table><br>
  <%= submit_tag "Submit", :class => "btn btn-success pull-right", :id=> "save" %><br/>
</div>
<% end %>

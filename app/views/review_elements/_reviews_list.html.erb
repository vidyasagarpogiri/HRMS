<div class="module-head">							
              <h3>Review Elements</h3>
              <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-plus-sign"></i></a> <%= link_to 'New Review', new_review_element_path, remote: true %></label>
            </div>		   	         
            <div class="module-body">   
              <% if @review_elements.present? %> 
                <table class="table table-striped table-bordered table-condensed">
                  <thead>
                    <tr>
                      <th class="center">Review Element</th>
                      <th>Performance Indicator</th>
                    </tr>
                  </thead>
                <% @review_elements.each do |review_element| %>
                  <tbody>
                    <tr>  
                      <td class="center"><%= review_element.review_element %></td>
                      <td class="center"><%= review_element.performance_indicator if review_element.performance_indicator.present? %></td>	
                    </tr>
                  </tbody>
                <% end %>
                </table>
              <% else %>  
                <div class="alert alert-success alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    No Reviews created 
                </div>                                   
              <% end %>		        
            </div><!--module -body-->  

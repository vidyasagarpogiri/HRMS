<div class="panel panel-info">  
  <div class="panel-heading"> 							
    Review Elements  <%= link_to ' New Review', new_review_element_path, :class => "fa fa-plus pull-right", remote: true %>  
  </div>		   	         
  <div class="panel-body">   
    <% if @review_elements.present? %> 
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th class="center">Review Element</th>
            <th>Performance Indicator</th>
          </tr>
        </thead>    
        <tbody>
        <% @review_elements.each do |review_element| %>
          <tr>  
            <td class="center"><%= review_element.review_element %></td>
            <td class="center"><%= review_element.performance_indicator if review_element.performance_indicator.present? %></td>	
          </tr>
        <% end %>
        </tbody>    
      </table>
    <% else %>  
      <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          No Reviews created 
      </div>                                   
    <% end %>		        
  </div><!--module -body--> 
</div><!--module -body-->  

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3>New Goal</h3>
            </div>
            <div class="module-body">
              <%= form_for @review_element, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal"}  do |review| %>
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Title</label>
                    <div class="controls">
                      <%= review.text_field :review_element %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Performance Indicator</label>
                    <div class="controls">
                      <%= review.text_field :performance_indicator %> 
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Employee Assesment</label>
                    <div class="controls">
                      <%= review.text_field :employee_assesment %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Employee Rating</label>
                    <div class="controls">
                      <%= review.text_field :employee_rating %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Manager Feedback</label>
                    <div class="controls">
                      <%= review.text_field :manager_feedback %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
                  <div class="control-group">   
                    <label class="control-label" for="basicinput">Manager Rating</label>
                    <div class="controls">
                      <%= review.text_field :manager_rating  %>
                      <span class="help-block with-errors"></span>
                    </div>
                  </div>
              <%= review.submit 'Create Review Element', :class => 'btn btn-success pull-right' %>
              <% end %><br/>
            </div><!--/.module-body-->
          </div><!--/.module-->
        </div><!--/.content-->
      </div><!--/.span12-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->

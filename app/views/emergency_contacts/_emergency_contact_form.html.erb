			<div class="module">
				<div class="module-head">
					<h3>Emergency Contact Info</h3>
						</div>
							<div class="module-body">							                                              
							<%= form_for ([@employee, @emergency]), :remote => true,  :html => {:class=>"form-horizontal row-fluid new_emergency-contact-form"} do |f| %>		
			         <div class="control-group">
                  <label class="control-label" for="basicinput">Name Of person</label>
                      <div class="controls">
                        <%= f.text_field :name, :class => "span8 form-control", :placeholder =>"Enter Name", :data => {:error => "Please Enter Name "}, :required => true,:pattern => '[a-zA-Z/s ]*' %>  
                        <span class="help-block with-errors"></span>
                      </div>
								</div>
									        
              <div class="control-group">
                  <label class="control-label" for="basicinput">Relationship with the Employee</label>
                      <div class="controls">
                        <%= f.text_field :relation, :class => "span8 form-control", :placeholder =>"Enter Relationship", :data => {:error => "Please Enter Relationship"}, :required => true,:pattern => '[a-zA-Z/s ]*' %>
                        <span class="help-block with-errors"></span>
                      </div>
								</div>
	
	
		           <div class="control-group">
										<label class="control-label" for="basicinput">Mobile 1</label>
										<div class="controls">
                     <%= f.text_field :mobile1, :class => "span8  form-control", :placeholder => "Enter Mobile Number", :data => {:error => "Please Enter Mobile number", :minlength => "10", :maxlength => "10"}, :required =>true, :type => "number" %> 
											 <span class="help-block with-errors"></span>   
										</div>
									</div>		 		
	
		<div class="control-group">
										<label class="control-label" for="basicinput">Mobile2 </label>
										<div class="controls">
                     <%= f.text_field :mobile2, :class => "span8  form-control", :id => "basicinput", :placeholder => "Enter Mobile Number",  :data => {:error => "Please Enter mobile number"} %>                  
											 <span class="help-block with-errors"></span>   
										</div>
									</div>
								
									<ul class="navigation-btns pull-left">
									  <li><%= f.submit  'Save', :class => "btn btn-success" %></li>
										<li><%= link_to 'Cancel', employee_emergency_contacts_path(@employee), :class=>"btn btn-danger ", :remote => true %></li>									
								  </ul>		
										<% end %>
							</div><!--/.module-body-->
						</div><!--/.module-->


<script>
  $(function(){
   $(".new_emergency-contact-form").validator();
  });
</script>

    

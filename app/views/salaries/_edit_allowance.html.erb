<div class="module">
			<div class="module-head">
				<h3>Allowance List</h3>
			</div>
			<div class="module-body">
                     <%= form_tag  employee_salary_update_allowance_path(@employee, @salary), :id => "first-form", :remote => true do %>
												<table class="table table-striped table-hover" id="sample-table-2"">
												  <thead>
													  <tr>
															  <th>Allowance</th>
															  <th>Percentage</th>
															  <th>Applicable</th>
													  <tr/>
											   </thead>	
											   </tbody>				
										     
                         <% @allownaces.each do |allowance, i| %>
											   <%= fields_for "allowances[]", allowance do |f| %>   
												   <tr>
                              <td><%= allowance.allowance_name %></td>
														  <% if allowance.value.present? %>
													        <td><%= allowance.value %></td>
													       <td><%= allowance_value(allowance.value, @salary.basic_salary) %></td>
													      <% else %>
													          <td>---</td>
													         <td> <%=  allowance.allowance_value %></td>
													      <% end %>
                              <% if @salary.allowances.include?(allowance) %>
                                <td><%= check_box_tag 'allowance_ids[]', allowance.id, checked = true %></td>
                              <% else %>
                                <td><%= check_box_tag 'allowance_ids[]', allowance.id %></td>
                              <% end %>
												   </tr>
                          <% end %>
											    <% end %> 
											   
                          <% end %>           
                      </tbody>          
										</table>
										 <%= submit_tag "Submit", :class => "btn btn-success pull-right", :id=>"btn" %><br>
     </div>
     <!-- end of module body-->
</div>
<!-- end of module -->
<input type="hidden" value="<%= params[:employee_id] %>" id="emp_id">
<input type="hidden" value="<%= params[:salary_id] %>" id="sal_id">

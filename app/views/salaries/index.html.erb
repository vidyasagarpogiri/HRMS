

<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Salary Details</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <ul class="nav nav-tabs" role="tablist">
                <li class=" salary active"><a href="">Basic</a></li>
                <li class="bonus"><a href="#">Variable Pay</a></li>
                <li class="increment"><a href="#">Increments</a></li>
              </ul>
              <div class="display">
              <div class="salaries">
                <% unless @salary.new_record? %> 
                  <br>
                  <table class="table table-striped table-hover" id="sample-table-2">
                    <thead>											      
                      <tr>
                        <th class="center">CTC Fixed:</th>
                        <th>Basic Salary</th>	
                        <th></th>										      		
                      </tr>
                    </thead>
                    <tbody>
                      <tr>               
                        <td class="center"><%= @salary.ctc_fixed %></td>
                        <td><%= @salary.basic_salary %></td>
                        <td><%= link_to 'Edit', edit_employee_salary_path(@employee, @salary), :class => "btn btn-success pull-left" %></td>
                      </tr>
                    </tbody>
                  </table>                                           
                  <!-- /.col-lg-6 (nested) -->
              <% else %>
                  <%= render 'salaries/form' %>
                <% end %>
              </div> <!-- /.salaries -->
                
            <!-------Allowance ---------------->
               <% unless @salary.new_record? %> 
              <div id="allownaces">
                <div class="allowance-index">
                  <%= render 'salaries/allowances' %>
                </div> 

                <div class="new-allowance">
                </div>
              </div>
            
              
              </div>
          <!-------Insentives-------------------->
              <div id="insentives">
                <div class="insentive-index">
                  <%= render 'salaries/insentives' %>
                </div> 

                <div class="new-insentive"></div>
              </div>
           <!---------Increments--------------------->
           
              <div class="increments">
                <div class="salary_increment-index">
                  <%= render 'salaries/salary_increments' %>
                </div> 
                <div class="new-salary_increment"></div>
              </div>
          <!----------------------------------------------->
           <% end %>
            </div><!-- /.col ig 12 -->
          </div> <!-- /.row (nested) -->
        </div><!-- panel body-->
      </div><!-- panel default-->

    </div><!--col-lg-12-->


  </div><!-- /.row (nested) -->
</div><!-- page-wrapper -->

<script>
  $(function(){
    $("#insentives").hide();
    $(".increments").hide();


  });

  $(".bonus").click(function(){
    //$(".display").append("#insentives");
    $(".salaries").hide();
    $(".increments").hide();
    $("#allownaces").hide();
    $("#insentives").show();
    $(".salary").removeClass( "active" );
    $(".increment").removeClass("active");
    $(".bonus").addClass( "active" );
  });


  $(".increment").click(function(){
    $(".increments").show();
    $(".salaries").hide();
    $("#allownaces").hide();
    $("#insentives").hide();
    $(".salary").removeClass( "active" );
    $(".bonus").removeClass( "active" );
    $(".increment").addClass("active");
  });

</script>



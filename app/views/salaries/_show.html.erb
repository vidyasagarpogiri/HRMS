<div class="module">
			<div class="module-head">
				<h3>Allowances Applicable</h3>
			</div>
			<div class="module-body">
        <div class="panel-heading">
           List of Allowances
        </div>
        <%= form_tag employee_salary_configure_path(@employee, @salary), :remote => true do %>
        <table class="table table-striped table-hover" id="sample-table-2">											      
             <tr>
               <td>Basic</td>
               <td><%= @salary.basic %></td>
               <td></td>
              </tr>
              <tr>
                <td>PF</td>
                <td><%= @salary.pf %></td>
                <td><input type="checkbox" name="Pf"></td>
              </tr> 
              <tr>
                <td>ESCI</td>
                <td><%= @salary.esic %></td>
                <td><input type="checkbox" name="Esci"></td>
               </tr>
                   <%= submit_tag "Submit", :class => "btn btn-success pull-right" %>     
					 </table>
					   
					<% end %>
				</div><!-- /module body -->
</div><!-- /module -->


<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
	    <div class="panel-heading">
		    Allowances Applicable
	    </div>
	    
	    <div class="panel-body">
		    <table class="table table-striped table-bordered table-condensed">
          <thead>											      
            <tr>
              <th>Gross Salary:</th>
              <th>Bonus:</th>	
              <th>Gratuity:</th>
					    <th>Medical Insurance</th>
			      </tr>
			    </thead> 
          <tbody>
            <tr>               
              <td><%= @salary.gross_salary %></td>
              <td><%= @salary.bonus %></td>
					    <td><%= @salary.gratuity %></td>
					    <td><%= @salary.medical_insurance %></td>
			      </tr>
			    </tbody>
		    </table>
	    <div><br>
	    
	    <div class="panel-body">
        <%= form_tag employee_salary_configure_path(@employee, @salary), :remote => true do %>
          <table class="table table-striped table-bordered table-condensed">											            
            <tr>
              <td>Basic</td>
              <td><%= @salary.basic_salary %></td>
              <td></td>
            </tr>
            <tr>
              <td>HRA</td>
              <td><%= @salary.hra %></td>
              <td></td>
             </tr>
            <tr>
              <td>PF</td>
              <td><%= calculate_pf(@salary, @salary_percentages) %></td>
              <td><input type="checkbox" name="pf"></td>
            </tr> 
            <tr>
              <td>ESCI</td>
              <td><%= calculate_esic(@salary, @salary_percentages) %></td>
              <td><input type="checkbox" name="esic"></td>
             </tr>               
		      </table><br>
		      <%= submit_tag "Submit", :class => "btn btn-success" %> 		   
			  <% end %><br>
		  </div><!-- /module body -->
    </div><!-- /module -->
  </div>
</div>

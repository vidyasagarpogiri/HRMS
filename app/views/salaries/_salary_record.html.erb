 <% unless @salary.new_record? %>                                    
          <table class="table table-striped table-bordered table-condensed">
           <thead>
              <tr style="color:black;">
			          <th colspan="2" >Employee Salary Info</th>					      
					    </tr>
              <tr>
                <th>Particulars</th>
                <th>Value(INR)</th>
              </tr>											      					    					    					   					   
			        <tr>
					      <th>Basic</th>
					      <td><%= @salary.basic_salary %></td>
				      </tr>
				      <tr>
					      <th>HRA</th>
					      <td><%= @salary.hra if @salary.hra.present? %></td>
				      </tr>
				      <% if @allowances.present? %>
				      <% @allowances.each do |allowance| %>																	
	             <tr>		 								             
					       <th><%= allowance.allowance_name %></th> 													   								          							              
                 <% if allowance.value.present? %>													
                 <td><%= allowance_value(allowance.value, @salary.basic_salary)  %></td>
                 <% else %>
                 <td><%= allowance.allowance_value %></td>
                 <% end %>
               </tr>
              <% end %>
              <% end %>
				      <% if @salary.pf_apply == "true"%>
				      <tr>
					      <th>PF</th>
					      <td><%= @salary.pf %></td>
				      </tr>				      
					      <% end %>
				      <% if @salary.esic_apply == "true"%>
				      <tr>
					      <th>ESIC</th>
					      <td><%= @salary.esic %></td>
				      </tr>				      
					      <% end %>
			        <tr>
					      <th>Special Allowance</th>
					      <td><%= @salary.special_allowance%></td>
				      </tr>
				           <tr>
                <th>Gross Salary</th>
                <td><%= @salary.gross_salary %></td>
              </tr>
              <tr style="color:black;">
			          <th colspan="2">Employer Contribution</th>					      
					    </tr>
              <tr>
                <th>Gratuity</th>
                <td><%= @salary.gratuity %></td>
              </tr>
              
				       <tr>
                <th>Bonus</th>
                <td><%= @salary.bonus %></td>	
              </tr>
              <tr>
					      <th>Medical Insurance</th>
					      <td><%= @salary.medical_insurance %></td>
			        </tr> 
				      <tr>
					      <th>CTC</th>
					      <td><%= @salary.ctc_fixed %></td>
				      </tr>
					      <th>Action</th>									      		             	
                <td>
                <% if current_user.department == Department::HR %>  
                  <ul class="navigation-btns pull-left">                                          
                    <li><%= link_to 'Edit', edit_employee_salary_path(@employee, @salary), :class => "btn btn-success ", :remote => true %></li>
                    <li><%= link_to 'Delete', employee_salary_path(@employee, @salary), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger ", :remote => true %></li>
						        <% if @salary.allowances.present?%>													
						        <li><%= link_to 'Configure', edit_allowance_employee_salary_salaries_allowances_path(@employee, @salary), :class => "btn btn-info", :remote => true %></li>
						        <% else %>
						        <li><%= link_to 'Configure', new_employee_salary_salaries_allowance_path(@employee, @salary), :class => "btn btn-info " , :remote => true %></li>
						        <% end %>              
                    </ul>
                  <% end %>  
                </td>
              </tr>
            </thead>
          </table>
        <!-- /.col-lg-6 (nested) -->
            <% else %>              
            <% if current_user.department == Department::HR %>
                <%= render 'salaries/form' %>
             <% else %><br> <br>
              <div class="alert alert-success alert-dismissable">
                 <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    Salary Not Yet Created please contact HR 
              </div>
				      <% end %>               
            <% end %>

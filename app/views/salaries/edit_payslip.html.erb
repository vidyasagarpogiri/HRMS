<div class="wrapper">
  <div class="container">
    <div class="row">                                             
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head" style="background-color: #82B4E6 ">
              <h3>pay slips
              </h3>
            </div><br>
            <div class="module-body" >
                <!-- code for displayin all employees payslips -->
                <%= form_tag("/payslip/#{@payslip.id}", method: :put) do %>
                  <div class="control-group">
                    <label class="control-label" for="basicinput">Arrears</label></th>
                    <div class="controls">
                      <%= text_field_tag :arrears %>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label" for="basicinput">Proffesional Tax</label></th>
                    <div class="controls">
                      <%= text_field_tag :pt %>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label" for="basicinput">TDS</label></th>
                    <div class="controls">
                      <%= text_field_tag :tds %>
                    </div>
                  </div>
                  <table class="table table-striped table-hover" id="sample-table-2">
							<thead>
								<tr>
									<th>Allowance</th>
									<th>percentage</th>
									<th>value</th>
									<th>Deductable</th>
								 <tr/>
							 </thead>	
							 <tbody>
                  <% @payslip_allowances.each do |allowance, i| %>
										<%= fields_for "payslip_allowances[]", allowance do |f| %>   
										  <% payslip_allowance = Allowance.where(:id => allowance.allowance_id, :salary_id => @payslip.employee.salary.id).first %>
										  <%# raise payslip_allowance.inspect %>
											<tr>
                          <td><%= payslip_allowance.allowance_name %></td>
												<% if payslip_allowance.value.present? %>
												  <td><%= payslip_allowance.value %></td>
												  <td><%= allowance_value(payslip_allowance.value, monthly(@payslip.employee.salary.basic_salary)) %></td>
												<% else %>
												  <td>---</td>
												  <td> <%=  payslip_allowance.allowance_value %></td>
												<% end %>
												   <% if allowance.is_deductable %>
												    <td><%= check_box_tag 'deductable_allowance_ids[]', allowance.id, checked = true , :class => "check" %></td>
												   <% else %>   
                            <td><%= check_box_tag 'deductable_allowance_ids[]', allowance.id, checked = false , :class => "check" %></td>  
                           <% end %>
											</tr>
										 <% end %>
									  <% end %> 
                 
               </tbody>
              </table>
              <%= submit_tag 'Update', :class => "btn btn-success pull-right" %>
             <% end %>
          </div>
          </div><!--/.module-->
        </div><!--/.content-->                    
      </div><!--/.span9-->                
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper--

<div class="wrapper">
  <div class="container">
    <div class="row">                                             
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head" style="background-color: #82B4E6 ">
              <h3>pay slips
              </h3>
            </div><br>
            <div class="module-body " style="background-color:#eee" >
              <div class="payslip_date pull-right">
                <label><strong>Select Month to generate payslip :&nbsp&nbsp </strong><input class=" datepicker_with_year form-control hasDatepicker" data-error=" Please Enter Employee Date Of Birth"   placeholder="Enter Date Of Birth" required="required" type="date">
                <button type="button" class="btn btn-success">Generate</button></label></label>
              </div>
                <!-- code for displayin all employees payslips -->
                                
              <table class="table table-striped table-bordered table-condensed">
                 <thead>
                 <tr>
                    <th>Employee-Id</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>No.of.Working days</th>
                    <th>Basic</th>
                    <th>Gross</th>
                    <th>Total Deductions</th>
                    <th>NetPay</th> 
                  </tr>
                 </thead>
                 <% @payslips.each do |payslip| %>
                 <tbody>
                  <tr>
                    <td><%= payslip.employee.employee_id %></td>
                    <td><%= payslip.employee.full_name %></td>
                    <td><%= payslip.employee.department.department_name %></td>
                    <td></td>
                    <td><%= payslip.basic_salary %></td>
                    <td><%= payslip.gross_salary %></td>
                    <td></td>
                    <td><%= payslip.netpay %></td>
                 </tbody>
                     <% end %> 
              </table>            
          </div>
          </div><!--/.module-->
        </div><!--/.content-->                    
      </div><!--/.span9-->                
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->


  

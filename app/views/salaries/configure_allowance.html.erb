<div id="page-wrapper">

           <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Allowances List</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                            Allowance
                     </div>
                     <div class="panel-body">
                     <%= form_tag employee_salary_create_allowance_path(@employee, @salary) do %>
												<table class="table table-striped table-hover" id="sample-table-2"">
												  <thead>
													  <tr>
															  <th>Allowance</th>
															  <th>percentage</th>
															  <th>Applicable</th>
													  <tr/>
											   </thead>	
											   </tbody>				
										     
                         <% @static_allowance.each do |allowance, i| %>
											   <%= fields_for "allowances[]", allowance do |f| %>   
												   <tr>
                              <td><%= f.text_field :allowance_name, :value => allowance.allowance_name %></td>
														  <td><%= f.text_field :percentage,  :value => allowance.percentage %></td>
                              <td><%= f.check_box :applicable %></td>
												   </tr>
                          <% end %>
											    <% end %> 
											   
                          <% end %>           
                      </tbody>          
										</table>
										 <%= submit_tag "Submit", :class => "btn btn-success pull-right" %>
										
                    				</div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>


         </div>
          <!-- /#page wrapper -->

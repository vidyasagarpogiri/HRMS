<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Employee Leave Details</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
            
                <div class="col-lg-12">
               
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Basic Form Elements
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <% @leaves.each do |leave| %>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Total Carry Forward Leaves:</label>
                                            <%= leave.pl_carry_forward_prev_year %>                                 
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Total Personal Leaves Available:</label>
                                            <%= leave.pl_applied %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Total Sick Leaves Availabe</label>
                                            <%= leave.sl_applied %>                                        
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Total Loss Of Pay leaves</label>
                                           <%= leave.lop_applied %>                                            
                                        </div>
                                        <br>
                                        <ul class="navigation-btns" style="list-style: none;display:inline;"> 
                                        </ul>
                                  <hr>
                                   <% end %>
                                </div>
                                
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>


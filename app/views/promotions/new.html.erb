

<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                    <h4 class="page-header">New Promotion</h4>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
   
                                 <%= form_for ([@employee,@promotion]) do |p| %>
                                        
                                        <div class="form-group col-lg-6">
                                            <label>Date of Promotion</label>
                                            <%= p.text_field :date_of_promotion, :id => "disabledSelect", :class => "form-control datepicker" %>    
                                        </div>
                                        
                                        <div class="form-group col-lg-6">
                                            <label>Designation</label><br>
                                            <%= p.collection_select :designation_id, Designation.all, :id, :designation_name, { :prompt => "Please Select" }, { :class => "designation form-control" } %>
                                        </div>
                                       
                                        <button type="submit" class="btn btn-success pull-right">Save & Continue</button>
                                                    
                                    <% end %>
                         
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
         </div>
          <!-- /#page wrapper -->

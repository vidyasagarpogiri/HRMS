<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">																			
        Promotion Info
        <% if current_user.department == Department::HR %>                                
          <i class="fa fa-plus pull-right" style="margin-top:3px;"></i> <%= link_to ' Add Promotion', new_employee_promotion_path(@employee.id),:class => "pull-right", :remote => true %>
        <% end %>
      </div>
      
      <div class="panel-body">
        <% if @promotions.present? %>	                                                          
          <table class="table table-striped table-bordered table-condensed" id="sample-table-2">
            <thead>											      
              <tr>
                <th>Date Of Promotion</th>
                <th>Department </th>
                <th>Designation </th>
                <th>Grade/Level </th>
                <th>Action</th>
              </tr>
            </thead>
            <% @promotions.each do |promotion| %>
            <tbody>
              <tr>               
                <td><%= format_date (promotion.date_of_promotion) %></td>
                <td> <%= promotion.department.department_name  if promotion.department.present? %> </td>
                <td> <%= promotion.designation.designation_name  if promotion.designation.present? %> </td>
                <td> <%= promotion.grade.value  if promotion.grade.present? %> </td>
                <% if current_user.department == Department::HR %>
                  <td>
                    <%= link_to 'Edit', edit_employee_promotion_path(@employee.id, promotion.id), :class => "btn btn-success ", :remote => true %>
                    <%= link_to "Delete", employee_promotion_path(@employee, promotion), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger ", :remote => true %>
                  </td>
                <% end %>
              </tr>
            </tbody>
            <% end %>
          </table> 																			
        <% else %>                           
          <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              You have No Promotion Details to display.
          </div>
        <% end %>
      </div>      
    </div>
  </div>
</div>            


                   

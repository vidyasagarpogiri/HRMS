	      
<div class="module">
  <div class="module-head">																			
    <h3>Promotion Info</h3>
    <% if current_user.department == Department::HR %>                                
    <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to ' Add Promotion', new_employee_promotion_path(@employee.id), :remote => true %></label>  
  <% end %>
  </div>
  <div class="module-body">
    <% if @promotions.present? %>	                                                          
    <table class="table table-striped table-bordered table-condensed" id="sample-table-2">
      <thead>											      
        <tr>
        <th class="center">Date Of Promotion</th>
        <th>Designation </th>
        <th></th>									      		
        </tr>
      </thead>
      <% @promotions.each do |promotion| %>
      <tbody>
        <tr>               
        <td class="center"><%= format_date (promotion.date_of_promotion) %></td>
        <td> <%= promotion.designation.designation_name  if promotion.designation.present? %> </td>
        <% if current_user.department == Department::HR %>
        <td>
          <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
            <li><%= link_to 'Edit', edit_employee_promotion_path(@employee.id, promotion.id), :class => "btn btn-success ", :remote => true %></li>
            <li><%= link_to "Delete", employee_promotion_path(@employee, promotion), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger ", :remote => true %></li>
          </ul>
        </td>
        <% end %>
        </tr>
      </tbody>
      <% end %>
    </table> 																			

    <% else %>                           
    <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    You have No Promotion Details to display.
    </div>
    <% end %>
  </div>      
</div>             


                   

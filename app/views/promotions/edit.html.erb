
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
       <h2 class="page-header">Promotion Details</h2>
        </div>
               <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">                       
                            <%= form_for ([@employee,@promotion]), :data => {:toggle => "validator"} do |p| %> 
                            <div class="col-lg-6">                                        
                                <div class="form-group ">
                                    <label class="required" >Date of Promotion</label>                                              
                                    <%= text_field :promotion, :date_of_promotion, :class => "form-control datepicker", :placeholder => "Enter Date of Promotion", :data => {:error => "Please Enter Date of Promotion"}, :required =>true %>  
                                    <div class="help-block with-errors"></div>   
                                </div>                                
                                <div class="form-group">
                                    <label class="required" >Designation</label><br>
                                    <%= p.collection_select :designation_id, Designation.all, :id, :designation_name, { :prompt => "Please Select" }, { :class => "designation form-control" } %>
                                </div>
                           
                            <button type="submit" class="btn btn-success pull-left">Save & Continue</button>
                                        
                                <% end %>
                              </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
       
     </div>
      <!-- /#page wrapper -->

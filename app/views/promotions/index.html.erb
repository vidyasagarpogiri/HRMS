
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Promotions Details</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                     <%= link_to 'Add New Promotion', new_employee_promotion_path(@employee.id), :class => "btn btn-success pull-right" %>
                        <div class="panel-body">
                            <div class="row">
                                <% @promotions.each do |p| %>
                                        <div class="form-group col-lg-6">
                                            <label style="font-weight:normal;"> Date Of Promotion:</label>
                                            <label><%= p.date_of_promotion %></label>                                          
                                        </div>
                                        <div class="form-group col-lg-6">
                                          <label style="font-weight:normal;">Designated To:</label>
                                          <label> <%= p.designation.designation_name  if p.designation.present? %>  <label>                                           
                                        </div>                                    

                                         <%= link_to 'EDIT', edit_employee_promotion_path(@employee.id, p.id), :class => "btn btn-success pull-right" %>
                                        <% end %>  
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
  

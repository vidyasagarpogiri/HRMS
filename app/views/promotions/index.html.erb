
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Promotions Details</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
<% if current_user.employee.role.id == 2 %>
                    <label style="font-weight:normal;padding:20px;" class = "pull-right"><i class="fa fa-plus "></i> <%= link_to 'Add Promotion', new_employee_promotion_path(@employee.id)  %></label>

<% end %><% if @promotions.present? %>
                        <div class="panel-body">
                            <div class="row col-lg-12">
                                  <% @promotions.each do |promotion| %>
                                     <label class="normalfont">Date Of Promotion : </label><label>&nbsp<%= promotion.date_of_promotion %></label><br>
                                     <label class="normalfont">Designation : </label><label>&nbsp<%= promotion.designation.designation_name  if promotion.designation.present? %> </label><br>
                                                                                                                  
                                       <% if current_user.employee.role.id == 2 %>
                                       <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                         <li><%= link_to 'Edit', edit_employee_promotion_path(@employee.id, promotion.id), :class => "btn btn-success pull-left" %></li>
                                         <li><%= link_to "Delete", employee_promotion_path(@employee, promotion), method: :delete, data: {confirm: "You sure?"}, :class=>"btn btn-danger pull-right" %></li>                                                                                 
                                       </ul>
                                       <hr>
                                      <br>
                                  </div>
                                          <% end %>
                                      <% end %>

 <% else %>

<h4>No Promotion Details</h4>
<% end %>
                             
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
 
  

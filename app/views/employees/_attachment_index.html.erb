<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        Attachment Info
        <% if current_user.department == Department::HR %>
          <label class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to 'Add New Attachment', attachment_form_new_employee_path(@employee), :remote => true  %></label>
        <% end %>
      </div>
      
      <div class="panel-body">
        <% if @emp_get_attachments.present? %>
          <table class="table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>Attachment Title</th>
                <th>Attachment</th>
                <% if current_user.department == Department::HR %>
                <th>Action</th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% @emp_get_attachments.each do |attachment| %>
                <tr>
                  <td><%= attachment.attachment_name %></td>
                  <td><%= link_to "Show", attachment.attachment_url, :target => "/blank" %></td>
                  <% if current_user.department == Department::HR %>
                    <td>
                      <%#link_to "Edit",  attachment_edit_employee_path(@employee.id, attachment.id), :class=>"btn btn-success " %>
                      <%= link_to "Delete",  attachment_destory_employee_path(@employee.id, attachment.id), :method => :delete, data: {confirm: "Are You sure?"},:class=>"btn btn-danger", :remote => true %>
                    </td>
                  <% end %>                       
                </tr>
              <% end %>
            </tbody>
          </table> 			                  
        <% else %>
          <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            You have No Attachments to display.
          </div>
        <% end %> 
      </div><!--/.module-body-->
    </div><!--/.module-->
  </div>
</div>                                                                 

<script>
  $(function(){
     $("#add_field").click(function(){
      $("#add_attachment_field").append(
      "<span><label class='required'>Attachment Name</label><input class='form-control' id='employee_attachments_attachment_name' name='employee_attachments[attachment_name][]' type='text'><a onclick='$(this).parent().hide();' class='fa fa-icon fa-minus' style='float: right;'></a><br><label class='required'>Upload File</label><br><input id='employee_attachments_attachment' multiple='multiple' name='employee_attachments[attachment][]' type='file'></span>");
    });  
  });
</script>





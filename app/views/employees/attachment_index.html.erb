  <div class="wrapper">
		<div class="container">
			<div class="row">	
				<div class="span12">
					<div class="content">
						<div class="module">
							<div class="module-head">
								<h3> Attachment Info </h3>
                <% if current_user.department == Department::HR %>                                 
                <label style="font-weight:normal;margin-top:-35px;" class = "pull-right"><a><i class="fa fa-plus "></i></a> <%= link_to ' AddAttachment', attachment_form_new_employee_path  %></label>
                <% end %>

							</div>
							<div class="module-body">
							    <% if @emp_get_attachements.present? %>        	
                <table class="table table-striped table-bordered table-condensed">
								  <thead>
									 <tr>
                      <th>Attachment Title</th>
                      <th>Attachment</th>
                      <th>Action</th>
                   </tr>
								  </thead>
								  <tbody>
									  <% @emp_get_attachements.each do |attachment| %>
                    <tr>
                      <td><%= attachment.attachment_name %></td> 
                      <td><%= link_to "Download", attachment.attachment_url %></td>
                      <td>
                          <%= link_to "Edit",  attachment_edit_employee_path(@employee.id, attachment.id), :class=>"btn btn-success " %>
                          <%= link_to "Delete",  attachment_destory_employee_path(@employee.id, attachment.id), :method => :delete, data: {confirm: "Are You sure?"},:class=>"btn btn-danger " %>
                      </td>                       
                       </tr>
                  <% end %>
								  </tbody>
								 </table> 			                  
                 <% else %>
                 <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                      You have No Attachments to display.
                 </div>
                 <% end %> 
               </div><!--/.module-body-->
						</div><!--/.module-->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->                                                                 
<script>

$(function(){
   $("#add_field").click(function(){
    $("#add_attachment_field").append(
    "<span><label class='required'>Attachment Name</label><input class='form-control' id='employee_attachments_attachment_name' name='employee_attachments[attachment_name][]' type='text'><a onclick='$(this).parent().hide();' class='fa fa-icon fa-minus' style='float: right;'></a><br><label class='required'>Upload File</label><br><input id='employee_attachments_attachment' multiple='multiple' name='employee_attachments[attachment][]' type='file'></span>");
  });  
});
</script>





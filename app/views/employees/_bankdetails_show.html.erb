<div class="module-head">
  <h3>Basic Info</h3>
</div>
  <% if current_user.department == Department::HR %>                                                  
    <label style="font-weight:normal;margin-top:-30px;" class="pull-right"><a><i class="icon-edit"></i></a><%= link_to " Edit",  bankdetails_edit_employee_path(@employee), :remote => true %></label>
  <% end %>
  <div class="module-body " style="margin-left:100px;">	                                       
    <div class ="row-fluid">
      <div class="span5">		
        <div class="control-group">
          <label class="control-label" for="basicinput"><strong>Bank Name: </strong><%= @employee.bank_name %> </label>
        </div>
      </div>
      <div class="span5">	
        <div class="control-group">
          <label class="control-label" for="basicinput"><strong>Account Number: </strong><%= @employee.account_number %></label>  
        </div>
       </div>
     </div><hr>	
     <div class ="row-fluid">
       <div class="span5">		
         <div class="control-group">
          <label class="control-label" for="basicinput"><strong>Branch Name: </strong><%= @employee.branch_name %> </label>
        </div>
      </div>
      <div class="span5">	
        <div class="control-group">
          <label class="control-label" for="basicinput"><strong>PAN No: </strong><%= @employee.pan %></label>
        </div>
      </div>
    </div><hr>
  </div>


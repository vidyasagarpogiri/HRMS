<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <div class="panel-heading">
        Bank Info
      <% if current_user.department == Department::HR %>                                                  
        <label class="pull-right"><a><i class="icon-edit"></i></a><%= link_to " Edit",  bankdetails_edit_employee_path(@employee), :remote => true %></label>
      <% end %>
      </div>
      
      <div class="panel-body">
        <div class ="row">
          <div class="bio-row">
            <p><span>Bank Name</span>: <%= @employee.bank_name %></p>
          </div>
          <div class="bio-row">
            <p><span>Account Number</span>: <%= @employee.account_number %></p>
          </div>
        </div>
        <div class="row">
          <div class="bio-row">
            <p><span>Branch Name</span>: <%= @employee.branch_name %></p>
          </div>
          <div class="bio-row">
            <p><span>PAN Number</span>: <%= @employee.pan %></p>
          </div>
        </div>
        <div class ="row">
          <div class="bio-row">
            <p><span>PF Account Number</span>: <%= @employee.PFAccountNumber %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

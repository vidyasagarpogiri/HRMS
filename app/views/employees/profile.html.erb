      <div id="page-wrapper" >
                  <div class="row">
                     <div class="col-lg-12">
                        <div class="page-header">
                             <%= @employee.full_name %> 's Profile
                        </div>
                     </div>
                  </div>
                  
                  
                  
                  <div class="row">                           
                                    
                      <div class="panel-body">
                           <div class="border col-lg-12" >
                              <div class="page-header">
                                  Basic Info
                              </div>
                              <div class="col-lg-8">
                                  <div class="form-group >
                                      <label style="font-weight:normal;"> Full Name:</label>
                                      <label><%= @employee.full_name %></label>                                                                          
                                  </div>                                  
                                  <div class="form-group">
                                       <label style="font-weight:normal;">Designation:</label>
                                       <label><%= @employee.designation.designation_name unless @employee.designation_id.nil? %></label>
                                  </div>
                                  <div class="form-group">
                                      <label style="font-weight:normal;">Date Of Joining:</label>
                                      <label><%= format_date (@employee.date_of_join) %></label> 
                                  </div>
                                  <div class="form-group">
                                       <label style="font-weight:normal;">Date Of Birth:</label>
                                       <label><%= format_date (@employee.date_of_birth) %></label>
                                 </div>    
                                  
                                  <div class="form-group">                                            
                                      <label style="font-weight:normal;">Blood Group:</label>
                                      <label><%= @employee.blood_group.blood_group_name %></label>
                                  </div>                                    
                                                                           
                                  <div class="form-group">
                                       <label style="font-weight:normal;">Department:</label>
                                       <label><%= @employee.department.department_name %></label>
                                  </div>
                               </div>
                               <div class="col-lg-4">   
                                  <div class="form-group ">
                                      <label style="font-weight:normal;"> </label>
                                       <% if @employee.avatar_url.present? %>
                                         <label><%= image_tag(@employee.avatar_url,  style:"width:200px;height:200px;margin-top:-10px;")  %></label>
                                        <% else %>
                                          <label><img src="/assets/employee-icon.jpg" alt="hii" style="width:200px;height:200px;margin-top:-10px;"></label>   
                                      <% end %>                                      
                                  </div>
                               </div>   
                           </div>
                           
                           
                           <div class="border col-lg-12">
                              <div class="page-header">
                                   Education & Experiance  Info
                              </div>
                              <div class="form-group">
                                    <label style="font-weight:normal;">Specilization:</label>
                                     <% if @employee.educations.present? %>
                                    <label><%= @specialization.specilization %></label>
                                    <% else %>
                                    <label>----</label>
                                    <% end %>
                              </div>
                              <div class="form-group">
                                    <label style="font-weight:normal;">Experiance:</label>
                                    <!--<label><%# @employee.education.specilization unless @employee.education_id.nil?%></label>-->
                              </div>
                           </div> 
                           <div class="border col-lg-12">
                               <div class="page-header">
                                     Contact Info
                                </div>
                                <div class="form-group">
                                     <label style="font-weight:normal;">Mobile Number:</label>
                                     <label><%= number_to_phone(@employee.mobile_number) if @employee.mobile_number.present? %></label>                                           
                                </div>
                                <div class="form-group">
                                     <label style="font-weight:normal;">Alternate Email:</label>
                                     <label><%= @employee.alternate_email %></label> 
                                </div>            
                                <div class="form-group">
                                    <label style="font-weight:normal;">Job Location:</label>
                                    <% address = @employee.job_location.address%>
                                    <label><%= address.city %>, <%= address.state %>, <%= address.country %></label>
                                </div>
                                <div class="form-group">
                                    <label style="font-weight:normal;">Grade/Level:</label>
                                    <label><%= @employee.grade.value %></label>
                                </div>
                            </div>                                 
                        </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
       

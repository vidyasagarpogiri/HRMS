<div class="row">
  <!--widget start-->
  <aside class="profile-nav alt green-border col-lg-3">
    <section class="panel">
      <div class="user-heading alt green-bg">
        <a href="#">
          <% if @employee.present? && @employee.avatar_url.present? %>
            <%= image_tag(@employee.avatar_url) %> 
          <% else %>
            <img src="/assets/user.png"> 
          <% end %>
        </a>
        <h1><%= @employee.full_name %></h1>
        <p><%= @employee.user.email %></p>
      </div>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#basic-info" data-toggle="tab"><i class="fa fa-user"></i>Basic </a></li>
        <li><a href="#emergency-contact" data-toggle="tab"><i class="fa fa-plus"> </i>Emergency Contact </a></li>
        <li><a href="#projects" data-toggle="tab"><i class="fa fa-users"></i>Projects </a></li>
        <li><a href="#self" data-toggle="tab"> <i class="fa fa-user"></i>Self Description</a></li>
      </ul>
    </section>
  </aside>
  <aside class="profile-info col-lg-9">
    <section>
      <div class="profile-tab-content tab-content">
        <div class="tab-pane fade active in" id="basic-info"> 
          <%= render "employees/basic_info" %>                           
        </div><!--/.tab-pane-list-->
        <div class="tab-pane fade" id="emergency-contact">
          <%= render "emergency_contacts/index" %>                           
        </div><!--/.tab-pane-list-->
        <div class="tab-pane fade" id="projects">
          <%= render "projects/index" %>                           
        </div><!--/.tab-pane-list-->
        <div class="tab-pane fade" id="self">
          <%= render "employees/employee_self_description_show"%>                           
        </div><!--/.tab-pane-list-->
      </div>
    </sction>
  </aside>
</div>
  

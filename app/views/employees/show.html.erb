<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header"><%= @employee.full_name %></h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
<% if current_user.employee.role.id == 1 %>
                    <%= link_to "Edit", edit_employee_path(@employee), :class=>"btn btn-success pull-right" %>
<% end %>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                   <br>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Employee Id:</label>
                                            <label><%= @employee.employee_id %></label>                                  
                                        </div>
                                        
                                         <div class="form-group">
                                            <label style="font-weight:normal;">Date Of Joining:</label>
                                            <label><%= @employee.date_of_join %></label>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Father Name:</label>
                                            <label><%= @employee.father_name %></label>                                         
                                        </div>
                                        
                                   
                                                                                
                                        <div class="form-group">
                                            
                                            <label style="font-weight:normal;">Blood Group:</label>

                                            <label><%= @employee.blood_group.blood_group_name if @employee.blood_group.present? %></label>

                                        </div>
                                        <hr>
                                         <div class="form-group">
                                            <label style="font-weight:normal;">Role:</label>
                                            <label><%= @employee.role.role_name if @employee.role.present? %></label>

                                        </div> 
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Department:</label>
                                            <label><%= @employee.department.department_name if @employee.department.present? %></label>

                                        </div> 
                                         
                                        
                                       <br>
                                       
                                      
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                    <form role="form">

                                        
                                       
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Date Of Birth:</label>
                                            <label><%= @employee.date_of_birth %></label>
                                        </div>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Mobile Number:</label>
                                            <label><%= @employee.mobile_number %></label>                                           
                                        </div>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Gender:</label>
                                            <label><%= @employee.gender %></label>
                                        </div>
                                      <br>
                                       <hr>
                                        <div class="form-group">

                                            <label style="font-weight:normal;">Designation:</label>
                                            <label><%= @employee.designation.designation_name if @employee.designation.present? %></label>
                                        </div>

                                        <div class="form-group">
                                            <label style="font-weight:normal;">Grade/Level:</label>
                                            <label><%= @employee.grade.value if @employee.grade.present?  %></label>


                                        </div> 
                                      
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->





<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Employee Details</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Basic Form Elements
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                   
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Employee Id:</label>
                                            <label><%= @employee.id %></label>                                  
                                        </div>
                                        
                                         <div class="form-group">
                                            <label style="font-weight:normal;">Date Of Joining:</label>
                                            <label><%= @employee.date_of_join %></label>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Father name:</label>
                                            <label><%= @employee.father_name %></label>                                         
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Email id:</label>
                                           <label><%= @employee.user.email%></label>                                            
                                        </div>
                                        
                                                                                
                                        <div class="form-group">
                                            
                                            <label style="font-weight:normal;">Blood Group</label>

                                            <label><%= @employee.blood_group.blood_group_name if @employee.blood_group.present? %></label>


                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Department</label>
                                            <label><%= @employee.department.department_name if @employee.department.present? %></label>

                                        </div> 
                                         
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Job Location:</label>
                                            <label>Vishakaptnam</label>                                            
                                        </div>
                                            
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Upload Image:</label>
                                            <label>sam.jpg</label>
                                        </div>
                                       <br>
                                       <ul class="navigation-btns" style="list-style: none;display:inline;">
                                        <li><button styple=type="submit" class="btn btn-success pull-left"><%= link_to "Edit", edit_employee_path(@employee)%></button></li>
                                        <li><button type="submit" class="btn btn-success pull-left"><a href="#">Next</a></button></li>
                                        </ul>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                    <form role="form">

                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Employee name:</label>
                                            <label><%= @employee.first_name %></label>                                           
                                        </div>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Date Of Birth:</label>
                                            <label><%= @employee.date_of_birth %></label>
                                        </div>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Mobile No:</label>
                                            <label><%= @employee.mobile_number %></label>                                           
                                        </div>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Gender:</label>
                                            <label><%= @employee.gender %></label>
                                        </div>
                                        <div class="form-group">

                                            <label style="font-weight:normal;">Designation:</label>
                                            <label><%= @employee.designation.designation_name %></label>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Grade/Level</label>
                                            <label><%= @employee.grade.value if @employee.grade.present?  %></label>


                                        </div> 
                                      
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->





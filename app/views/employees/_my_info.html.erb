
<div class="module-head">							
  <h3>My Info</h3>   
</div>
<div class="module-body">
  <table class="table table-striped table-hover" id="sample-table-2">											      
      <tr>
        <th>Name</th>
        <td><%= @employee.full_name%></td>
      </tr>
      <tr>
        <th>Designation</th>
        <td><%= @employee.designation.designation_name if @employee.designation.present? %></td>
      </tr>
      <tr>
        <th>Department</th>
        <td><%= @employee.department.department_name if @employee.department.present? %></td>
      </tr>
      <tr>
        <th>Location</th>
        <td><%= @employee.job_location.address.city if @employee.job_location.present? %></td>
      </tr>
      <tr>
        <th>Last Login</th>
        <td><%= format_date_time(@employee.user.last_sign_in_at) %></td>
      </tr>     
  </table>   
</div><!--/.module-body -->


<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <div id="bank_info_show">
        <div class="panel-heading">
          Bank Details edit
        </div>
        
        <div class="panel-body"> 
          <%= form_tag bankdetails_update_employee_path(@employee), :remote => true, :html => {:class=>"form-horizontal bankdetails-edit-form"} do %> 
                
            <div class="row">
              <div class="form-group">
                <label class="control-label col-lg-2" for="basicinput">Name Of Bank</label>
                <div class="col-lg-8">
                  <input type="text" id="basicinput" placeholder="Enter Bank Name" class="form-control bankname" name="bank_name" data-error="Pelase enter Valid Bank Name" required >
                  <span class="help-block with-errors"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <label class="control-label col-lg-2" for="basicinput">Account No</label>
                <div class="col-lg-8">
                  <input type="text" id="basicinput" placeholder="Enter Account No" class="form-control accountno" pattern="[0-9a-zA-Z]*" name="account_number" data-error="Please enter Valid 16 Digit Account No" required>
                  <!--<%# f.text_field :account_number, :class => "span8 form-control", :placeholder =>"Enter Account No", :data => {:error => "Please Enter 16 Digit Account No"}, :required => true,:pattern => '[0-9 ]{16}'%>-->
                  <span class="help-block with-errors"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <label class="control-label col-lg-2" for="basicinput">Branch Name</label>
                <div class="col-lg-8">
                  <input type="text" id="basicinput" placeholder="Enter Branch Name" class="form-control branchname" pattern="[a-zA-Z/-/,/s ]*" name="branch_name" data-error="Please enter Valid Branch Name" required>
                  <!-- <%# f.text_field :branch_name , :class => "span8 form-control", :placeholder =>"Enter Branch Name", :data => {:error => "Please Enter Branch Name"}, :required => true,:pattern => '[a-zA-Z/s ]*'%>-->
                  <span class="help-block with-errors"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <label class="control-label col-lg-2" for="basicinput">PAN No</label>
                <div class="col-lg-8">
                  <input type="text" id="basicinput" placeholder="Enter Enter Pan No" class="form-control pan" pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" name="pan" data-error="Please enter Valid Pan No" required>
                  <!--<%# f.text_field :pan, :class => "span8 form-control", :placeholder =>"Enter Pan No", :data => {:error => "Please Correct Pan No"}, :required => true,:pattern => '[0-9A-Z/s ]{10}'%>-->
                  <span class="help-block with-errors"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <label class="control-label col-lg-2" for="basicinput">PF Account Number</label>
                <div class="col-lg-8">
                  <input type="text" id="basicinput" placeholder="Enter PF Account Number" class="form-control PFAccountNumber" name="PFAccountNumber" data-error="Please Enter Valid PF Account Number" required>             
                  <span class="help-block with-errors"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <button type="submit" class="btn btn-success">Save </button>
                  <%= link_to 'Cancel', bankdetails_show_employee_path(@employee.id), :class=>"btn btn-danger ", :remote => true %>
                </div>
              </div>
           </div>
        <% end %>        
      </div> <!--/module-body-->      
    </div>
  </div>
</div>

  <script>
    $(function(){          
      <% if @employee.present? %>
        $(".bankname").val('<%= @employee.bank_name %>');
        $(".accountno").val('<%= @employee.account_number %>');
        $(".branchname").val('<%= @employee.branch_name %>');
        $(".pan").val('<%= @employee.pan %>');
        $(".PFAccountNumber").val('<%= @employee.PFAccountNumber %>');
      <% end %>
    });
  </script>

  <script>
    $(function(e){
      $(".bankdetails-edit-form").validator();
    });
  </script>                     

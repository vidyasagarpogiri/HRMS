<div id="bank_info_show">
  <div class="module-head">
    <h3>Bank Details edit</h3>
  </div>
  <div class="module-body">
    <%= form_tag bankdetails_update_employee_path(@employee), :remote => true, :html => {:class=>"form-horizontal row-fluid bankdetails-edit-form"} do %> 
    <div class="control-group">
      <label class="control-label" for="basicinput">Name Of Bank</label>
        <div class="controls">
          <input type="text" id="basicinput" placeholder="Enter Account No" class="span8 bankname" name="bank_name" pattern="[a-zA-Z/s ]*" data-error="Pelase enter Valid Bank Name" required >
          <span class="help-block with-errors"></span>
        </div>
    </div>
    
    <div class="control-group">
      <label class="control-label" for="basicinput">Account No</label>
        <div class="controls">
        <input type="text" id="basicinput" placeholder="Enter Account No" class="span8 accountno" pattern="[0-9]{16}" name="account_number" data-error="Pelase enter Valid 16 Digit Account No" required>
          <!--<%# f.text_field :account_number, :class => "span8 form-control", :placeholder =>"Enter Account No", :data => {:error => "Please Enter 16 Digit Account No"}, :required => true,:pattern => '[0-9 ]{16}'%>-->
          <span class="help-block with-errors"></span>
        </div>
    </div>
    
    <div class="control-group">
      <label class="control-label" for="basicinput">Branch Name</label>
        <div class="controls">
        <input type="text" id="basicinput" placeholder="Enter Branch Name" class="span8 branchname" pattern="[a-zA-Z/s ]*" name="branch_name" data-error="Pelase enter Valid Branch Name" required>
         <!-- <%# f.text_field :branch_name , :class => "span8 form-control", :placeholder =>"Enter Branch Name", :data => {:error => "Please Enter Branch Name"}, :required => true,:pattern => '[a-zA-Z/s ]*'%>-->
          <span class="help-block with-errors"></span>
        </div>
    </div>
    
    <div class="control-group">
      <label class="control-label" for="basicinput">Pan No</label>
        <div class="controls">
        <input type="text" id="basicinput" placeholder="Enter Enter Pan No" class="span8 pan" pattern="[0-9A-Z ]{10}" name="pan" data-error="Pelase enter Valid Pan No" required>             
          <!--<%# f.text_field :pan, :class => "span8 form-control", :placeholder =>"Enter Pan No", :data => {:error => "Please Correct Pan No"}, :required => true,:pattern => '[0-9A-Z/s ]{10}'%>-->
          <span class="help-block with-errors"></span>
        </div>
    </div>
    
    	<ul class="navigation-btns pull-left">
		    <li><button type="submit" class="btn btn-success">Update </button><!--<%# link_to 'Update', bankdetails_update_employee(@employee), :class=>"btn btn-success ", :remote => true %>--></li>
			  <li><button type="submit" class="btn btn-danger">Cancel </button><!--<%# link_to 'Cancel', employee_educations_path(@employee), :class=>"btn btn-danger ", :remote => true %>--></li>									
	   </ul>		
	   <% end %>        
  </div> <!--/module-body-->      
</div>

<script>
  $(function(){          
      <% if @employee.present? %>
        $(".bankname").val('<%= @employee.bank_name %>');
        $(".accountno").val('<%= @employee.account_number %>');
        $(".branchname").val('<%= @employee.branch_name %>');
        $(".pan").val('<%= @employee.pan %>');
      <% end %>
 });
</script>
 
<script>
  $(".bankdetails-edit-form").validator();
</script>                     

                                            <label class="required" >Date of Exit</label>
                                            <%= text_field(:employee, :date_of_exit,  :class=>"form-control datepicker") %>
                                        </div>
                                        <div class="form-group">
                                            <label class="required" >Status of F & F</label>
                                            <%= e.collection_select :ff_status_id, FfStatus.all, :id, :status_name, { :prompt => "Please Select" }, { :class => "department form-control" } %>                                                                          
                                        </div>             
                                        <br>
																				
                                        <button type="submit" class="btn btn-success pull-left">Save </button> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
																				<%= link_to 'Cancel', show_exit_employee_path(@id), :class => "btn btn-success pull-left" %>
                                                    
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>

                                          <strong><%= employee.user.email%></strong><br>
                                          <% if employee.designation.present? %>
                                            <i class="fa fa-cog"></i> <%= employee.designation.designation_name if employee.designation.present? %><br>
                                          <% end %>
                                          <% if employee.blood_group.present? %> 
                                            <i class="fa fa-tint"></i> <%= employee.blood_group.blood_group_name if employee.blood_group.present? %><br>

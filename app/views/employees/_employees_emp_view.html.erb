              <div class="directory-info-row">
              <div class="row">
                <% if @employees.present? %>
                  <% @employees.each do |employee| %>
                  <div class="col-md-6 col-sm-6">
                      <div class="panel">
                          <div class="panel-body">
                              <div class="media">
                                  <a class="pull-left" href="#">
                                      
                                         <% if employee.present? && employee.avatar_url.present? %>
                                            <%= image_tag employee.avatar_url, :class=>"thumb media-object", :style => "height:175px;width:175px" %> 
                                          <% else %>
                                            <% if employee.gender == "Female" %>
                                              <%= image_tag "1.jpg", :class=>"thumb media-object", :style => "height:175px;width:175px" %> 
                                            <% else %>
	                                            <%= image_tag "user.png", :class=>"thumb media-object", :style => "height:175px;width:175px" %> 
                                            <% end %>
                                          <% end %>         
                                  </a>
                                  <div class="media-body">
                                       <h4><%= link_to employee.full_name,  profile_employee_path(employee) %><span class="text-muted small"> <% if employee.designation.present? %> - <%= employee.designation.designation_name if employee.designation.present? %><% end %></span></h4>

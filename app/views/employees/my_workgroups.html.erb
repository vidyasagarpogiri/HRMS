<div class="panel panel-info">
  <div class="panel-heading"> 
    My Work Groups <%= link_to " New Work Group ",new_workgroup_path, :class => "fa fa-plus pull-right" %>
    <%= link_to " All Workgroups ",workgroups_path, :class => "fa fa-plus pull-right " %>    
  </div>                                         
  <div class="row">
    <div class="col-sm-12">
      <section class="panel">        
        <div class="panel-body">
          <div class="adv-table">
            <% if @workgroups.present? %>  
            <table  class="display table table-bordered table-striped table-dynamic" id="dynamic-table">     
              <thead>											      
                <tr>
                  <th>Icon</th>
                  <th>Work Group Name</th>
                  <th>Description</th>	
                  <th>Admin Name</th>
                  <th>Actions</th>														            									      		
                </tr>
              </thead>              
              <tbody>
              <% @workgroups.each do |workgroup| %>  
                <tr class="gradeA"> 
                  <td class="center">
                   <% if workgroup.workgroupicon.present? && workgroup.workgroupicon_url.present? %>
                      <%= image_tag workgroup.workgroupicon, size: "60x20" %>
                   <% else %>
                      <%= image_tag "workgroup.png", :width => "60px", :height => "20px" %> 
                   <% end %>
                  </td>          
                  <td><%= link_to workgroup.name,workgroup_path(workgroup) if workgroup.name.present? %></td>
                  <td><%= workgroup.description %></td>
                  <td><%= workgroup.admin_name %></td>                   
                  <td> 
                  <% if current_user.employee.id == workgroup.admin_id || WorkgroupsEmployee.where(is_moderator: true,employee_id: current_user.employee.id, workgroup_id: workgroup.id ).present?%>
                    <ul class="navigation-btns pull-right" >
                      <li><%# link_to 'Show', workgroup_path(workgroup), :class => "btn btn-info " %></li>
                      <li><%= link_to 'Edit', edit_workgroup_path(workgroup.id), :class => "btn btn-success " %></li>
                      <li><%# link_to "Delete",workgroup_path(workgroup.id),method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger" %></li>
                    </ul>
                  </td>
                <% end %>
                </tr>
                <% end %>
              </tbody>              
            </table>
            <% else %> 
            <div class="module-body">                                           
              <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  No Work Groups to display.
              </div>
            </div>
            <% end %>
            </div><!--module-body -->    																																											                               
          </div><!-- /.module-->									      				                                      
        </section><!--/.content-->                    
      </div><!--/.col-sm-12-->                
    </div><!--/.row-->
  </div><!--/panel panel-info-->



 
   

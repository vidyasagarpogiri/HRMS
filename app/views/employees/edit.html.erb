  <div id="page-wrapper">
           <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Employee Details</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                <%= @employee.errors.full_messages.first if @employee.errors.any? %>
                                   <%= form_for(@employee) do |f| %>
                                   <br>
                                        <div class="form-group">
                                            <label class="required">Employee Id:</label>
                                              <%= f.text_field :employee_id, :class => "form-control", :placeholder =>"Enter Emp Id" %>
                                                                                     
                                        </div>
                                        
                                    <div class="form-group">
                                     <label class="required">Title:</label><br>
                                            
                                     <%= f.select(:title, options_for_select([['Mr', 'Mr'], ['Mrs', 'Mrs']]), {}, :class=> "form-control", :id=>"disabledSelect") %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="required">Father name:</label>
                                             <%= f.text_field :father_name, :class => "form-control",  :placeholder=>"Enter Father name" %>
                                                                              
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="required">Email id:</label>
                                            <input class="form-control" placeholder="Enter Email id", name="email">                                            
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="required">Blood Group:</label><br>
                                             <%= f.collection_select :blood_group_id, BloodGroup.all, :id, :blood_group_name, { :prompt => "Please Select" }, { :class => "blood_group, form-control", :id => "disabledSelect" } %>
                                          
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="required">Department:</label><br>
                                            <%= f.collection_select :department_id, Department.all, :id, :department_name, { :prompt => "Please Select" }, { :class => "department, form-control", :id => "disabledSelect" } %>
                                        </div> 
                                         
                                        <div class="form-group">
                                            <label class="required">Job Location:</label>
                                            <input class="form-control" placeholder="Enter Job Location">                                            
                                        </div>
                                            
                                        <div class="form-group">
                                           <%= f.file_field :avatar %>
                                        </div>
                                       <br>
                                       <button type="submit" class="btn btn-success pull-left">Save & Continue</button>
                                    
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                    <h1></h1>
                                  
                                    <!--    <fieldset disabled> -->
                                        <div class="form-group">
                                            <label class="required">Date Of Joining:</label>
                                            <%= f.text_field :date_of_join, :placeholder=>"Enter Date Of confirmation", :class=>"form-control datepicker" %>
                                           
                                        </div>
                                        <div class="form-group">
                                            <label class="required">Employee First name:</label>
                                             <%= f.text_field :first_name, :class =>"form-control", :placeholder => "Enter Employee First Name" %>                                           
                                        </div>
																				<div class="form-group">
                                            <label class="required">Employee Last name:</label>
                                             <%= f.text_field :last_name, :class =>"form-control", :placeholder => "Enter Employee Last Name" %>                                           
                                        </div>
                                        <div class="form-group">
                                            <label class="required">Date Of Birth:</label>
                                            <%= f.text_field :date_of_birth, :class=>"form-control datepicker", :placeholder=>"Enter Employee Date Of Birth" %>
                                        </div>
                                        <div class="form-group">
                                            <label class="required">Mobile No:</label>   
                                              <%= f.text_field :mobile_number, :class=>"form-control", :placeholder=>"Enter Mobile No" %>                                         
                                        </div>
                                        <div class="form-group">
                                            <label class="required">Gender:</label><br>
                                             <%= f.select(:gender, options_for_select([['Male', 'Male'], ['Female', 'Female']]), {}, :class=> "form-control", :id=>"disabledSelect") %>
                                        </div>
                                        <div class="form-group">
                                            <label class="required">Designation:</label><br>
                                            <%= f.collection_select :designation_id, Designation.all, :id, :designation_name, { :prompt => "Please Select" }, { :class => "designation form-control", :id=>"disabledSelect"  } %>
                                            
                                            
                                        </div>
                                        <div class="form-group">
                                            <label class="required">Grade/Level:</label><br>
                                             <%= f.collection_select :grade_id, Grade.all, :id, :value, { :prompt => "Please Select" }, { :class => "grade form-control", :id=>"disabledSelect"  } %>
                                        </div>                                           
                                        <br>
                                        
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>


         </div>
          <!-- /#page wrapper -->

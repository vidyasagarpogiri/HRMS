<div class="wrapper">
  <div class="container">
	  <div class="row">
      <div class="span12">
		    <div class="content">
          <div class="module">
              <div class="module-head">							
                <h3> Form 16 </h3>
                 <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to "Back To Tax Forms", tax_forms_path %></label> 
              </div>            
              
              <div class="module-body">				                                                                      
                <% if @tax_form.present? %>
                  <table class="table table-striped table-bordered table-condensed" >
                    <thead>											      
                      <tr>
                        <th width="280px;">Year </th>	
                        <th width="280px">Total Income</th>	
                        <th width="280px"> Total Savings</th>	
                        <th width="280px"> Total TDS</th>										            									      		
                      </tr>
                    </thead>
                    <tbody>
                        <tr>
                          <td><%= @tax_form.assesment_year %></td>
                          <td><%= @tax_form.total_income %></td>
                          <td><%= @tax_form.total_savings %></td>
                          <td><%= @tax_form.total_tds %></td>
                        </tr>
                    </tbody>
                  </table>
                <% else %>
                  <h2>There is no tax form with that year </h2>
                <% end %>
              </div>
        
          
                                                                                                                 
          </div><!--module-->
        </div><!--content-->
		  </div><!--/.span12-->
	  </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->  

<div class="wrapper">
	<div class="container">
		<div class="row">     			
			<div class="span8">	
			  <div class="module">
          <div class="module-head">
			      <h3>Events Details</h3>			      
	        </div>			
		      <div class="module-body">	       
            <h5><%= @amzurevent.title %></h5>               
              <%= raw @amzurevent.description %><br>
            Event Date: <%= format_date (@amzurevent.held_on) %>
            <% if current_user.department == Department::HR %>
              <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                <li><%= link_to 'Edit', edit_amzur_event_path(@amzurevent), :class => "btn btn-success " %></li>
                <li><%= link_to "Delete", amzur_event_path(@amzurevent), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
              </ul>
            <% end %> <hr>                      
					</div><!--/.module-body-->
				</div><!--/.module-->
			</div>	
			<div class="span4">	
        <div class="module">	
          <div class="module-head">
            <div class="box-title">
              <h3>All Events</h3> 
            </div>                                            
          </div>
          <div class="module-body">
          </div><!--/.module-body-->
       </div><!--/.module-->
		</div><!--/.span4-->
	</div>				
</div>		

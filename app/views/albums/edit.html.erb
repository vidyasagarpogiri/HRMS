 view for editing existing album's title and decsription. -->
<div class="panel panel-info">
  <div class="panel-heading">
    Edit Album
	</div>					 
  <div class="panel-body">
		<%= form_for @album, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal row-fluid"} do |f| %>
    <div class="form-group">
      <label class="col-lg-2 control-label" for="basicinput">Title</label>
        <div class="col-lg-7">
          <%= f.text_field :title, :class => "form-control", :placeholder =>"Enter Title for Album", :data => {:error => "Please Enter Title for Album"}, :required =>true  %>                             
          <span class="help-block with-errors"></span>
        </div>
		</div>
	  
	  <div class="form-group">
	    <label class="col-lg-2 control-label" for="basicinput">description</label>
	    <div class="col-lg-7">
	       <%= f.text_area :description, :class => " form-control", :placeholder =>"Enter description Name", :data => {:error => "Please Enter  description name"}, :required =>true  %>                             
          <span class="help-block with-errors"></span>
	    </div>
	  </div>
	  
	  <div class="form-group">
	    <label class="col-lg-2 control-label" for="basicinput"></label>
	    <div class="col-lg-7">
		    <%= f.submit  'Save', :class => "btn btn-success " %></li> 
		    <%= link_to  'Cancel', album_path(@album), :class => "btn btn-danger " %>
		  </div>
	 </div>			 
	<% end %>
	</div><!--/.module-body-->
</div><!--/.module-->
				

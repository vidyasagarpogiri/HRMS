<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
						  <h3>Album</h3>
						  <label style="margin-top:-20px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "New Album", new_album_path %></label>   
					  </div>
					  <div class="module-body">
					  					   
						  <% @albums.each do |album| %>
					     <%= album.title %>
					     <%= album.description %>
					     <%= link_to "Show Album", album_path(album), :class=>"btn btn-info" %>	<br><hr>
					     <ul class="row" style="margin-left:0px;">
                 <% album.photos.each do |photo| %>
                  <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4"><%= image_tag photo.image_url, :width => "100px;", :height => "100px", :class=>"img-responsive" %></li>
                 <% end %>    
                </ul>
					     
					  
					     			     
						  <% end %>
						  						   
						</div><!--.module-body-->
					</div><!--/.module -->
		    </div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->

<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
						  <h3>Gallery</h3>
						  <label style="margin-top:-20px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "New Album", new_album_path %></label>   
					  </div>
            <div class="module-body span12" style="background-color: #fff;margin-left:2px;width:1149px">
              <% if @albums.present? %>	
              <div class="span12">             	   
              <% @albums.each do |album| %>              							                    
		            <div class="span6" style="margin-left:0px;">						      
		              <div class="span4" style="padding:2px;border:solid 1px #eee;width:60px;margin-top:10px;margin-left:10px;">
                    <% if album.present? && album.employee.avatar_url.present? %>
                      <%= image_tag album.employee.avatar_url, :width => "60px", :height => "60px" %>
                    <% else %>
                      <% if album.employee.gender == "Female" %>
                        <%= image_tag("1.jpg", :style => "width:60px;height:60px;") %> 
                      <% else %>
                        <%= image_tag "user.png", :width => "60px", :height => "60px" %> 
                      <% end %>
                    <% end %>
                  </div>
                
                  <div style="padding:2px;margin-left:50px;margin-top:10px">
                    <strong>
                      <%= album.employee.first_name %> <%= album.employee.last_name %>
                    </strong> added new 
                    <strong>
                      <%= album.title %>
                    </strong> Aldum
                  </div> 
                             		       					       					       
                 <div class="image-container" style="margin-top:50px;"> 
                    <div ><a href="<%= album_path(album) %>" title ="click to view Album"><%= image_tag album.photos.first.image_url, :width => "300px", :height => "200px",  :class => "photo-style" %></a></div><br>                                    
                   <%# link_to "view Album", album_path(album), :class=>"btn btn-info" %>                             
                 </div>	
               </div>
            <% end %>	
              </div>	
          				     			     
				   
				    					     
				  	<% else %>
				  	   <div class="alert alert-success alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    No Albums to display.Be the first to create!!
               </div>					   
				  	<% end %>
						</div><!--.module-body-->
					</div><!--/.module -->
		    </div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->


<style>
  .photo-style{
    margin-left:10px;
    border:dotted 1px #82B4E6;
    padding:5px;
    overflow:hidden;
  }
</style>


<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
						  <h3>Gallery</h3>
						  <label style="margin-top:-20px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "New Album", new_album_path %></label>   
					  </div>
					  <div class="module-body">
					  	<% if @albums.present? %>				   
						    <% @albums.each do |album| %>
						    
						    <div class ="row-fluid cube ">  
                  <div class="span3">		
                    <div class="control-group">
                      <label class="control-label" for="basicinput"><strong>Album Title: </strong> <%= album.title %></label>                
                    </div>
                  </div>
                  <div class="span6">		
                    <div class="control-group">
                      <label class="control-label" for="basicinput"><strong>Description: </strong> <%= album.description %></label>                
                    </div>
                  </div>	<br>				       
					       
					       
					       <div class="image-container"> 					        					        
                   <% album.photos.each do |photo| %>
                    <%= image_tag photo.image_url, :class => "group1" %></li>
                   <% end %>    
       
                    <%= link_to "view Album", album_path(album), :class=>"btn btn-info" %>	<br>
                 
                  
					       </div>				  					     			     
						    <% end %>						     
						  	<% else %>
						  	   <div class="alert alert-success alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        No Albums to display.Be the first to create!!
                   </div>					   
						  	<% end %>
						</div><!--.module-body-->
					</div><!--/.module -->
		    </div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->

<script>
  $(function() {
    $( document ).tooltip();
  });

    $(function() {
  $(".group1").colorbox({rel:'group1', transition:"none", width:"75%", height:"75%"});
  
   $('.slider-for').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      fade: true,
      asNavFor: '.slider-nav'
  });
  $('.slider-nav').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      asNavFor: '.slider-for',
      dots: true,
      centerMode: true,
      focusOnSelect: true
  });
      
  
  });
  </script>
  

<div class="wrapper">
  <div class="container">
    <div class="row">                
      <div class="span12">
        <div class="content">         
				  <div class="module">
					  <div class="module-head">
						  <h3>Album</h3>
						  <label style="font-weight:normal;margin-top:-10px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "New Album", new_album_path %></label>   
					  </div>
					   <div class="module-body">
						  <% @albums.each do |album| %>
					     <%= album.title %>
					     <%= album.description %>
					     <% album.photos.each do |photo| %>
					      <%= image_tag photo.image_url, :width =>"200", :height => "200" %>                  
					     <% end %> 
					     <%= link_to "Show Album", album_path(album), :class=>"btn btn-info" %>	<br>			     
						  <% end %>
						  						   
						</div><!--.module-body-->
					</div><!--/.module -->
		    </div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->




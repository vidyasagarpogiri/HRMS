<div class="panel panel-info">
  <div class="panel-heading"> 
    Policies
     <% if current_user.department == "HR" %>
      <span class="pull-right">
       <%= link_to 'Add New Policy',  new_policy_path %>
     </span>
     <% end %>
  </div>
    <!--main content start-->
      <section id="main-content">
          <section class="wrapper site-min-height">
              <!-- page start-->
              <div class="row">
                <div class="col-md-9">
              <div class="tab-content">
              <div class="tab-pane active" id="tab_1">
                <div class="panel-group" id="accordion1">
                 <% @policies.each do |policy| %>
                 <div class="panel panel-danger">
                          <div class="panel-heading">
                         
                              <h4 class="panel-title">
                                  <a href="#accordion1_1" data-parent="#accordion1" data-toggle="collapse" class="accordion-toggle">
                                     <%= policy.title %>
                                  </a>
                              </h4>
                          </div>
                          <div class="panel-collapse collapse  in" id="accordion1_1">
                              <div class="panel-body">
                               <label class="desc"><%= raw policy.details %></label>
                                <%= link_to "Continue..", policy_path(policy), :class => "pt4" %><br>
                              </div>
                            </div>
                            
                         </div>
                        
                      </div>
                      
                       <%end%>
                  </div>
              </div>
             
        
                
                
                
                
                <div class="col-md-3">
                <h4>All Policies</h4>
                    <ul class="vertical-menu">
                        <% if @policies.present? %> 
                        <% @policies.each do |policy| %> 
                        <li><a href="#tab_1" data-toggle="tab"><i class="fa fa-bullhorn"></i><%= policy.title %></a></li>
                        <%end%>
                        <%else%>
                        <div class="panel panel-success">
                          <div class="panel-heading">
                              <h4 class="panel-title">
                         No policies to display.
                         </h4>
                         </div>
                        </div>
                        <%end%>
                        
                    </ul>
                               
                </div><!--col-md-3-->



              </div><!--row-->
              <!-- page end-->
          </section>
      </section>
      <!--main content end-->

















































<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
			        <h3>Policy Details</h3>
			        <% if current_user.department == "HR" %> 
			        <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-plus-sign"></i></a> <%= link_to 'Add Policy',  new_policy_path %>
			        </label>
			        <% end %>
					  </div>						
					  <div class="module-body">
					    <% if @policies.present? %> 
              <% @policies.each do |policy| %> 
               <h5><%= policy.title %></h5>
                <% if @edit_permission.present? %>
                <ul class="navigation-btns pull-right" style="margin-top:-30px">
                  <li><%= link_to 'Edit', edit_policy_path(policy), :class => "btn btn-success " %></li>
                  <li><%= link_to "Delete", policy_path(policy.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>     
                </ul>
                <% end %>
                <label class="desc"><%= raw policy.details %></label>
                <%= link_to "Continue..", policy_path(policy), :class => "pt4" %><br>
                Attachment: <%= link_to "show", policy.document_url, :target => "/blank" %><hr>
            <% end %>
            <% else %>
            <div class="alert alert-success alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                No policies to display.
            </div>
            <% end %> 
             <%= paginate  @policies %>      	           
            </div><!--/.module-body-->
          </div><!--/.module-->
        </div><!--/.content-->
      </div><!--/.span12-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->

<div class="wrapper">
 <div class="container">
	<div class="row">

  <div class="span12">
		<div class="content">

			<div class="module">
				<div class="module-head">
					<h3>Policy Details</h3>
					<% if current_user.department == Department::HR %> 
					<label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-edit"></i></a> <%= link_to 'Add New Policy',  new_policy_path %></label>
					<% end %>
						</div>
							<div class="module-body">
							
							 <% if @policies.present? %> 
                                                                                                         
        <table class="table table-striped table-hover" id="sample-table-2">     
            <thead>											      
	            <tr>
		            <th>Policy Title</th>
		            <th>Details</th>
		            <th>Document</th>											            									      		
	            </tr>
            </thead>
             <% @policies.each do |policy| %>
            <tbody>
	            <tr>               
		            <td class="center"><%= policy.title %></td>
		            <td><%= policy.details %></td>
		            <td><%= link_to "Download", policy.document_url, :target => "/blank" %></td>
               <% if current_user.department == Department::HR %>
		            <td> 
		               <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                     <li><%= link_to 'Edit', edit_policy_path(policy), :class => "btn btn-success " %></li>
                     <li><%= link_to "Delete", policy_path(policy.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                   </ul>
                 </td>
               <% end %>
	            </tr>
            </tbody>
            <% end %>
        </table>                                                              
                                
                              
          <% else %>
   
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          No policies to display.
   </div>
      <% end %>
      
	           
							</div><!--/.module-body-->
						</div><!--/.module-->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
	



<div class="row">
  <div class="col-lg-12">
    <section class="panel panel-info">
    <header class="panel-heading">
    Generic Investment Declaration Info
    <% if current_user.department == Department::HR %>         
      <span class="pull-right">
        <%= link_to ' Add Investment', new_general_investment_path, :class =>" btn btn-success btn-xs" %>
        <%= link_to ' Add Section', new_section_declaration_path, :class =>" btn btn-success btn-xs" %>
      </span>
    <% end %>
    </header>

    <div class="panel-body">
      <% if @sections.present? %>
        <table class="table table-striped table-bordered table-condensed" >
          <tr>
            <th>Section</th>
            <th>Titles</th>
            <th>Max Values</th>
            <th>Action</th>
          </tr>
          <% @sections.each do |sec| %>										      
            <tr>
              <td class="center"><%= sec.section %></td>                   	
              <td>
                <% sec.general_investments.each do |gen| %>
                  <table class="table table-striped table-bordered table-condensed">
                    <tr>
                      <td>
                        <%= link_to gen.title, "#showInvestmentItem",  :class => "show-investment ",   :url =>  general_investment_path(gen),  "data-toggle" => "modal", :id => "gen_#{gen.id}"   %>
                      </td>
                      <!-- <td> 
                        <% if current_user.department == Department::HR %>
                          <%# link_to 'Edit',  edit_general_investment_path(gen), :class => "btn btn-success " %>
                        <%end%>  
                      </td> -->
                    </tr>
                  </table>
                <% end %>
              </td>
              <td> <%= sec.maximum_limit %> </td>
              <td> 
                <% if current_user.department == Department::HR %>
                  <%= link_to 'Edit',  edit_section_declaration_path(sec.id), :class => "btn btn-success " %>
                <% end %>  
              </td>										            									      		
            </tr>             		                                         
          <% end %> 
        </table> 					                                                      
      <% else %>
        <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          You have No Generic Investment Declaration Details to display.
        </div>
      <% end %>

      </div>    
    </section>    
  </div>          
</div>   




<script>
  $(function(){
    $(".show-investment").click(function(){
      var url = $(this).attr("url");
      $.ajax({
        type : "GET",
        url : url,
        dataType : "script"
      });
    });
  });
</script>


<!-- Modal -->
<div class="modal fade" id="showInvestmentItem" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">General Invsetment</h4>
      </div>
      <div class="modal-body show-investment-modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>




<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="content">
          <div class="module">
          
            <div class="module-head">							
              <h3>Generic Investment Declaration Info</h3> 
              <% if current_user.department == Department::HR %>                                
              <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to ' Add Section Declaration', new_section_declaration_path %></label><label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a><%= link_to ' Add Investment Declaration', new_general_investment_path %></label>
              <% end %>
              </div><!--/.module-head -->
              
              <div class="module-body">
                <% if @sections.present? %>
                  <table class="table table-striped table-bordered table-condensed" >
                    <thead>	
                      <% @sections.each do |sec| %>										      
                        <tr>
                          <th class="center">Section : <%= sec.section %></th>
                         	<th>Maximum Limit : <%= sec.maximum_limit %> </th>
                         	<th> 
                           	<% if current_user.department == Department::HR %>
                              <%= link_to 'Edit',  edit_section_declaration_path(sec.id), :class => "btn btn-success " %>
                            <% end %>  
                          </th>										            									      		
                      </tr>
                    </thead>
                    <tbody>               		      
                    <% sec.general_investments.each do |gen| %>
                    <tr>
                      <td><%= gen.title%><td>
                      <td><%= gen.decription%></td>
                      <td> 
                       	<% if current_user.department == Department::HR %>
                          <%= link_to 'Edit',  edit_general_investment_path(gen), :class => "btn btn-success " %>
                        <%end%>  
                     </td>
                    </tr>
                    <%end%>

                  </tbody>  
                  
                 <% end %> 
                </table> 					                                                      
              <% else %> 
              <div class="alert alert-success alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  You have No Generic Investment Declaration Details to display.
                </div><br>
              <% end %>
            </div><!--/.module-body --> 
            
            
          </div><!--/.module -->   
        </div><!--/.content-->
      </div><!--/.span12-->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->         




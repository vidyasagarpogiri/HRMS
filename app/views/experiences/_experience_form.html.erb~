                         <span class="help-block with-errors"></span>
                      </div>
								</div>
									        
<div class="control-group">
                  <label class="control-label" for="basicinput">Designation</label>
                      <div class="controls">
                        <%= f.text_field :last_designation, :class => "span8 form-control", :placeholder =>"Enter Designation", :data => {:error => "Please Enter Designation"}, :required => true, :pattern => '[a-zA-Z/s ]*' %>
                         <span class="help-block with-errors"></span>
                      </div>
								</div>
	
	
		<div class="control-group">
										<label class="control-label" for="basicinput">From</label>

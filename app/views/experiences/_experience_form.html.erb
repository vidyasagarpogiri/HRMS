
<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">Experience Details</div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
<div class="errors">
</div>
                                   <%= form_for ([@employee, @experience]), :remote => true do |f| %>
                                        <div class="form-group">
                                            <label class="required">Company Name</label>
                                            <%= f.text_field :previous_company, :class => "form-control", :placeholder =>"Enter Company Name" %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="required">Designation</label><br>
                                            <%= f.text_field :last_designation, :class => "form-control", :placeholder =>"Enter Designation" %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="required">From</label>
                                            <%= f.text_field :from_date, :class => "form-control datepicker" %>                    
                                        </div>
                                        
                                        
                                        <div class="form-group">
                                            <label class="required">To</label>
                                            <%= f.text_field :to_date, :class=>"form-control datepicker" %>
                                                                
                                        </div>
                                        
                                        <br>
                                         <ul class="navigation-btns" style="list-style: none;display:inline;">
                                           <li> <%= f.submit  'Save', :class => "btn btn-success pull-left" %></li>
                                            <li><%= f.submit 'Save & New', :class =>"btn btn-success pull-left" %></li>
                                            	<li><%= link_to 'Cancel', employee_experiences_path(@employee), :class=>"btn btn-danger btn btn-success pull-right" %></li>
                                         </ul>   
                                                    
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                    <h1></h1>
                                    <form role="form">
                                    <!--    <fieldset disabled> --> 
                                                                                                              
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
         </div>

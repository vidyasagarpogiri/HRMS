<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Experience Details</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
	                      <% if current_user.employee.role.id == 2 %>
                        <label style="font-weight:normal;padding:20px;" class = "pull-right"><i class="fa fa-plus "></i> <%= link_to 'Add Experience',  new_employee_experience_path(@employee.id) %></label>
                        <% end %>

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                <% if  @experinces.present? %>
                                
                                
                                <table class="table table-striped table-hover" id="sample-table-2">
											            <thead>											      
												            <tr>
													            <th class="center">Company </th>
													            <th>Designation </th>	
													            <th>Joining Date</th>
													            <th>Relieving date</th>
													            <th>working Period</th>		
													            <th></th>									      		
												            </tr>
											            </thead>
											              <% @experinces.each do |experience| %>
											            <tbody>
												            <tr>               
													            <td class="center"><%= experience.previous_company %></td>
													            <td> <%= experience.last_designation %> </td>
													            <td> <%= format_exp_date(experience.from_date) %>> </td>
													            <td> <%= format_exp_date(experience.to_date) %> </td>
                                      <td> <%= difference_in_months(experience.from_date,experience.to_date )%> </td>
													            
                                      <% if current_user.employee.role.id == 2 %>
													            <td> 
													               <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                          <li><%= link_to 'Edit', edit_employee_experience_path(@employee.id, experience.id), :class => "btn btn-success" %></li>                        
                                          <li><%= link_to "Delete", employee_experience_path(@employee, experience.id), method: :delete, data: {confirm: "You sure?"}, :class=>"btn btn-danger " %></li>                                         
                                        </ul>
                                       </td>
                                     <% end %>
												            </tr>
											            </tbody>
											            <% end %>
									            </table>                                 
                               <% else %>
																	<h4>No Experience Details </h4>      
                                   <% end %>
                               
                                </div>
                                <!-- /.col-lg-12 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>

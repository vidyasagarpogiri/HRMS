<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">														
        <%= current_user.employee.role.role_name if current_user.employee.role.present? %> Experience Info
          <% if current_user.department == Department::HR %>
          <label class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to 'Add Experience',  new_employee_experience_path(@employee.id), :remote => true %></label>
          <% end %>
      </div>
      
      <div class="panel-body">
        <% if @experiences.present? %>					                                               
          <table class="table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>Company </th>
                <th>Designation </th>	
                <th>Joining Date</th>
                <th>Relieving Date</th>
                <th>Working Period</th>		
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @experiences.each do |experience| %>
                <tr>
                  <td><%= experience.previous_company %></td>
                  <td> <%= experience.last_designation %> </td>
                  <td> <%= format_exp_date(experience.from_date) %> </td>
                  <td> <%= format_exp_date(experience.to_date) %> </td>
                  <td> <%= difference_in_months(experience.from_date,experience.to_date )%> </td>	                         
                  <% if current_user.department == Department::HR %>
                  <td>          
                    <%= link_to 'Edit', edit_employee_experience_path(@employee.id, experience.id), :remote => true, :class => "btn btn-success" %>   
                    <%= link_to "Delete", employee_experience_path(@employee, experience.id), method: :delete, data: {confirm: "Are You sure?" }, :class=>"btn btn-danger", :remote => true %>                                                               
                  </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>  			           
          </table>	                                                                        						    
        <% else %> 
          <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              You have No Experience Details to display.
          </div>
        <% end %>       
      </div>
    </div>
  </div>
</div>

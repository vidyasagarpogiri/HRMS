
  <div id="page-wrapper">

           <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Email Etiquette</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                  <%= @email.errors.full_messages.first if @email.errors.any? %>
                                   <%= form_for ([@employee, @email]) do |f| %>
                                   <br>
                                        <div class="form-group">
                                            <label class="required" >Date Of Email Sending</label>
                                             <%= f.text_field :dateofsending, :id => "disabledSelect", :class => "form-control datepicker" %>
                                            
                                           
                                        </div>
                                        
                                        
                                        <div class="form-group">
                                            <label class="required" >Email Content</label>
                                  <%= f.text_area :ettiquite,  :class =>"form-control", :placeholder => "Enter Content" %>                                           
                                        </div>
                                         
                                       <button type="submit" class="btn btn-success pull-left">Save </button>
                                    
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                    <h1></h1>
                                  
                                    
                                        
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>


         </div>

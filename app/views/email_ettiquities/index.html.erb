<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Etiquette Details</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
	<% if current_user.employee.role.id == 2 %>
	                  <label style="font-weight:normal;padding:20px;" class = "pull-right"><i class="fa fa-plus "></i> <%= link_to 'Add Etiquette',  new_employee_email_ettiquity_path(@id)  %></label>
<% end %>
<% if @emails.present? %>
                        <div class="panel-body">
                           <div class="row">
                                <div class="col-lg-12">
                                   <table class="table table-striped table-hover" id="sample-table-2">
											            <thead>											      
												            <tr>
													            <th class="center">Date</th>
													            <th>Mail Content </th>
													            <th></th>									      		
												            </tr>
											            </thead>
											              <% @emails.each do |email| %>
											            <tbody>
												            <tr>               
													            <td class="center"><%= email.dateofsending %></td>
													            <td> <%= email.ettiquite %> </td>
                                      <% if current_user.employee.role.id == 2 %>
													            <td> 
													               <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                         <li><%= link_to "Delete", employee_email_ettiquity_path(@employee, email), method: :delete, data: {confirm: "You sure?"}, :class=>"btn btn-danger pull-right" %></li>                                                                                 
                                       </ul>
                                       </td>
                                     <% end %>
												            </tr>
											            </tbody>
											            <% end %>
									            </table>       
                             </div>
                             <!-- /.col-lg-12 -->                                   
                            
                         <% else %>
                           <h4>No Email Etiquettes Of You </h4>  
                        <% end %>
                       </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->


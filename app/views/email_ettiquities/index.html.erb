<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Etiquette Details</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
	<% if current_user.employee.role.id == 2 %>
	                  <label style="font-weight:normal;padding:20px;" class = "pull-right"><i class="fa fa-plus "></i> <%= link_to 'Add Etiquette',  new_employee_email_ettiquity_path(@id)  %></label>
<% end %>
<% if @emails.present? %>
                        <div class="panel-body">
                           <div class="row">
                                <div class="col-lg-12">
<% @emails.each do |email| %>
                                      <div class="form-group">
                                         <label class="normalfont">Date : </label><label>&nbsp<%= email.dateofsending %></label><br>
                                         <label class="normalfont">Mail Content: </label><label>&nbsp<%= email.ettiquite %></label><br>
                                      </div>
                                      <% if current_user.employee.role.id == 2 %>
                                <%= link_to "Delete", employee_email_ettiquity_path(@employee, email), method: :delete, data: {confirm: "You sure?"}, :class=>"btn btn-danger pull-right" %>

<% end %>
                                   <br><hr>                                                                 
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div><!-- /.row (nested) -->
                             <% end %>
                            
                   <% else %>
<h4>No Email Etiquettes Of You </h4>  
<% end %>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->


<% if current_user.employee.present? %>                                              
   <div class="wrapper">
		<div class="container">
			<div class="row">
        <div class="span12">
					<div class="content">
						<div class="module">
							<div class="module-head">
							
							
								<h3><%= current_user.employee.role.role_name if current_user.employee.role.present? %> Etiquette Info</h3>
								<% if current_user.department == Department::HR %>
                <label style="font-weight:normal;margin-top:-30px;" class = "pull-right"><i class="fa fa-plus "></i> <%= link_to 'Add Etiquette',  new_employee_email_ettiquity_path(@id)  %></label>
                        <% end %>
							</div>
							
							<% if @emails.present? %>
							<div class="module-body">
							 
                </div>
                
                
								<table class="table table-striped table-bordered table-condensed">
								  <thead>
									<tr>
				            <th class="center">Date</th>
				            <th>Mail Content </th>
				            <th></th>									      		
			            </tr>
								  </thead>
								  <tbody>
									<tr>
								    <% @emails.each do |email| %>
								    <td class="center"><%= format_date (email.dateofsending) %></td>
				            <td> <%= email.ettiquite %> </td>
                    
                     
                                     <% if current_user.department == Department::HR %>
													            <td> 
													              
                                          <%= link_to "Delete", employee_email_ettiquity_path(@employee, email), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger pull-right" %>
                                          
                                       </td>
                                     <% end %>
												            </tr>
											            </tbody>
											            <% end %>
									            </table>                                 
                               <% else %>
             <div class="alert alert-success alert-dismissable">
                                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                       You have No Email Etiquetties to display.
                                 </div>
              <% end %> 
						</div><!--/.module -->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
			 						

<%end%>



















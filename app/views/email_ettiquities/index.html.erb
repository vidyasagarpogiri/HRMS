            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
	<% if current_user.employee.role.id == 2 %>
                    <%= link_to 'Add New Email',  new_employee_email_ettiquity_path(@id), :class => "btn btn-success pull-right" %>
<% end %>
<% if @emails.present? %>
                        <div class="panel-body">
                             <% @emails.each do |email| %>
                          <div class="row">
                                <div class="col-lg-6">

<% if current_user.employee.role.id == 2 %>
                                <%= link_to "Delete", employee_email_ettiquity_path(@employee, email), method: :delete, data: {confirm: "You sure?"}, :class=>"btn btn-danger pull-right" %>

<% end %>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Date :</label>
                                            <%= email.dateofsending %>                                            
                                        </div>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Mail Content:</label>
                                           <%= email.ettiquite %>                                           
                                        </div>
                                        <br>
                                       
                                   
                                   
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                     
                                <div class="col-lg-6">
                                    <form role="form">

                                        
                                        
                                    </form>
                                </div>
                                 
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                             <% end %>
                            <!-- /.row (nested) -->
                   <% else %>
<h4>No Email Etiquettes Of You </h4>  
<% end %>
                        </div>

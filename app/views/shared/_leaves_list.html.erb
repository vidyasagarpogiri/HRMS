<div class="panel panel-default">
                            <div class="panel-heading">
                             Applied Leaves List
                            </div>
                          
                             <div class="panel-body">
                               <div class="row"> 
                                <div class="col-lg-12">
                                    <table class="table table-striped table-hover" id="sample-table-2">
											                  <thead>											      
												                  <tr>
													                  <th class="center">Employee Id </th>
													                  <th>Employee Name</th>
													                  <th>Date</th>
													                  <th>Leave Balance(days)</th>
													                  <th>Total Days</th>		
													                  <th>Leave Type </th>	
													                  <th>Reason for leave</th>
													                  <th colspan="2">Status</th>
													                  <th></th>
													                 	                  										      		
												                  </tr>
											                  </thead>											                  
	                                      <% @employees.each do |emp| %>
	                                      	<% emp.leave_histories.each do |f| %>
																						<% unless f.status == "HOLD" %>
											                  <tbody>
												                  <tr>               
													                  <td class="center"><a href="#"> <%= emp.employee_id %> </a></td>
													                  <td><a href="#"><%= emp.full_name%></a></td>
													                  <td><a href="#"><%= f.from_date %> - <%= f.to_date %>  </td>
													                  <td> 3 </td>
													                  <td><%= f.days %> </td>
													                  <td><%= f.leave_type.type_name if f.leave_type.present? %> </td>
													                  <td>  <%= f.reason %>  </td>
													                  <td><%= f.status %></td>
													                  
                                               
												                  </tr>
												                  
											                  </tbody>
											                 <% end %>
																		<% end %>
																	<% end %>
									                  </table>              
                                </div>     
                                <!-- /.col-lg-12(nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->

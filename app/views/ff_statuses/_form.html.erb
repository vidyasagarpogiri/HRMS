<div id="page-wrapper">

           <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">F&F Status</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
																	<%= form_for ([@employee, @status]) do |f| %>
																				<div class="form-group">
																			<label class="required" >Date of Exit</label>
																			<%= f.text_field :date_of_exit, :class =>"form-control datepicker" %>
																			</div>
																			<div class="form-group">
                                        <label class="required" >Status of F & F</label>
                                         <%= f.select :status_name, options_for_select(FfStatus::STATUS), { :prompt => "Please Select" }, { :class => "department form-control" } %>
               										    </div>
																			
																			<div class="form-group">
																			<label class="required" >InterView Status</label>
																		<%= f.select(:interview_status, options_for_select([['Yes', 'Yes'], ['No', 'No']]), {:prompt => "Please Select"}, :class=> "form-control", :id=>"disabledSelect") %>
																			</div>	
   



																			
																			
																			<label class="required">Summary Of F&F</label>
																			<%= f.text_area :summary, :class =>"form-control" %>	<br>
																			<%= f.submit 'Save', :class => "btn btn-success pull-left" %>
																	<% end %>
                               
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>


         </div>
          <!-- /#page wrapper -->

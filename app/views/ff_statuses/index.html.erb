                    <label style="font-weight:normal;margin-top:-45px;" class = "pull-right"><a><i class="fa fa-pencil-square-o "></i></a><%= link_to 'Edit', edit_employee_ff_status_path(@employee, @status) %></label> 
                </div>
                <!-- /.col-lg-12 -->
            </div>

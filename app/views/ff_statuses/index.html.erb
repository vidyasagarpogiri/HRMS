            <div class="row">
                <div class="col-lg-12">
                   <div class="panel panel-default">
                      <div class="panel-heading">
                        Exit Info
                      </div>                    
                      <div class="panel-body">                                                                                        
                         <% unless @status.present? %>                                    
                           <div class="alert alert-success alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                F&F status of this employee is empty
                           </div>
                         <% else %>                          
                         <table class="table table-striped table-hove" id="sample-table-2">														   
											      <tbody>
											        <tr>
											          <td>Date of Exit:</td>
											          <td><%= format_date (@status.date_of_exit) %></td>
											        </tr>
											        <tr>
											          <td>Interview Status:</td>
											          <td><%= @status.interview_status %></td>
											        </tr>
											        <tr>
											          <td>Status Of F&F:</td>
											          <td><%= @status.status_name %></td>
											        </tr>
											        <tr>
											          <td>Summary Of F&F:</td>
											          <td><textarea class="form-control" disabled ><%= @status.summary %></textarea></td>
											        </tr>
											      </tbody>
											  </table>
											  <% end %>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>

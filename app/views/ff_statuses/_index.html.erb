<div class="row">
  <div class="col-lg-12">   
    <div class="panel panel-info">
      <div class="panel-heading">													
        <%= current_user.employee.role.role_name if current_user.employee.role.present? %> F&F Status Info
        <% if current_user.department == Department::HR %>
          <% unless @status.present? %>             
            <i class="fa fa-plus pull-right icon-position"></i><%= link_to 'Add FFStatus', new_employee_ff_status_path(@employee),:class => "pull-right", :remote => true %>
          <% else %>
            <i class=" fa fa-edit pull-right icon-position"></i></a> <%= link_to 'Edit', edit_employee_ff_status_path(@employee, @status),:class => "pull-right", :remote => true %>
          <% end %> 
        <% end %>
      </div>	     
      <div class="panel-body">
        <% if @status.present? %>           
          <table class="table table-striped table-bordered table-condensed">
            <tbody>
              <tr>
                <td>Date of Exit:</td>
                <td><%= format_date (@status.date_of_exit) %></td>
              </tr>
              <tr>
                <td>Interview Status:</td>
                <td><%= @status.interview_status %></td>
              </tr>
              <tr>
                <td>Status Of F&F:</td>
                <td><%= @status.status_name %></td>
              </tr>
              <tr>
                <td>Summary Of F&F:</td>
                <td><%= @status.summary %></td>
              </tr>
            </tbody>
          </table>                           							            
        <% else %>						               
          <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              F&F status of this employee is empty
          </div>
        <% end %>
      </div><!--/.module-body --> 	 
    </div>
  </div>
</div>
  
			



































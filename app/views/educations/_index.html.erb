<div class="panel">
  <div class="panel-heading">							
    Education Info 
    <% if current_user.department == Department::HR %>                                
    <label class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to ' Add Education', new_employee_education_path(@employee.id), :remote => true  %></label>
    <% end %>
  </div>    
  <div class="module-body">
    <% if @educations.present? %>					                                        
    <table class="table table-striped table-bordered table-condensed" >
      <thead>											      
        <tr>
          <th>College</th>
          <th>Specialization </th>	
          <th>Releaved On </th>
          <th>Aggregate/CGPA</th>
          <th>Action</th>													            									      		
        </tr>
      </thead>
      <% @educations.each do |education| %>
      <tbody>
        <tr>               
          <td><%= education.institute %></td>
          <td> <%= education.specilization %> </td>
          <td> <%= education.year_of_pass %> </td>
          <td> <%= education.cgpa_percentage %>% </td>
          <% if current_user.department == Department::HR %>
          <td> 
            <%= link_to 'Edit', edit_employee_education_path(@employee.id, education.id), :class => "btn btn-success ", :remote => true %>
            <%= link_to "Delete", employee_education_path(@employee.id, education), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger ", :remote => true %>
          </td>
          <% end %>
        </tr>
      </tbody>
    <% end %>
    </table>    
    <% else %>
      <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        You have No Education Details to display.
      </div>
    <% end %>            
  </div>                                                                                                                    
</div><!--/.module -->



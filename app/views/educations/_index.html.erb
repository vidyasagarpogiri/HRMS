 <% if @educations.present? %>
	<div class="module">
		<div class="module-head">							
      <h3>Education Info</h3> 
     <% if current_user.department == Department::HR %>                                
        <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to ' Add Education', new_employee_education_path(@employee.id), :remote => true  %></label>
      <% end %>
    </div>
      <div class="module-body">
						       
       </div>                       
     
         <table class="table table-striped table-hover" id="sample-table-2">
			      <thead>											      
				      <tr>
					      <th class="center">College</th>
					      <th>Specialization </th>	
			          <th>Releaved On </th>
					      <th>Aggregate/CGPA</th>														            									      		
				      </tr>
			      </thead>
		      <% @educations.each do |education| %>
			      <tbody>
				      <tr>               
					      <td class="center"><%= education.institute %></td>
					      <td> <%= education.specilization %> </td>
					      <td> <%= education.year_of_pass %> </td>
					      <td> <%= education.cgpa_percentage %>% </td>
               <% if current_user.department == Department::HR %>
					      <td> 
						      <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                   <li><%= link_to 'Edit', edit_employee_education_path(@employee.id, education.id), :class => "btn btn-success ", :remote => true %></li>
                   <li><%= link_to "Delete", employee_education_path(@employee.id, education), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger ", :remote => true %></li>
                  </ul>
                 </td>
               <% end %>
				      </tr>
			      </tbody>
			      <% end %>
	        </table>                                                                                                                    
        </div><!--/.module -->
	        <% else %>
	        <div class="module-head">							
            <h3>Education Info</h3> 
           <% if current_user.department == Department::HR %>                                
              <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to ' Add Education', new_employee_education_path(@employee.id), :remote => true  %></label>
            <% end %>
        </div>
        <br>
        <div class="alert alert-success alert-dismissable">
           <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
               You have No Education Details to display.
        </div>
     <% end %>            
			 						
                               
                         

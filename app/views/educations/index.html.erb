<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Education Details</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
            
                <div class="col-lg-12">
	<% if current_user.employee.role.id == 2 %>
                <%= link_to 'Add Education', new_employee_education_path(@employee.id), :class => "btn btn-success pull-right" %>
<% end %>
<% if @eudcations.present? %>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <% @eudcations.each do |education| %>
<% if current_user.employee.role.id == 2 %>
                                  <ul class="navigation-btns" style="list-style: none;display:inline;">
                                     <li><%= link_to 'Edit', edit_employee_education_path(@employee.id, education.id), :class => "btn btn-success pull-right" %></li>
                                     <li><%= link_to "Delete", employee_education_path(@employee, education), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-success pull-right" %></li>
<% end %>
                                  </ul>
                                      <h3><%= education.institute %></h3>
                                      <h4><%= education.specilization %>-<%= education.year_of_pass %>-<%= education.cgpa_percentage %>%  </h4>
                                       
                                  <hr>
                                   <% end %>
                                </div>
<% else %>
<br/>
<h4>No Education Details</h4>
<% end %>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                    <h1></h1>
                                    <form role="form">
                                    <!--    <fieldset disabled> -->
                        
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>


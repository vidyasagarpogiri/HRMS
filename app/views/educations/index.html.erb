             <div class="wrapper">
		<div class="container">
			<div class="row">
        <div class="span12">
					<div class="content">
						<div class="module">
							<div class="module-head">
							

                      <h3>Education Info</h3> 
                     <% if current_user.department == Department::HR %>                                
                        <label style="font-weight:normal;margin-top:-50px;" class = "pull-right"><a><i class="fa fa-plus "></i></a> <%= link_to ' Add Education', new_employee_education_path(@employee.id)  %></label>
                      <% end %>
                          </div>
	<div class="module-body">
							 
                </div>                       
                     <% if @eudcations.present? %>
                                                                                                         
                               <table class="table table-striped table-hover" id="sample-table-2">
											            <thead>											      
												            <tr>
													            <th class="center">College</th>
													            <th>Specilization </th>	
													            <th>Releaved On </th>
													            <th>Aggregate/CGPA</th>														            									      		
												            </tr>
											            </thead>
											             <% @eudcations.each do |education| %>
											            <tbody>
												            <tr>               
													            <td class="center"><%= education.institute %></td>
													            <td> <%= education.specilization %> </td>
													            <td> <%= education.year_of_pass %> </td>
													            <td> <%= education.cgpa_percentage %>% </td>
                                     <% if current_user.department == Department::HR %>
													            <td> 
													               <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                           <li><%= link_to 'Edit', edit_employee_education_path(@employee.id, education.id), :class => "btn btn-success " %></li>
                                           <li><%= link_to "Delete", employee_education_path(@employee.id, education), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                                         </ul>
                                       </td>
                                     <% end %>
												            </tr>
											            </tbody>
											            <% end %>
									            </table>                                                              
                                
                              
                      <% else %>

                      <div class="alert alert-success alert-dismissable">
                          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            You have No Education Details to display.
                     </div>
                    <% end %>
                  			            </table>                                                              
                                
                      	</div><!--/.module -->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
			 						
                               
                         

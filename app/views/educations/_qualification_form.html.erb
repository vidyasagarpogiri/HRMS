

        <div id="page-wrapper">
                        <div class="row">
                        <div class="col-lg-12">
                            <div class="page-header">Education Info</div>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->
                   
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                <div class="col-lg-6">
                                   <div class="errors">
                                   </div>
                                  
                                    <%= form_for ([@employee, @education]), :data => {:toggle => "validator", :remote => true} do |f| %>
                                        <div class="form-group">
                                            <label class="required" >Name Of Graduation</label>
                                          

                                       <%= f.text_field :specilization, :class => "form-control", :placeholder =>"Enter Graduation", :data => {:error => "Please Enter Degree"}, :required => true %>   
                                        <div class="help-block with-errors"></div>                
                                        </div>                                        
                                        <div class="form-group">
                                            <label class="required" >College/University Name</label><br>
                                            <%= f.text_field :institute, :class => "form-control", :placeholder => "Enter College/University Name", :data => {:error => "Please Enter Univercity"}, :required => true %>
                                             <div class="help-block with-errors"></div>
                                        </div>                                       
                                        <div class="form-group">
                                            <label class="required" >Year of Passing</label>
                                            <%= f.text_field :year_of_pass, :id => "disabledSelect", :class => "form-control", :placeholder => "Enter Year Of Passing", :data => {:error => "Please Enter year"}, :required => true %> 
                                            <div class="help-block with-errors"></div>
                                        </div>                                        
                                        <div class="form-group">
                                            <label class="required" >Percentage/CGPA</label>
                                            <%= f.text_field :cgpa_percentage, :id => "disabledSelect", :class => "form-control", :placeholder => "Percentage/CGPA",  :data => {:error => "Please Enter Percentage/CGPA"}, :required => true %>                                           
                                            <div class="help-block with-errors"></div>
                                        </div>                                        
                                        
                                        <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                          <li><%= f.submit  'Save', :class => "btn btn-success pull-left" %></li>
                                          <li><%= f.submit 'Save & New', :class =>"btn btn-success pull-right" %></li>
																					<li><%= link_to 'Cancel', employee_educations_path(@employee), :class=>"btn btn-danger btn btn-success pull-right" %></li>
                                        </ul>  
                                       </div>
                                   <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        
         </div>
          <!-- /#page wrapper -->

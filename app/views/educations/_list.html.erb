  <div class="wrapper">
		<div class="container">
			<div class="row">
        <div class="span12">
					<div class="content">
						<div class="module">
							<div class="module-head">
								<h3>Education Info</h3>
								<label style="font-weight:normal;margin-top:-50px;" class = "pull-right"><a><i class="fa fa-plus "></i></a> <%= link_to ' Add Education', new_employee_education_path(@employee.id)  %></label>
							</div>
							<div class="module-body">
								<table class="table table-striped table-bordered table-condensed">
								  <thead>
									<tr>
									  <tr>
				               <th>Degree</th>
						           <th>Specilization </th>	
						           <th>Releaved On </th>
						           <th>Aggregate/CGPA</th>	
						           <th></th>
									</tr>
								  </thead>
								   <% list.each do |education| %>
								  <tbody>
									<tr>
									<td><%= education.institute %></td>
		              <td> <%= education.specilization %> </td>
		              <td> <%= education.year_of_pass %> </td>
		              <td> <%= education.cgpa_percentage %> </td>

                   <% if current_user.department == Department::HR %>
	                  <td> 
	                    <ul class="navigation-btns" style="list-style: none;display:inline;">
                        <li><%= link_to 'Edit', edit_employee_education_path(@employee.id, education.id), :class => "btn btn-success pull-left" %></li>                        
                        <li><%= link_to "Delete", employee_education_path(@employee.id, education.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger pull-right" %></li>                                         
                      </ul>
                     </td>
                   <% end %>
									</tr>
								  </tbody>
								  <% end %>
								</table>
								
						</div><!--/.module -->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->  
  
  
  
 


<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">Education Details</div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                               <div class="col-lg-6">
                                <!--<div class="errors"><div>
                                    <% #@education.errors.full_messages.each do |error| %>
                                        <!--<label class="col-lg-3"></label>
                                        <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                         <%# error %>
                                         </div>
                                      <%# end %>                                      
                                     </div> 
                                     </div> -->
                                    <%= form_for ([@employee, @education]), :data => {:toggle => "validator"} do |f| %>
                                        <div class="form-group">
                                            <label class="required" >Name Of Graduation</label>                                          
                                            <%= f.text_field :specilization, :class => "form-control", :placeholder => "Enter Graduation Name", :data => {:error => "Please Enter Degree "}, :required => true, :pattern => '[a-zA-Z/s ]*' %>   
                                        <div class="help-block with-errors"></div>   
                                        </div>                                      
                                        <div class="form-group">
                                            <label class="required" >College/University Name</label><br>
                                            <%= f.text_field :institute, :class => "form-control", :placeholder => "Enter College/University Name", :data => {:error => "Please Enter College/University Name "}, :required => true, :pattern => '[a-zA-Z/s ]*' %>   
                                        <div class="help-block with-errors"></div>   
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="required" >Year of Passing</label>
                                            <%= f.text_field :year_of_pass, :id => "disabledSelect", :class => "form-control", :placeholder => "EnterYear of Passing", :data => {:error => "Please Enter Year of Passing " , :maxlength => "4", :minlength => "4"}, :type => "number", :required => true, :pattern => "^\d{4}$" %>   
                                        <div class="help-block with-errors"></div>     
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="required" >Percentage/CGPA</label>
                                            <%= f.text_field :cgpa_percentage, :id => "disabledSelect", :class => "form-control", :placeholder => "Enter Percentage/CGPA", :data => {:error => "Please Enter Percentage/CGPA "}, :type => "number", :required => true %>   
                                        <div class="help-block with-errors"></div>     
                                        </div>
                                        
                                        <br>
                                       
                                        <ul class="navigation-btns" style="list-style: none;display:inline;">
                                          <li><button type="submit" class="btn btn-success pull-left">Update</button></li>
                                          <li><%= link_to 'Cancel', employee_experiences_path(@employee), :class => "btn btn-danger pull-left"%></li>
                                        </ul>                                       
                                   <% end %>
                                
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
         </div>
          <!-- /#page wrapper -->

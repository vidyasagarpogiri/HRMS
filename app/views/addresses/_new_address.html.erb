<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">Contact Info</div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
                  <% if current_user.department == Department::HR %>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6" >                          
                                <%= @address.errors.full_messages.first if @address.errors.any? %>
                                    <%= form_for([@employee, @address]) do |f| %>
                                   
                                    <label><u><%= @address_type%> Address</u></label> 
                                        <div class="form-group">                                                  
                                           <label class="required" >Address Line 1</label>
                                           <%= f.text_field :line, :class => "form-control", :placeholder=> "Enter Address Line 1" %>
                                         </div>
                                         <div class="form-group">

                                            <label class="required" >Address Line 2</label>
                                            <%= f.text_field :line1, :class => "form-control", :placeholder=> "Enter Address Line 2" %>          
                                          </div>
                                          <div class="form-group">
                                              <label class="required" >City</label>
                                              <%= f.text_field :city, :class => "form-control", :placeholder=> "Enter City" %>        
                                          </div>
                                          <div class="form-group">
                                              <label class="required" >State</label>
                                              <%= f.text_field :state, :class => "form-control", :placeholder=> "Enter State" %>             
                                          </div>                                        
                                          <div class="form-group">
                                            <label class="required" >Country</label>
                                            <%= f.text_field :country, :class => "form-control", :placeholder=> "Enter Country" %>              
                                          </div>
																					<div class="form-group">
                                            <label class="required" >ZipCode</label>
                                            <%= f.text_field :zipcode, :class => "form-control", :placeholder=> "Enter ZipCode" %>              
                                          </div>                          
                                                                                  <button type="submit" class="btn btn-success pull-right">Save & Continue</button>                                                       
                                  </div>                                       

                                    <% end %>
                                    
                  
                                </div>
                                <!-- /.col-lg-6 (nested) -->

                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
                <% else %>
																	<div class="alert alert-info alert-dismissable">
                                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                       You have No Address Details to show.
                                 </div> 
                                 <% end %>
         </div>
          <!-- /#page wrapper -->



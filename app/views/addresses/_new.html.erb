
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                   <% if current_user.department == Department::HR %>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6"> 
                                <% if !@address.nil? %>
                                <% @address.errors.full_messages.each do |error| %>
                                        <!--<label class="col-lg-3"></label>-->
                                        <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                         <%= "#{@address_type} Address: #{error}" %>
                                         </div>
                                <% end %>                                      
                                <% end %>
                                     </div>                                   
                                  </div>
                                  <div class="col-lg-6"> 
                                    <%= form_for([@employee, @address], :remote=>true) do |f| %>
                                    <br>
                                  
                                    <label><u><%= @address_type %> Address</u></label> 

                                        <% if @employee.addresses.present? %>                                        
                                          <a href="#" id="address-check-box-hyper-link"><input type="checkbox", id="address-check-box"></a>Same as old address
                                          <br>
                                        <% end %>
                                        <div class="form-group ">
                                           <label class="required" >Address Line 1</label>

                                           <%= f.text_field :line, :class => "form-control", :placeholder=> "Enter Address Line 1",:required =>true%>
                                         </div>
                                         <div class="form-group ">
                                            <label class="required" >Address Line 2</label>
                                            <%= f.text_field :line1, :class => "form-control", :placeholder=> "Enter Address Line 1",:required =>true %>
                                        </div>
                                        <div class="form-group ">
                                            <label class="required" >City</label>
                                            <%= f.text_field :city, :class => "form-control", :placeholder=> "Enter City",:required =>true %>    
                                        </div>
                                        <div class="form-group ">
                                            <label class="required" >State</label>
                                            <%= f.text_field :state, :class => "form-control", :placeholder=> "Enter State",:required =>true %>
                                        </div>                                        
                                        <div class="form-group">
                                            <label class="required" >Country</label>
                                            <%= f.text_field :country, :class => "form-control", :placeholder=> "Enter Country",:required =>true %>
                                        </div>
																				<div class="form-group">
                                            <label class="required" >Zipcode</label>

                          <%= f.text_field :zipcode, :class => "form-control", :placeholder=> "Enter Zipcode",:required =>true %>
                                        </div>

              													<div class="form-group">
                                           <%= f.hidden_field :address_type, :class => "form-control", :value=>"#{@address_type_value}"%>
                                        </div>
                                        
                                        <!--<% if @is_permanent == false %>                                        
                                        <div class="form-group">                                           
                                          <%# f.check_box :is_permanent %>
                                           <label class="required" > Save as Permanent address</label>              
                                        </div> 
                                        <% end %>             
                                        <br> -->
                                        <button type="submit" class="btn btn-success pull-left">Save & Continue</button>      
                                </div>
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
												<% else %>
														<h4>No Contact details </h4>
												<% end %>
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            
            
            <script>
              $(function(){
                $("#address-check-box-hyper-link").click(function(){
                   if($("#address-check-box").is(':checked')){
                   <% if @employee.addresses.present?  %>
                    $("#address_line").val('<%= @employee.addresses.first.line1 %>');
                    $("#address_line1").val('<%= @employee.addresses.first.line %>');
                    $("#address_city").val('<%= @employee.addresses.first.city %>');
                    $("#address_state").val('<%= @employee.addresses.first.state %>');
                    $("#address_country").val('<%= @employee.addresses.first.country %>');
                    $("#address_zipcode").val('<%= @employee.addresses.first.zipcode %>');
                   <% end %>
                   }
                   else{
                     $("#address_line").val("");
                    $("#address_line1").val("");
                    $("#address_city").val("");
                    $("#address_state").val("");
                    $("#address_country").val("");
                    $("#address_zipcode").val("");
                   }
                });
               
              });
            </script>
      

































<% if @employee.addresses.present? %>
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">Contact Details</div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                      <div class="panel-body">
                            <div class="row" style="padding-left:50px;">
															<% if @address1.present? %>
                                <div class="col-lg-5" style="box-shadow: 0 0 10px #000000;border-radius:3px;padding:10px;">
                                    <label><u>Present Address</u></label>
                                    <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                        <% if current_user.department == Department::HR %>
                                        <li><%= link_to "Edit", edit_employee_address_path(@employee, @address1), :class=>"btn btn-success pull-right" %></li>
                                        <% end %>
                                    </ul>
                          
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Address Line 1:</label>
                                            <%= @address1.line %>                                  
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Address Line 2:</label>
                                            <%= @address1.line1 %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">City:</label>
                                            <%= @address1.city %>                                       
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">State:</label>
                                           <%= @address1.state %>                                            
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Country:</label>
                                           <%= @address1.country %>
                                        </div>

																				 <div class="form-group">
                                            <label style="font-weight:normal;">Zipcode:</label>
                                           <%= @address1.zipcode %>
                                        </div>                                
                                </div>
																	<% end %>
                                <!-- /.col-lg-6 (nested) --> 
                                <div class="col-lg-1">
                                </div>
                                <div class="col-lg-5" style="box-shadow: 0 0 10px #000000;border-radius:3px;padding:10px;">
																			<% if @address2.present? %>
                                    <label><u>Permanent Address</u></label>                                                                      
                                    <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                       <% if current_user.department == Department::HR %>
                                        <li><%= link_to "Edit", edit_employee_address_path(@employee, @address2), :class=>"btn btn-success pull-right" %></li>
																		    <% end %>
                                    </ul>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Address Line 1:</label>
                                            <%= @address2.line %>                                  
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Address Line 2:</label>
                                            <%= @address2.line1 %> 
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">City:</label>
                                           <%= @address2.city %>                                     
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">State:</label>
                                           <%= @address2.state %>                                                        
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Country:</label>
                                           <%= @address2.country %>
                                        </div>

																				<div class="form-group">
                                            <label style="font-weight:normal;">Zipcode:</label>
                                           <%= @address2.zipcode %>
                                        </div>                                                                                    
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                              <% end %>
                            </div>													
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
<% else %>
<%= render 'new_address'%>
<% end %>

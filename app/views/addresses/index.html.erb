<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">Contact Info</div>
                      <div class="pull-right"> 
                        <% if @address1.nil? %>
                          <a href="/employees/<%=params[:employee_id] %>/addresses/new?address_type=0" style="margin:20px;">Add Present Address</a>
                        <% end %>
                        <% if @address2.nil? %>
                          <a href="/employees/<%=params[:employee_id] %>/addresses/new?address_type=1">Add Permanent Address</a>
                        <% end %>
                      </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                      <div class="panel-body">
                            <div class="row" style="padding-left:50px;">
															<% if @address1.present? %>
                                <div class="col-lg-5" style="box-shadow: 0 0 1px #000000;border-radius:3px;padding:10px;">
                                    <label><u>Present Address</u></label>
                                    <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                        <% if current_user.department == Department::HR %>
                                        <li><%= link_to "Edit", edit_employee_address_path(@employee, @address1), :class=>"btn btn-success pull-right" %></li>
                                        <% end %>
                                    </ul>
                                    
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Address Line 1:</label>
                                            <%= @address1.line %>                                  
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Address Line 2:</label>
                                            <%= @address1.line1 %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">City:</label>
                                            <%= @address1.city %>                                       
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">State:</label>
                                           <%= @address1.state %>                                            
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Country:</label>
                                           <%= @address1.country %>
                                        </div>

																				 <div class="form-group">
                                            <label style="font-weight:normal;">Zipcode:</label>
                                           <%= @address1.zipcode %>
                                        </div> 
                                                                      
                                </div>
                                  <% else %>
                                    <div class="alert alert-success alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                         You have No Present Address to display. 
                                    </div>
																	<% end %>
																	
                                <!-- /.col-lg-6 (nested) --> 
                                <div class="col-lg-1">
                                </div>
                              	<% if @address2.present? %>
                                <div class="col-lg-5" style="box-shadow: 0 0 1px #000000;border-radius:3px;padding:10px;">
                                    <label><u>Permanent Address</u></label>                                                                      
                                    <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                       <% if current_user.department == Department::HR %>
                                        <li><%= link_to "Edit", edit_employee_address_path(@employee, @address2), :class=>"btn btn-success pull-right" %></li>
																		    <% end %>
                                    </ul>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Address Line 1:</label>
                                            <%= @address2.line %>                                  
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Address Line 2:</label>
                                            <%= @address2.line1 %> 
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">City:</label>
                                           <%= @address2.city %>                                     
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">State:</label>
                                           <%= @address2.state %>                                                        
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Country:</label>
                                           <%= @address2.country %>
                                        </div>

																				<div class="form-group">
                                            <label style="font-weight:normal;">Zipcode:</label>
                                           <%= @address2.zipcode %>
                                        </div>
                                </div>
                                <% else %>
                                    <!--  <div class="alert alert-info alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                          
                                    </div>
																	<% end %> -->                                                                                  
                                <!-- /.col-lg-6 (nested) -->
                         
                            </div>													
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>



<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Contact Details</h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                      <% if current_user.employee.role.id == 2 %>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                   <%= @address.errors.full_messages.first if @address.errors.any? %>
                                    <%= form_for([@employee, @address]) do |f| %>
                                    <br>
                                    <label><u>Edit Address</u></label> <br> 
                                        <div class="form-group">
                                                  
                                           <label>Address Line 1:</label>
                                           <%= f.text_field :line, :class => "form-control", :placeholder=> "Enter Address Line 1" %>                  
                                          
                                         </div>
                                         <div class="form-group">
                                            <label>Address Line 2:</label>
                                            <%= f.text_field :line1, :class => "form-control", :placeholder=> "Enter Address Line 1" %>                                       
                                        </div>
                                        <div class="form-group">
                                            <label>City:</label>
                                            <%= f.text_field :city, :class => "form-control", :placeholder=> "Enter City" %>                                            
                                        </div>
                                        <div class="form-group">
                                            <label>State:</label>
                                            <%= f.text_field :state, :class => "form-control", :placeholder=> "Enter State" %>                                           
                                        </div>
                                        
                                          <div class="form-group">
                                            <label>Country:</label>
                                            <%= f.text_field :country, :class => "form-control", :placeholder=> "Enter Country" %>                                            
                                        </div>
																					<div class="form-group">
                                            <label>Zipcode:</label>
                                            <%= f.text_field :zipcode, :class => "form-control", :placeholder=> "Enter Zipcode" %>                                            
                                        </div>
                                        
                                        <br>
                                        <button type="submit" class="btn btn-success pull-left">Save & Continue</button>      
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                    <h1></h1>
                                    <form role="form" >
                                    <label><u>Permanent Address</u></label> <br> 
                                    <!--    <fieldset disabled> -->
                                        <div class="form-group">          
                                           <label>Address Line 1:</label>                  
                                           <input class="form-control" placeholder="Enter Address Line 1" name="line3">
                                         </div>
                                         <div class="form-group">
                                            <label>Address Line 2:</label>
                                            <input class="form-control" placeholder="Enter Address Line 2" name="line4">                                            
                                        </div><div class="form-group">
                                            <label>City:</label>
                                            <input class="form-control" placeholder="Enter City" name="city1">                                            
                                        </div>
                                        <div class="form-group">
                                            <label>State:</label>
                                            <input class="form-control" placeholder="Enter State" name="state1">                                            
                                        </div>
                                        
                                          <div class="form-group">
                                            <label>Country:</label>
                                            <input class="form-control" placeholder="Enter Country" name="country1">                                            
                                        </div>
                                      <div class="form-group">
                                            <label>Zipcode:</label>
                                            <input class="form-control" placeholder="Enter Zipcode" name="zipcode1">                                            
                                        </div>
                                        
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
												<% else %>
														<h4>No Contact details </h4>
												<% end %>
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
         </div>
          <!-- /#page wrapper -->

































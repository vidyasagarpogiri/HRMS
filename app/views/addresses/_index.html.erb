<div class="module-head" >
  <h3>Contact Info</h3>
</div><br>
<% if current_user.department == Department::HR %>
  <% if @address1.nil? %>
    <%= link_to "Present Address", new_employee_address_path(@employee, :address_type => "false"), :remote => true, :class=>"btn btn-info add" %>
  <% end %>
  <% if @address2.nil? %>
    <%= link_to "Permanent Address", new_employee_address_path(@employee, :address_type => "true"), :remote => true, :class=>"btn btn-info add" %>
    <br><br>
  <% end %> 
<% end %>

<div class ="new_address_form">
  <% if !@address1.present? && !@address2.present? %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      You have No Addresses to display. 
    </div>
    <% end %>
    <!-- /.row -->
      <% if @address1.present? %>
      <div class="row-fluid">            
        <div class="module-head" style="background-color:#F0F5F5!important;"> 
          <strong>Present Address</strong>
          <% if current_user.department == Department::HR %>     
            <label style="font-weight:normal;" class = "pull-right"><a href="#"><i class=" icon-edit"></i></a><%= link_to "Edit", edit_employee_address_path(@employee, @address1), :class=>"pull-right", :remote => true %></label> 
          <% end %>
        </div>         
        <div class="module-body " style="margin-left:100px;">
          <div class ="row-fluid">
            <div class="span5">		
              <div class="control-group">
                <label class="control-label" for="basicinput"><strong>Address Line 1: </strong><%= @address1.line %> </label>
              </div>
            </div>
          <div class="span5">	
            <div class="control-group">
             <label class="control-label" for="basicinput"><strong>Address Line 2: </strong><%= @address1.line1 %></label>  
            </div>
        </div>
      </div>	

      <div class ="row-fluid">
        <div class="span5">		
          <div class="control-group">
            <label class="control-label" for="basicinput"><strong>City: </strong><%= @address1.city %> </label>
          </div>
        </div>
        <div class="span5">	
          <div class="control-group">
            <label class="control-label" for="basicinput"><strong>State: </strong><%= @address1.state %></label>  
          </div>
        </div>
      </div>

      <div class ="row-fluid">
        <div class="span5">		
          <div class="control-group">
            <label class="control-label" for="basicinput"><strong>Country: </strong><%= @address1.country %> </label>
          </div>
        </div>
        <div class="span5">	
          <div class="control-group">
            <label class="control-label" for="basicinput"><strong>Zipcode: </strong><%= @address1.zipcode %></label>  
          </div>
        </div>
      </div>
    </div><!-- /.module-body -->
  </div><!-- /.row-fluid -->
  <% end %>	 


    <% if @address2.present? %>                               
    <div class="row-fluid">  
      <div class="module-head" style="background-color:#F0F5F5!important;">  
        <strong>Permanent Address</strong>

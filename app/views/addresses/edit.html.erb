<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">Contact Details</div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                 
                                    <%= form_for([@employee, @address],:data => {:toggle => "validator"})  do |f|%>
                                    <br>
                                    <label><u>Edit Address</u></label> <br> 
                                        <div class="form-group">
                                                  
                                           <label class="required" >Address Line 1</label>
                                           <%= f.text_field :line, :class => "form-control", :placeholder=> "Enter Address Line 1",:data => {:error => "Please Enter Address Line 1"}, :required =>true %>
                                            <div class="help-block with-errors"></div>
                                          
                                         </div>
                                         <div class="form-group">
                                            <label class="required">Address Line 2</label>
                                            <%= f.text_field :line1, :class => "form-control", :placeholder=> "Enter Address Line 2",:data => {:error => "Please Enter Address Line 2"}, :required =>true %>
                                            <div class="help-block with-errors"></div>      
                                        </div>
                                        <div class="form-group">
                                            <label class="required">City</label>
                                            <%= f.text_field :city, :class => "form-control", :placeholder=> "Enter City",:data => {:error => "Please Enter City Name "}, :required =>true %>
                                            <div class="help-block with-errors"></div>   
                                        </div>
                                        <div class="form-group">
                                            <label class="required">State</label>
                                            <%= f.text_field :state, :class => "form-control", :placeholder=> "Enter State",:data => {:error => "Please Enter State Name "}, :required =>true %>  
                                            <div class="help-block with-errors"></div>   
                                        </div>                                        
                                        <div class="form-group">
                                            <label class="required">Country</label>
                                            <%= f.text_field :country, :class => "form-control", :placeholder=> "Enter Country",:data => {:error => "Please Enter Country Name "}, :required =>true %>     
                                            <div class="help-block with-errors"></div>     
                                        </div>
																					<div class="form-group">
                                            <label class="required">ZipCode</label>
                                            <%= f.text_field :zipcode, :class => "form-control", :placeholder=> "Enter ZipCode",:data => {:error => "Please Enter ZipCode "}, :type => "number",:required =>true %>
                                          <div class="help-block with-errors"></div>   
                                        </div>
                                        
                                        <br>
                                         <ul class="navigation-btns" style="list-style: none;display:inline;">
                                          <li><button type="submit" class="btn btn-success pull-left">Update</button></li>
                                          <li><%= link_to 'Cancel', employee_experiences_path(@employee), :class => "btn btn-danger pull-left"%></li>
                                        </ul>      
                                </div>
                              <% end %>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
         </div>
          <!-- /#page wrapper -->

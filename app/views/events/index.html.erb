<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                  <h2 class="page-header"> List of Holidays</h2>
                  <div class=" pull-right" style="margin-top:-50px;"><i class="fa fa-plus "></i> <%= link_to "Add New Event", new_event_path %> </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                 <% if @events.present? %> 
                    <div class="panel panel-default"> 
                     <div class="panel-heading">
                       Event Details
                    </div>
									  <div class="panel-body">
									 
                    <table class="table table-striped table-hover" id="sample-table-2">                    
                    <thead>
												<tr>
													<th >Event</th>
													<th> Date</th>																									
												</tr>
											</thead>
                    <% @events.each do |event| %>
											<tbody>
												<tr>               
													<td class="center"><%= event.event_name %></td>
													<td><%= format_date(event.event_date) %></td>
                          <td>
													    <ul class="navigation-btns" style="list-style: none;display:inline;">
													      <li> <%= link_to 'Edit', edit_event_path(event), :class => "btn btn-success pull-left" %></li>
													      <li> <%= link_to 'Delete', event_path(event.id), method: :delete , :class => "btn btn-danger pull-left",data: {confirm: "Are You sure?"} %></li> 
													    </ul> 
													 </td>
												</tr>
											</tbody>
										<% end %> 
									  </table> 
									  <% else %>
									   <div class="alert alert-success alert-dismissable">
                          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                           No Events to display
                     </div>
                     </div>
                            <!-- /.row (nested) -->
                        </div>
										<% end%>
			            <!-- /.col-lg-6 (nested) -->

                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        
         <script>
          $(function(){
  
    $("#active").toggleClass("active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>



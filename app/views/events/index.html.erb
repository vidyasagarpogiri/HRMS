   <div class="wrapper">
		<div class="container">
			<div class="row">
        <div class="span12">
					<div class="content">
						<div class="module">
							<div class="module-head">
							

                      <h3>List of Holidays</h3> 
                     <% if current_user.department == Department::HR %>                                
                        <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a><%= link_to " Add New Holiday", new_event_path %></label>
                      <% end %>
             </div>
             
             
	<div class="module-body">
		       <% if @events.present? %> 
                                                                                                         
        <table class="table table-striped table-hover" id="sample-table-2">     
            <thead>											      
	            <tr>
		            <th>Holiday</th>
		            <th> Date</th>															            									      		
	            </tr>
            </thead>
             <% @events.each do |event| %>
            <tbody>
	            <tr>               
		            <td class="center"><%= event.event_name %></td>
		            <td><%= format_date(event.event_date) %></td>
               <% if current_user.department == Department::HR %>
		            <td> 
		               <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                     <li><%= link_to 'Edit', edit_event_path(event), :class => "btn btn-success " %></li>
                     <li><%= link_to "Delete", event_path(event.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                   </ul>
                 </td>
               <% end %>
	            </tr>
            </tbody>
            <% end %>
        </table>                                                              
                                
                              
          <% else %>
   
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          No Holidays to display.
   </div>
      <% end %>
      <%= paginate  @events %>
      
      
              </div><!--module -body-->                                                              
                  
        	         </div><!--/.module -->
			         </div><!--/.content-->
				    </div><!--/.span12-->
		  	  </div><!--/.row-->
	  	</div><!--/.container-->
</div><!--/.wrapper-->
	
                               
                         

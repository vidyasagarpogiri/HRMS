
 
         <div id="page-wrapper">
           <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header"> Add Event </h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                  <%= form_for (@event), :data => {:toggle => "validator"} do |f| %>
                                  <% @event.errors.full_messages.each do |msg| %>
                                      <div class="alert alert-success alert-dismissable">
                          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          <%= msg %>
                     </div>
                                   <% end %>

                                    <div class="col-lg-12">
                                        <div class="form-group col-lg-6">                                        
                                            <label class="required" >Enter Event</label><br>
                                               <%=  f.text_field :event_name, :class => "form-control", :placeholder=>"Enter new Leave type", :data => {:error => "Please Enter Event Name"}, :required =>true %>  
                                    <div class="help-block with-errors"></div> 
                                                    
                                                    
                                        </div>
                                        
                                        <div class="form-group col-lg-6"">
                                            <label class="required">Date Of Event</label>
                                 <%= f.text_field :event_date, :placeholder=>"Enter Date Of Event", :class=>"form-control datepicker" ,  :placeholder=>"Enter new Leave type", :data => {:error => "Please Enter Event Date"}, :required =>true %>  
                                    <div class="help-block with-errors"></div> 
                                        </div>
                                    
                                        <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">   
                                           <li><%= link_to "Back",events_path,:class => "btn btn-info pull-right "%> </li>
                                           <li> <%= f.submit  'Save', :class => "btn btn-success pull-left" %></li>                                           
                                        </ul>
                                  
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>


         </div>
          <!-- /#page wrapper -->
          
           <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>


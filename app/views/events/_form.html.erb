<section class="panel">
  <header class="panel-heading">
      Add New Holiday
  </header>
  <div class="panel-body">
     	<%= form_for @event, :html => {:class=>"form-horizontal row-fluid new_event_form"} do |eve| %>
     	
     		  <div>
				     <% @event.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= msg %>
            <%end%>          
			  </div>
     	
      <form class="form-horizontal" role="form">
          <div class="form-group">
              <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">Enter Holiday</label>
              <div class="col-lg-8">
                   <%= eve.text_field :event_name, :class => "span8 form-control", :placeholder =>"Enter New Holiday Name", :data => {:error => "Please Enter valid Event Name"}, :required =>true,:pattern => '[a-zA-Z/s ]*' %>
                    <span class="help-block with-errors"></span>
                  
              </div>
          </div>
          <div class="form-group">
              <label for="inputPassword1" class="col-lg-2 col-sm-2 control-label">Date Of Holiday</label>
              <div class="col-lg-8">
              <div class="controls">
                     <%= eve.text_field :event_date, :class => "span8 date-picker form-control", :data => {:error => "Please Enter valid Event Date"}, :required => true %>
											 <span class="help-block with-errors"></span>
              </div>
          </div>
        <div class="form-group">
              <div class="col-lg-offset-2 col-lg-8">
                 <button type="submit" class="btn btn-success">Post </button>&nbsp&nbsp
                 <%= link_to "Cancel", events_path,:class => "btn btn-danger" %>
              </div>
          </div>
      </form>
      
      <% end %>
  </div>
</section>
   <script>
          $(".new_event_form").validator();
        </script>   
            
     

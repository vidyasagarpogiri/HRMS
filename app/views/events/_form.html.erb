<div class="row">
  <div class="col-lg-12">
    <section class="panel panel-info">
    <header class="panel-heading">
    Holiday
    </header>
    <div class="panel-body">
      <% if @custom_error.present? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= @custom_error %>
        </div>
      <% end %>
      
    <%= form_for @event, :html => {:class=>"form-horizontal row new_event_form"} do |event| %>
      <div>
	       <% @event.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg %>
        <%end%>          
		  </div>

        <div class="form-group">   
          <label class="control-label col-lg-2" for="basicinput">Holiday Name</label>
          <div class="col-lg-6">
            <%= event.text_field :event_name, :class => "form-control", :placeholder =>"Enter Event Name",:data => {:error => "Please Enter Event Name"},:required => true %>
            <span class="help-block with-errors"></span>
          </div>
        </div>

      
        <div class="form-group">   
          <label class="control-label col-lg-2" for="basicinput">Date Of Holiday</label>
          <div class="col-lg-6">
            <%= event.text_field :event_date, :class => "date-picker form-control", :data => {:error => "Please Select Event Date"}, :required => true %>
            <span class="help-block with-errors"></span>
          </div>
        </div>
        
       
        <div class="form-group">
              <div class="col-lg-offset-2 col-lg-8">
                 <button type="submit" class="btn btn-success">Save </button>&nbsp&nbsp
                 <%= link_to "Cancel", events_path,:class => "btn btn-danger" %>
              </div>
          </div>
      </form>
      
      <% end %>
  </div>
</section>

 <script>
   $(".new_event_form").validator();
 </script>   

<script>
$(function(){
var startDate = new Date('01/01/1900');
var FromEndDate = new Date();
var ToEndDate = new Date();

ToEndDate.setDate(ToEndDate.getDate()+365);

$('.date-picker').datepicker({
    format: 'dd/mm/yyyy',
    weekStart: 1,
    //startDate: '01/01/1900',
    //endDate: '01/01/2900', 
    autoclose: true
})
  .on('changeDate', function(selected){
      startDate = new Date(selected.date.valueOf());
      startDate.setDate(startDate.getDate(new Date(selected.date.valueOf())));     
  }); 
});
</script>            
     

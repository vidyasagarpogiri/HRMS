
 
         <div id="page-wrapper">
           <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header"> Add Event </h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                  <%= form_for(@event) do |f| %>
                                   <div class="col-lg-12">
                                        <div class="form-group col-lg-6">                                        
                                            <label class="required" >Enter Event</label><br>
                                               <%=  f.text_field :event_name, :class => "form-control", :placeholder =>"Enter Event" %><br>   
                                                    
                                                    
                                        </div>
                                        
                                        <div class="form-group col-lg-6"">
                                            <label class="required">Date Of Event</label>
                                 <%= f.text_field :event_date, :placeholder=>"Enter Date Of Event", :class=>"form-control datepicker" %>                                           
                                        </div>
                                    <div class="form-group col-lg-6">     
                                  <button type="submit" class="btn btn-success pull-left">Save </button>
                                                    &nbsp;&nbsp;&nbsp<%= link_to "Back",events_path,:class => "btn btn-info "%>
                                                    </div>
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>


         </div>
          <!-- /#page wrapper -->
          
           <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>


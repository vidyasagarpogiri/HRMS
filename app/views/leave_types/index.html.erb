         <div class="wrapper">
		<div class="container">
			<div class="row">
        <div class="span12">
					<div class="content">
						<div class="module">
							<div class="module-head">
								<h3>Leave Types</h3>
								<label style="font-weight:normal;margin-top:-50px;" class = "pull-right"><a><i class="fa fa-plus "></i></a> <%= link_to "Add New Leave Type",  new_leave_type_path  %></label>
							</div>
							<div class="module-body">
								<table class="table table-striped table-bordered table-condensed">
								  <thead>
									<tr>
									  <tr>
				               <th>Name Of Leave Type</th>
						         
									</tr>
								  </thead>
								    <% @leave_types.each do |leave| %>
								  <tbody>
									<tr>
									<td><%= leave.type_name %></td>
		              

                   <% if current_user.department == Department::HR %>
	                  <td> 
	                    <ul class="navigation-btns" style="list-style: none;display:inline;">
                        <li><%= link_to 'Edit', edit_leave_type_path(leave), :class => "btn btn-success pull-left" %></li>                        
                        <li><%= link_to "Delete", leave, method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger pull-left" %></li>                                         
                      </ul>
                     </td>
                   <% end %>
									</tr>
								  </tbody>
								  <% end %>
								</table>
								
						</div><!--/.module -->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->  
  
  
  
 


<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header"> Leave Types</div>
                     <label style="font-weight:normal;margin-top:-50px;" class = "pull-right"><a><i class="fa fa-plus "></i></a> <%= link_to "Add New Leave Type",  new_leave_type_path  %></label>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
            
                <div class="col-lg-12">
               
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           List of Leave Types                                                                           
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                <% if @leave_types.present? %>
                                    <% @leave_types.each do |leave| %>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Leave Type :</label>
                                            <label><%= leave.type_name %> </label>
                                            <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                              <li><%= link_to "Edit",  edit_leave_type_path(leave), :class=>" btn btn-success " %> </li>
                                              <li><%= link_to "Delete",  leave, method: :delete, data: {confirm: "You sure?"}, :class=>"btn btn-danger" %></li>
                                            </ul><hr>
                                        </div>
                                        <% end %>
                                   <% else %>
                                   <div class="alert alert-info alert-dismissable">
                                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                      Please define Leaves types 
                                   </div>
                                   <% end %> 
                                </div>
                                
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        
        <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>


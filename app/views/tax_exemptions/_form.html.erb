<div class="row">
  <div class="col-lg-12">
    <section class="panel panel-info">
      <header class="panel-heading">
        Tax Exemption
      </header>
    
      <div class="panel-body">
        <% if @custom_error.present? %>
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= @custom_error %>
          </div>
        <% end %>
        
        <%= form_for @tax_exemption, :html => {:class=>"form-horizontal row-fluid new_tax_form"} do |tax| %>    
	        <div class="form-group">   
	          <label class="control-label col-lg-2" for="basicinput">Gender</label>
              <div class="col-lg-10">
                <%= tax.select :gender,  options_for_select([['Male', 'Male'], ['Female', 'Female']], :selected => tax.object.gender), :class => "form-control" %>
              <span class="help-block with-errors"></span>
            </div>
	        </div>
				      
		      <div class="form-group">   
		        <label class="control-label col-lg-2" for="basicinput">Exemption Limit</label>
              <div class="col-lg-8">
                <%= tax.text_field :exemption_limit, :class => "form-control", :placeholder =>"Enter Lower Limit",  :data => {:error => "Please Enter Lower Limit"},  :pattern =>'[0-9]*\.[0-9]+|[0-9]+', :required => true %>
              <span class="help-block with-errors"></span>
	          </div>
		      </div>
				      
				     
			           		
			    <div class="form-group">   
			      <div class="col-lg-offset-2 col-lg-10">
              <button type="submit" class="btn btn-success">Save</button>
              <%= link_to "Cancel", tax_exemptions_path,:class => "btn btn-danger" %>
            </div>
			    </div>
				  <% end %>
      </div>
    </section>
  </div>
</div>

            

            
          

<script>
  $(".new_tax_form").validator();
</script>  

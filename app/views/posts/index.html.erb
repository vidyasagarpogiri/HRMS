<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span12">
		    <div class="content">
			    <div class="module">
				    <div class="module-head">
					    <h3>All posts </h3>
					    <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><%= link_to "Create A New Post", "#", :class => "new_post" %></label>   
					 </div>	
				   <div class="module-body">					   
				     <div class="new_status">
		           <%= render "posts/form"%>
		         </div>

		        <% if @posts.present? %> 
              <% @posts.each do |p| %> 
                <div class="row-fluid" style="border:solid 1px #eee;padding:10px;margin-top:10px;width:1100px">
                
                <div class="span12" style="margin-left:20px;">		
                  <div class="control-group span8">
                    <label class="control-label" for="basicinput"> <strong><%= p.title %></strong></label>                
                  </div>

                  <div class="control-group span2">
                    <label class="control-label" for="basicinput"><strong>Created </strong> <%= format_date(p.created_at) %></label>                
                  </div>
                  <div class="control-group span2">
                    <% if current_user.employee.id == p.employee.id %>
                      <ul class="navigation-btns"> 
                       <label style="font-weight:normal;margin-top:-5px;" class = "pull-right"><a><i class="icon-trash"></i></a>
                            <%= link_to "Delete", post_path(p.id), method: :delete, data: {confirm: "Are You sure?"} %>
                          </label>
                     <label style="font-weight:normal;margin-top:-5px;" class = "pull-right"><a><i class="icon-edit"></i></a>
                        <%= link_to 'Edit',  edit_post_path(p)%></label>      
                        </li>
                      </ul>
                    <% end %>
                   </div> 
  
                </div>
                
                 <div class="span11">		
                  <div class="control-group">
                    <label class="control-label" for="basicinput"> <%= raw(p.content)%></label>                
                  </div>
                </div>
                 
                 <div class="span12" style="margin-left:20px;">
                   <div class="control-group span8">
                    <label class="control-label" for="basicinput"> <strong> <%= p.tags %></strong></label>                
                  </div>
                  <div class="control-group span4">
                   <label class="control-label" for="basicinput"><i>by:</i> <strong><%= p.employee.full_name %></strong></label>                
                  </div>
                  </div> 
                  <div class="span11">		
                  <div class="control-group">
                  <label class="control-label" for="basicinput"> <strong> All Comments</strong></label>
                   <% p.comments.each do |c| %>
                   <label class="control-label" for="basicinput"> <%= c.comment %></label>
                    <label class="control-label" for="basicinput"><i>by:</i> <strong><%= c.employee.full_name %></strong></label>
                   <% end %>               
                  </div>
                </div>
                  
                <div class="span12" style="margin-left:20px;">
                
                  <%= render "posts/add_comment_form", :post => p.id %>
              
                 </div> 
                  
                  <div class="row-fluid">
                    <div class="span8"><hr>
                      <h5>Likes(<%= s.likes_count %>) . Comments(<%= p.comments.count %>) 
              
                      <% if p.likes.where(:employee_id => current_user.employee.id, :is_like => true).first %>  
                        <%= link_to 'Unlike', remove_like_post_path(p.id, :employee_id => current_user.employee), :method => "post" %> </span> </h5>
                      <% else %> 
                        <%= link_to 'Like',  add_like_post_path(p.id, :employee_id => current_user.employee), :method => "post" %></span> </h5>
                      <% end %>
                      
                      
                    </div>
              
                  
                  
                  
                  </div><!--row fluid-->
                <%end%>
                
                
              <% else %>                                                  
              <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                No Statuses to display.
              </div>
                <% end %>      
					   </div><!--/.module-body-->
					</div><!--/.module-->
				</div><!--/.content-->
			</div><!--/.span12-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->
	
	<script>
	  $(function(){
	    $(".new_status").hide();
	    $(".total_status").hide();
	    $(".new_post").click(function(){
	      $(".new_status").toggle();
	    }); 
	    $(".read-more").click(function(){
	      $(".length").hide();
	      $(".total_status").show();
	    });
	    
	    $(".show-less").click(function(){
	      $(".total_status").hide();
	      $(".length").show();
	    });
	  });
	
	</script>


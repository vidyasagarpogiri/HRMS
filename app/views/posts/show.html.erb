<div class="panel panel-info">
  <div class="panel-heading">
    All posts
    
    <%= link_to "Back To Posts", posts_path, :class => "fa  fa-arrow-circle-left pull-right" %>&nbsp&nbsp
     <% if current_user.employee.id == @post.employee.id %>
    
    <%= link_to "Edit", edit_post_path(@post.id), :class => "fa fa-edit pull-right" %>
		<% end %>  
	 </div>	
	 
		<div class="panel-body">
		<div class="row">					        			            
       <div class="form-group">
       <div class="col-lg-8">
        <label class="control-label" for="basicinput"> <strong><%= @post.title %></strong></label> 
       <div>                
       </div>

       <div class="form-group">
        <label class="control-label" for="basicinput"><strong>Created </strong> <%= format_date(@post.created_at) %></label>
       </div>
       <div class="form-group">
          <label class="control-label" for="basicinput"><strong>Categoty </strong> <%= @post.category %></label>                
        </div>
     </div>
    </div>     
           <div class="span11">		
            <div class="control-group">
            <label class="control-label" for="basicinput"><strong>Content </strong></label>
              <label class="control-label" for="basicinput"> <%= raw(@post.content)%></label>                
            </div>
                </div>
                
                
                  <div class="control-group span8">
               <label class="control-label" for="basicinput"> 
             <p class="pull-left">
                <% @post.tags.split(",").each do|tag| %>
                  <span class="label label-info"><i class=" icon-tag"></i> <%=  tag %></span>
                <% end %>
              </p></label>
              </div>
                  <div class="control-group span4">
                   <label class="control-label" for="basicinput"><i>by:</i> <strong><%= @post.employee.full_name %></strong></label>                
                  </div>
                  </div> 
                <div class="span11">		
                  <div class="control-group">
                  <label class="control-label" for="basicinput"> <strong> All Comments</strong></label>
                   <% @post.comments.each do |c| %>
                   <label class="control-label" for="basicinput"> <%= c.comment %></label>
                    <label class="control-label" for="basicinput"><i>by:</i> <strong><%= c.employee.full_name %></strong></label>
                   <% end %>               
                  </div>
                </div>
                
                 <div class="span12" style="margin-left:20px;">
                
                  <%= render "posts/add_comment_form", :post => @post.id %>
              
                 </div> 
                <div class="row-fluid">
                    <div class="span8"><hr>
                      <h5>Likes(<%= @post.likes_count %>) . Comments(<%=@post.comments.count %>) 
              
                      <% if @post.likes.where(:employee_id => current_user.employee.id, :is_like => true).first %>  
                        <%= link_to 'Unlike', remove_like_post_path(@post.id, :employee_id => current_user.employee), :method => "post" %> </span> </h5>
                      <% else %> 
                        <%= link_to 'Like',  add_like_post_path(@post.id, :employee_id => current_user.employee), :method => "post" %></span> </h5>
                      <% end %>
                      
                      
                    </div>
                   </div> 
  
                </div>
					   					    
</div>   

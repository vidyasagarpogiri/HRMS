<div class="panel panel-info">
  <div class="panel-heading">
    Job Openings
      <% if current_user.department == Department::HR %>                                
       <%= link_to 'New Job',  new_recruitment_path, :class => "fa fa-plus pull-right" %>
     <% end %>  
  </div>	
	<div class="row">
    <div class="col-sm-12">
      <section class="panel">        
        <div class="panel-body">  		   
	        <% if @recruitments.present? %> 
            <% @recruitments.each do |recruitment| %>
              
              <p><strong>Job Code:</strong> <%= recruitment.jobcode %></p>
              <p><strong>JOb Title: </strong><%= recruitment.title %></p>                
              <p><strong>Job Type: </strong><%= recruitment.job_type%></p>     
              <p><strong>Job Status: </strong><%= recruitment.status %></p>         
              <p><%= link_to recruitment.link, recruitment.link, :target => "/blank" %></p>             
              <p ><strong>Job Description: </strong><div class="description"><%= raw recruitment.description %></div></p>
              <%= link_to "Continue..", recruitment_path(recruitment), :class => "pt4" %><br>
              Attachment:<%= link_to "Show", recruitment.file_url, :target => "/blank" %>
              <% if current_user.department == Department::HR %>                      
                <%= link_to 'Edit', edit_recruitment_path(recruitment), :class => "btn btn-success " %>
                <%= link_to "Delete", recruitment_path(recruitment.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %>
              <% end %> 
              <% if current_user.department == Department::HR %>               
              <% end %><hr>
            <% end %>                                                                                                                             
            <% else %>
          <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              No Jobs to display.
          </div>
        <% end %>                 
				</div><!--/.module-body-->
			</section><!--/.module-->
		</div><!--/.content-->
	</div><!--/.span12-->
</div><!--/.row-->	

<style>
.description{
max-height:35px;
overflow:hidden;
}
</style>	 







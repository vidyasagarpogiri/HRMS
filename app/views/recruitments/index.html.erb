<div class="wrapper">
 <div class="container">
	<div class="row">

  <div class="span12">
		<div class="content">

			<div class="module">
				<div class="module-head">
					<h3>Recruitment Details</h3>
					<label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a href="#"><i class="icon-edit"></i></a> <%= link_to 'Add New Job',  new_recruitment_path %></label>
						</div>
							<div class="module-body">
							
							 <% if @recruitments.present? %> 
                                                                                                         
        <table class="table table-striped table-hover" id="sample-table-2">     
            <thead>											      
	            <tr>
		            <th>Job Code</th>
		            <th>Title</th>
		            <th>Description</th>
		            <th>Link</th>															            									      		
	            </tr>
            </thead>
             <% @recruitments.each do |recruitment| %>
            <tbody>
	            <tr>               
		            <td class="center"><%= recruitment.jobcode %></td>
		            <td><%= recruitment.title %></td>
		            <td><%= recruitment.description %></td>
		            <td><%= recruitment.link %></td>
               <% if current_user.department == Department::HR %>
		            <td> 
		               <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                     <li><%= link_to 'Edit', edit_recruitment_path(recruitment), :class => "btn btn-success " %></li>
                     <li><%= link_to "Delete", recruitment_path(recruitment.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
                   </ul>
                 </td>
               <% end %>
	            </tr>
            </tbody>
            <% end %>
        </table>                                                              
                                
                              
          <% else %>
   
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          No Jobs to display.
   </div>
      <% end %>
      
	           
							</div><!--/.module-body-->
						</div><!--/.module-->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
	



<div class="wrapper">
 <div class="container">
	<div class="row">
    <div class="span8">
		  <div class="content">
			  <div class="module">
				  <div class="module-head">
					  <h3>Job Openings </h3>					  
				  </div>				
				  <div class="module-body">			    
            <h5><%= @recruitment.jobcode %> - <%= @recruitment.title %></h5>               
            <h5>Link: <%= link_to @recruitment.link, @recruitment.link %></h5>
             <%= raw @recruitment.description %>
            <h5>Attachment: </h5><%= link_to "Download", @recruitment.file_url, :target => "/blank" %>
             <% if current_user.department == Department::HR %> 
            <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
              <li><%= link_to 'Edit', edit_recruitment_path(@recruitment), :class => "btn btn-success " %></li>
             <li><%= link_to "Delete", recruitment_path(@recruitment), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>
              </ul>
            <% end %><br><hr>                        
						</div><!--/.module-body-->
					</div><!--/.module-->
				</div><!--/.content-->
			</div><!--/.span8-->
			<div class="span4">
			  <div class="module">	
          <div class="module-head">
            <div class="box-title">
              <h3>Job Openings List</h3> 
            </div>                                            
          </div>
          <div class="module-body">
          </div><!--/.module-body-->
       </div><!--/.module-->
			</div><!--/.span4-->
		</div><!--/.row-->
	</div><!--/.container-->
</div><!--/.wrapper-->

     <div class="panel panel-info">
		      <div class="panel-heading">	
		     <%= form_tag("/workgroups/#{@workgroup.id}/added_moderators") do %>
		      

             <h3> Employee List &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;    <%# if @holiday_calenders.present? %> <%# link_to 'Send As Email', holiday_notification_group_path(@group), :class => "btn btn-info pull-right" %><%# end %> </h3>
		          <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%# link_to "Add Holidays",  new_group_holiday_calender_path(@group), :remote => true %>

		         </label> 
          </div>		   	         
		        <div class="module-body">   
		          <% if @employees.present? %> 
    		        <table class="table table-striped table-bordered table-condensed">
								  <thead>
										<tr>
											<th class="center">Employee Name</th>
											<th> Action  </th>
										</tr>
									</thead>
									
										<%# raise @employee_ids.inspect %>					  
								<div class="control-group">
									<label class="control-label" for="basicinput">Employee Name</label>
									<div class="controls">
                  <%= select_tag "employee_ids[]", options_for_select(@employee_ids.collect{|x| [x.name,x.id]}), {:multiple => :multiple, :size => 20} %>
                   
                   <span class="help-block with-errors"></span> 
									</div>
								</div>
							</div>
						</div>
						
							</table>
							<%= submit_tag "submit" %>
							<% else %>  
							    <div class="alert alert-success alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          No Employees to display
                  </div> 
                                                    
						  <% end %>	
					  <br>		    
					   <% end %>    		     		    
		      </div><!--module -body-->                                                                                
     </div><!--/.module -->


  

<div class="wrapper">
  <div class="container">
    <div class="row">                                             
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3>Work Groups List</h3>
                <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a><%= link_to " Add New Work Group",new_workgroup_path%></label>
             </div>
            <% if @workgroups.present? %>                                         
            <div class="module-body">                     
              <table class="table table-striped table-bordered table-condensed" id="sample-table-2">     
                <thead>											      
                  <tr>
                    <th>Icon</th>
                    <th>Name</th>
                    <th>Description</th>	
                    <th>Admin </th>
                    <th>Actions</th>														            									      		
                  </tr>
                  </thead>
                <% @workgroups.each do |workgroup| %>  
                <tbody>
                  <tr> 
                    <td class="center"><%= image_tag(workgroup.workgroupicon,size: "60x20") %></td>          
                    <td><%= workgroup.name if workgroup.name.present? %></td>
                    <td><%= workgroup.description %></td>
                    <td><%= Employee.find(workgroup.admin_id).full_name %></td> 
                    <td> 
                    <% if current_user.employee.id == workgroup.admin_id || WorkgroupsEmployee.where(is_moderator: true,employee_id: current_user.employee.id, workgroup_id: workgroup.id ).present?%>
                      <ul class="navigation-btns" >
                        <li><%= link_to 'Show', workgroup_path(workgroup), :class => "btn btn-info " %></li>
                        <li><%= link_to 'Edit', edit_workgroup_path(workgroup.id), :class => "btn btn-success " %></li>
                        <li><%= link_to "Delete",workgroup_path(workgroup.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger " %></li>                     
                      </ul>
                       <% end %>
                    </td>
                 
                  </tr>
                </tbody>
                <% end %>
              </table>
            <% else %> 
            <div class="module-body">                                           
              <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  No Work Groups to display.
              </div>
            </div>
            <% end %>
            <%= paginate @workgroups %> 
            </div><!--module-body -->    																																											                               
          </div><!-- /.module-->									      				                                      
        </div><!--/.content-->                    
      </div><!--/.span12-->                
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.wrapper-->


                       
                       
               

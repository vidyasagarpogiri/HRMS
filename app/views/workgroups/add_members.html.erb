<div class="panel panel-info">
  <div class="panel-heading"> 
		Add Employee To Work Group
	</div>
	<div class="panel-body ">							  
    <%= form_tag("/workgroups/#{@workgroup.id}/added_members") do %>
      <div class ="row">
        <div class="col-lg-2">
          <div class="form-group">
            <label  class="col-lg-4 control-label">Employee Name</label>
            <div class="col-lg-4">
              <input type="text" id="member" class ="form-control", name= "member" , place_holder = "Enter Member Name" data-error="Please Enter valid Employee Name" required='true'>
              <span class="help-block with-errors"></span>
              <input type="hidden" id="member_id"  name= "member_id">
              <span style="display:none" id="workgroupid"><%= @workgroup.id%></span>
              <span class="help-block with-errors"></span> 
            </div>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <button type="submit" class="btn btn-success ">Add Member</button> 
        <%= link_to "Cancel", workgroup_path,:class => "btn btn-danger " %>                                             
      </div>				                    
	  <% end %>						
	</div><!--/.panel-body-->
</div><!--/.panel panel-info-->

		
    		    

<script>
  $(function() {
  var availableTags = [];
  var workgroup_id = parseInt($("#workgroupid").text());
  $.get( "/workgroups/"+workgroup_id+"/get_employees.json", function( data ) {
      $.each( data, function( key, val ) {
       availableTags.push(val);
       
       //alert(val["id"]+" - "+val["value"]);
      });
      console.log(availableTags);
  });
  
       $( "#member" ).autocomplete({
        minLength: 2,
        source: availableTags,
        focus: function( event, ui ) {
        $( "#member" ).val( ui.item.value );
        
        return false;
        },
        select: function( event, ui ) {
        $( "#member" ).val( ui.item.value );
        $( "#member_id" ).val( ui.item.id );
        return false;
        }
        })
  });
  </script>
  

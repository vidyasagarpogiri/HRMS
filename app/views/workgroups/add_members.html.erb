<div class="panel panel-info">
  <div class="panel-heading"> 
		Employee Details
	</div>
	<div class="panel-body ">							  
    <%= form_tag({("/workgroups/#{@workgroup.id}/added_members")}, {:autocomplete => :"on"}) do %>
      <div class ="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label  class="col-lg-2 control-label">Add Member</label>
            <div class="col-lg-4">
              <input type="text" id="member" class ="span12 form-control", name= "member" , place_holder = "Enter Member Name" data-error="Please Enter valid Employee Name" required>
              <input type="hidden" id="member_id"  name= "member_id">
              <span class="help-block with-errors"></span> 
            </div>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <button type="submit" class="btn btn-success pull-left">Add Member</button>                                          
      </div>				                    
	  <% end %>						
	</div><!--/.panel-body-->
</div><!--/.panel panel-info-->

		
    		    

<script>
  $(function() {
  var availableTags = [];
  $.get( "/getAllEmployees.json", function( data ) {
      $.each( data, function( key, val ) {
       availableTags.push(val);
       //alert(val["id"]+" - "+val["value"]);
      });
  });
  
       $( "#member" ).autocomplete({
        minLength: 2,
        source: availableTags,
        focus: function( event, ui ) {
        $( "#member" ).val( ui.item.value );
        return false;
        },
        select: function( event, ui ) {
        $( "#member" ).val( ui.item.value );
        $( "#member_id" ).val( ui.item.id );
        return false;
        }
        })
  });
  </script>
  

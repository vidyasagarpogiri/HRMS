  <!-- /navbar -->
    <div class="wrapper">
        <div class="container">
            <div class="row">                
                <div class="span12">
                    <div class="content">
                        <div class="module">
                            <div class="module-head">
                                <h3>Allowances List</h3>
                                <label style="font-weight:normal;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign"></i></a> <%= link_to "New Allowance", new_allowance_path %></label>                                
                            </div>
                            <div class="module-body">

                    <% if @allowances.present? %>
                                                           
                          <table class="table table-striped table-hover" id="sample-table-2">
											      <thead>											      
												      <tr>
													      <th>Allowance</th>
													      <th>Percentage </th>	
													      <th>Value</th>									      		
												      </tr>
											      </thead>
                            <% @allowances.each do |allowance| %>
											      <tbody>
												      <tr>               
													      <td><%= allowance.allowance_name %></td>
													      <% if allowance.value.present? %>
													      <td><%= allowance.value %>&#37</td>
													      <td>---</td>
													      <% else %>
													      <td>---</td>
													      <td><%= allowance.allowance_value %></td>
													      <% end %>
                               <% if current_user.department == Department::HR %>
                                <td>
													      <ul class="navigation-btns  pull-left" >
													     <li> <%= link_to 'Edit', edit_allowance_path(allowance.id), :class => "btn btn-success" %></li><li>
																<%= link_to 'Delete', allowance_path(allowance.id), method: :delete ,data: {confirm: "Are You sure?"}, :class => "btn btn-danger" %></li></ul> </td>
												      </tr>
                          <% end %>
											      </tbody>
											      <% end %>
										      </table> 
                    <% end %>
                      </div>
                       <div class="module-body">
                          <%= link_to 'Configure Salary',new_static_salary_path, :remote => true %>
                          <div id="form_salary">
                          </div>
                          <div class="salary_divisions">
                              <%= render "static_salaries/index" %>
                          </div>
                       </div>
                    </div>

                 
                </div>
             </div>
                    
          </div>
                 
     </div>

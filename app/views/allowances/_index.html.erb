  
                <div class="col-lg-12">
                    <h4 class="page-header">Allowance Info</h4>
                    <% if @allowances.present? %>
                      <div class="panel panel-default">
                        <div class="panel-body">                                       
                          <table class="table table-striped table-hover" id="sample-table-2">
											      <thead>											      
												      <tr>
													      <th>Allowance</th>
													      <th>Value/Percentage </th>	
													      <th></th>										      		
												      </tr>
											      </thead>
                            <% @allowances.each do |allowance| %>
											      <tbody>
												      <tr>               
													      <td><%= allowance.allowance_name %></td>
													      <td><%= allowance.value %></td>
                               <% if current_user.department == Department::HR %>

													      <td>
													       <ul class="navigation-btns" style="list-style: none;display:inline;">
													     <li> <%= link_to 'Edit', edit_employee_salary_allowance_path(@employee.id, @salary.id, allowance.id), :class => "btn btn-success pull-left" %></li><li>
																<%= link_to 'Delete', employee_salary_allowance_path(@employee.id, @salary.id, allowance.id), method: :delete ,data: {confirm: "Are You sure?"}, :class => "btn btn-danger pull-left" %></li></ul> </td>
												      </tr>
<% end %>
											      </tbody>
											      <% end %>
										      </table> 
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>

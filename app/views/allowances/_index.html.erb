



  
                <div class="col-lg-12">
                    <h4 class="page-header">Allowance Details</h4>
                    <% if @allowances.present? %>
                      <div class="panel panel-default">
                        <div class="panel-body">                        
                          <table class="table table-striped table-hover" id="sample-table-2">
											      <thead>											      
												      <tr>
													      <th class="center">Name of Allowance</th>
													      <th>Value/Percentage </th>	
													      <th></th>										      		
												      </tr>
											      </thead>
                            <% @allowances.each do |allowance| %>
											      <tbody>
												      <tr>               
													      <td class="center"><%= allowance.allowance_name %></td>
													      <td><%= allowance.value %></td>
<% if current_user.employee.role.id == 2 %>
													      <td><%= link_to 'edit', edit_employee_salary_allowance_path(@employee.id, @salary.id, allowance.id), :class => "btn btn-success pull-left" %></td>
																<td><%= link_to 'delete', employee_salary_allowance_path(@employee.id, @salary.id, allowance.id), method: :delete , :class => "btn btn-danger pull-left" %></td>
												      </tr>
<% end %>
											      </tbody>
											      <% end %>
										      </table> 
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
          
<% end %>

<div class="wrapper">
 <div class="container">
   <div class="row">                
      <div class="span12">
        <div class="content">
          <div class="module">
            <div class="module-head">
              <h3> Allowance Form </h3>
            </div>
            <div class="module-body">   
              <%= form_for @allowance, :html =>{ :class=>"form-horizontal row-fluid new_allowance_form"} do |f| %>
              <div class="control-group">
								<label class="control-label" for="basicinput">Allowance Name</label>
								<div class="controls">
									 <%= f.text_field :allowance_name, :class => "span8 form-control", :placeholder=> "Enter Allowance", :data => {:error => "Please Enter valid Allowance"}, :required =>true %>
                   <div class="help-block with-errors"></div>  
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="basicinput" data-error ="Please Enter Seclect value" required>Allowance Value Type</label>
								<div class="controls">
									 <select name="allowance_type">
									    <option value="1">Percentage</option>  
									    <option value="2">value</option>
									 </select>
                   <div class="help-block with-errors"></div>  
								</div>
							</div>  
							<div class="control-group">
								<label class="control-label" for="basicinput">Value</label>
								<div class="controls">
									 <input type="text" class="span8 form-control" placeholder= "Enter Value" name="value" id="valueofallowance" data-error ="Please Enter valid Allowance value" required pattern="[0-9/.]*" %>
                   <div class="help-block with-errors"></div>  
								</div>
							</div>
							 <ul class="navigation-btns pull-left" >
							  <li><button type="submit" class="btn btn-success">Save</button></li>
							  <li><%= link_to 'Cancel', static_allowances_path, :class=>"btn btn-danger" %></li>
							</ul>
            <% end %>                         
           </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

          
         <script>
          $(function(){
            <% unless @allowance.new_record? %>
              <% if @allowance.value.present? %>
                $("#valueofallowance").val('<%=  @allowance.value %>');
              <% else %>
                $("#valueofallowance").val('<%=  @allowance.allowance_value %>');
              <% end %>
            <% end %>
          });
         </script>
         
         <script>
          $(".new_allowance_form").validator();
        </script>   
          
          
      

 <div class="wrapper">
   <div class="container">
     <div class="row">                
        <div class="span12">
          <div class="content">
            <div class="module">
              <div class="module-head">
                <h3>New Allowance</h3>
              </div>
              <div class="module-body">   
                <%= form_for @allowance do |f| %>
                  <div class="control-group">
										<label class="control-label" for="basicinput">Allowance_name</label>
										<div class="controls">
											 <%= f.text_field :allowance_name, :class => "span8 form-control", :placeholder=> "Enter Allowance", :data => {:error => "Please Enter Address Line 1"}, :required =>true %>
                       <div class="help-block with-errors"></div>  
										</div>
									</div>
									<div class="control-group">
										<label class="control-label" for="basicinput">Allowance Value Tyoe</label>
										<div class="controls">
											 <select name="allowance_type">
											    <option value="1">Percentage</option>
											    <option value="2">value</option>
											 </select>
                       <div class="help-block with-errors"></div>  
										</div>
									</div>  
									<div class="control-group">
										<label class="control-label" for="basicinput">Value</label>
										<div class="controls">
											 <input type="text" class="span8 form-control" placeholder= "Enter Value" name="value" %>
                       <div class="help-block with-errors"></div>  
										</div>
									</div>
									<button type="submit" class="btn btn-success">Save</button>
									<%= link_to 'Cancel', allowances_path, :class=>"btn btn-danger  pull-right" %>
              <% end %>                         
             </div>
            </div>
          </div>
        </div>
       </div>
      </div>

          
          
          
          
      

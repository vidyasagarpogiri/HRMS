

<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                   
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             Holiday calender
                        </div>
                        <div class="panel-body">
   
                                 <%= form_for ([@group, @holiday_calender]) do |f| %>
                                        
                                        <div class="form-group">
                                            <label>Holiday on:</label>

                                          <%= f.text_field :date,  :placeholder=>"Enter holiday date", :class=>"form-control datepicker" %>

                                          
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Event:</label>
                                            <%= f.text_field :event,  :class => "form-control" %>                                          
                                        </div>
                                        
                                         <div class="form-group">
                                            <label>Employee Participation  :</label>                         
                                        
                                        Mandatory <input type="radio" value="true" name="holiday_calender[mandatory_or_optional]">
                                        Optional <input type="radio" value="false" name="holiday_calender[mandatory_or_optional]">
                                        </div>
                                       <ul class="navigation-btns" style="list-style: none;display:inline;">
                                           <li> <%= f.submit  'Save', :class => "btn btn-success pull-left" %></li>
                                            
                                         </ul> 
                                                    
                                    <% end %>
                         
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
         </div>
          <!-- /#page wrapper -->
          
          
          
<script>
  $(function(){
    $(".datepicker").datepicker();
  });
</script>

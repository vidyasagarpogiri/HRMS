            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             Holiday calender
                        </div>
                        <div class="panel-body">
   
                                 <%= form_for ([@group, @holiday_calender]) do |f| %>
                                        
                                       <div class="form-group col-lg-6"">
                                            <label class="required">Add Event</label><br>
                                            <%= f.collection_select :event_id, Event.all, :id, :event_name, { :prompt => "Please Select" }, { :class => "event, form-control", :id => "disabledSelect" } %>
                                        </div> 
                                        
                                         <div class="form-group">
                                            <label>Employee Participation  :</label>                         
                                        
                                        Mandatory <input type="radio" value="true" name="holiday_calender[mandatory_or_optional]">
                                        Optional <input type="radio" value="false" name="holiday_calender[mandatory_or_optional]">
                                        </div>
                                       <ul class="navigation-btns" style="list-style: none;display:inline;">
                                           <li> <%= f.submit  'Save', :class => "btn btn-success pull-left" %></li>
                                            
                                         </ul> 
                                                    
                                    <% end %>
                         
                        </div>

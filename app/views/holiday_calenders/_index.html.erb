   <% if @holiday_calenders.present? %>       
  <div class="wrapper">
		<div class="container">
			<div class="row">
        <div class="span12">
					<div class="content">
						<div class="module">												
							<div class="module-head">           
                <h3>Event List</h3>
                  <label style="font-weight:normal;padding:20px;margin-top:-15px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a><%= link_to "Add Event",  new_group_holiday_calender_path(@group) %></label>    
              </div>
              <div class="module-body">
                <table class="table table-striped table-hover" id="sample-table-2">
                  <thead>
                  <tr>
                    <th class="center">Event Date </th>
                    <th>Event</th>														                
                    <th></th>		                  										      		
                  </tr>											      												                 
                  </thead>											                  
                   <% @holiday_calenders.each do |f| %>
                  <tbody>
                    <tr>               
                      <td class="center"> <%= f.event.event_name %>  </td>
                      <td>  <%=format_date (f.event.event_date) %> </td>
                      <td>
                      <ul class="navigation-btns" style="list-style: none;display:inline;">  
                         <li><%= link_to "Edit", edit_group_holiday_calender_path(@group, f), :class=>"btn btn-success pull-right" %></li>
                         <!-- <li><button type="submit" class="btn btn-success pull-left">Save</button> </li> --> 
                      </ul>
                      </td>
                    </tr>
                  </tbody>
                  <% end %>
                </table>            
           </div><!--module body--> 
              <% else %>
              <div class="alert alert-success alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                   This group have no events to display
              </div>                     
           </div><!--/.module -->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
<% end %>



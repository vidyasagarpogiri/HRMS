
<div class="module-head">
   <h3>  List of Employees</h3>
</div>   
<div class="module-body"> 
<% if @employees.present? %>   
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table  table-striped	 display" width="100%">
    <thead>
			<tr>
        <th>Employee Name</th>
        <th>Department</th>
        <th>Designation</th>
        <th>Group</th>
        <th>Number of leaves used</th>
      </tr>
     </thead>
     <tbody>          
        <% @employees.each do |emp| %>
       <tr class="gradeA">             
					<td><%= emp.full_name %></td>
          <td><%= emp.department.department_name %></td>
          <td><%= emp.designation.designation_name if emp.designation.present? %></td>
          <td><%= emp.group.group_name if emp.group.present? %></td> 
          <td><%= total_used_leaves(emp)%> </td>
       </tr>
       <% end %>
		</tbody>                        
  </table>
  <% else %>
  <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        You have No List of Reportees to display.
  </div> 
  <% end %>        		 			             
</div>

<script>
	$(document).ready(function() {
		$('.datatable-2').dataTable();
		$('.dataTables_paginate').addClass("btn-group datatable-pagination");
		$('.dataTables_paginate > a').wrapInner('<span />');
		$('.dataTables_paginate > a:first-child').append('<i class="icon-chevron-left shaded"></i>');
		$('.dataTables_paginate > a:last-child').append('<i class="icon-chevron-right shaded"></i>');
	} );
</script>



       

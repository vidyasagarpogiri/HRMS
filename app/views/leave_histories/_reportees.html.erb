 <div class="module">
    <div class="module-head">
       <h3>  List of Employees</h3>
    </div>   

    <div class="module-body">
    
     <table class="table table-striped table-hover" id="sample-table-2">
          <thead>
						<tr>
              <th>Employee Name</th>
              <th>Department</th>
              <th>Designation</th>
              <th>Number of leaves used</th>
            </tr>
           </thead>
           <tbody>          
              <% @employees.each do |emp| %>
             <tr>
             
								<td><%= emp.full_name %></td>
                <td><%= emp.department.department_name %></td>
                <td><%= emp.designation.designation_name if emp.designation.present? %></td> 
                <td><%= total_used_leaves(emp)%> </td>
             </tr>
             <% end %>
					</tbody>                        
        </table> 
        		 
			 
    
    </div>
  </div>


       

<div class="panel panel-info">
  <div class="panel-heading">                                                        
     My Reportees
  </div>   
  <div class="row">
    <div class="col-sm-12">
      <section class="panel">      
      <div class="panel-body">
       <% if @employees.present? %> 
        <div class="adv-table">
         
          <table  class="display table table-bordered table-striped" id="reportees-leaves">         
            <thead>
		          <tr>
                <th>Employee Name</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Group</th>
                <th>Number of leaves used</th>
              </tr>
             </thead>
             <tbody>          
                <% @employees.each do |emp| %>
               <tr class="gradeA">             
				          <td><%= emp.full_name %></td>
                  <td><%= emp.department.department_name %></td>
                  <td><%= emp.designation.designation_name if emp.designation.present? %></td>
                  <td><%= emp.group.group_name if emp.group.present? %></td> 
                  <td><%= total_used_leaves(emp)%> </td>
               </tr>
               <% end %>
	          </tbody>                     
          </table>
          </div>
          <% else %>
          <div class="alert alert-success alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                You have No List of Reportees to display.
          </div> 
          <% end %>        		 			             
          
        </div>
      </section>                           
    </div>
  </div>                          												  									
</div><!--panel panel-info-->		


<script>
	$(document).ready(function(){
		$('#reportees-leaves').dataTable();
	});
</script>

       

<div class="panel panel-info"> 
  <div class="panel-heading">
    Employees Leaves List
  </div>   
  <div class="panel-body">
    <% if @leaves.present? %>                                                                          								
    <div class="adv-table">
      <table  class="display table table-bordered table-striped table-dynamic" id="dynamic-table">
			  <thead>
				  <tr>
				     <th> Full Name </th>
					   <th> Date </th>
					   <th> Day(s) </th>
					   <th> Leave Type </th>
					   <th> Reason </th>
					   <th> Remaining Leaves </th>
					   <th> Used Leaves </th>														
					   <th> Status</th>
				     <th> Comments</th>																				
				  </tr>
			  </thead>										 									
			  <tbody>
			    <% @leaves.each do |f| %>														
				  <tr class="gradeA">               
				    <td> <%= f.employee.full_name %></td>
				    <% if f.is_halfday %>
				    <td><%= format_date(f.from_date) %></td>
				    <td>half day(<%= f.section %>)</td>
				    <% else %>
			      <td> <%= format_date(f.from_date) %> to <%= format_date(f.to_date) %>  </td>
				    <td> <%= f.days %> </td>
				    <% end %>
				    <td> <%= f.leave_type.type_name if f.leave_type.present? %>  </td>
				    <td> <%= f.reason %> </td> 
				    <td> <%=total_balance_leaves(f.employee) %></td>
				    <td> <%=total_used_leaves(f.employee)%> </td>
				    <td> <%= f.status %>  </td>
				    <td> <%= f.feedback %> </td>
				  </tr>
			  <% end %>	
        </tbody>								     	          
      </table>
    </div>						                        
    <% else %>
     <div class="alert alert-success alert-dismissable">
         <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
             No Applied Leaves To Show  
     </div>                                   												                                
     <% end %>
  </div><!-- /.module .body-->    	
</div><!-- /.module -->    
    
 
    
<script>
	$(document).ready(function() {
		$('.datatable-2').dataTable();
		$('.dataTables_paginate').addClass("btn-group datatable-pagination");
		$('.dataTables_paginate > a').wrapInner('<span />');
		$('.dataTables_paginate > a:first-child').append('<i class="icon-chevron-left shaded"></i>');
		$('.dataTables_paginate > a:last-child').append('<i class="icon-chevron-right shaded"></i>');
	} );
</script>
      


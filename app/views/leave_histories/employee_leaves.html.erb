 
                  <div class="module-head">
                    <h3> Employees Leaves List</h3>
                  </div>  
                  <div class="module-body table">                                                                          								
										<table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                     <% if @leaves.present? %>                   										
											<thead>
												<tr>
												   <th> Full Name </th>
													 <th> Date </th>
													 <th> Day(s) </th>
													 <th> Reason </th>
													 <th> Leave Type </th>
													 <th> Remaining Leaves </th>
													 <th> Used Leaves </th>														
													 <th> Status</th>
												   <th> Comments</th>																				
												</tr>
											</thead>
										 									
											<tbody>
											 <% @leaves.each do |f| %>														
												<tr class="gradeA">               
												  <td> <%= Employee.(f['employee_id']).full_name %></td>
											    <td> <%= format_date(f.from_date) %> to <%= format_date(f.to_date) %>  </td>
												  <td> <%= f.days %> </td>
												  <td> <%= f.leave_type.type_name if f.leave_type.present? %>  </td>
												  <td> <%= f.reason %> </td> 
												  <td> <%=total_balance_leaves(f.employee) %></td>
												  <td> <%=total_used_leaves(employee)%> </td>
												  <td> <%= f.feedback %> </td>
												  <td> <%= f.status %> </td>
												</tr>
											<% end %>	
                     </tbody>
								     	          
									</table>							   
                     <div class="pagination ">                       
                        <%# paginate @leave %>                       
                     </div>
                  <% else %>
										 <div class="alert alert-success alert-dismissable">
                         <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                             You have Not Applied Leaves 
                     </div>                                   
									<% end %>								                     
                 </div>
                    <!-- /.panel .body-->
               </div>
                  <!-- /.panel .panel-default-->                                   
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->


<script>
		$(document).ready(function() {
			$('.datatable-1').dataTable();
			$('.dataTables_paginate').addClass("btn-group datatable-pagination");
			$('.dataTables_paginate > a').wrapInner('<span />');
			$('.dataTables_paginate > a:first-child').append('<i class="icon-chevron-left shaded"></i>');
			$('.dataTables_paginate > a:last-child').append('<i class="icon-chevron-right shaded"></i>');
		} );
	</script>

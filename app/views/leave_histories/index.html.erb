


<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header"> Employee Leave List               </h2>
                                        

                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">

                                     <%= link_to "Apply Leave",  new_employee_leave_history_path, :class=>"btn btn-success pull-right" %>       

                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">

                    <% @leaves.each do |f| %>

                                    
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Leave From:</label>
                                            <%= f.from_date %>                                 
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Leave Till:</label>
                                            <%= f.to_date %>
                                        </div>
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Leave Type:</label>
                                            <%= f.leave_type.type_name if f.leave_type.present? %>
                                        </div>
                                        <div class="form-group">
                                            <label>Reason for leave:</label>
                                            <%= f.reason %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label style="font-weight:normal;">Total Days:</label>
                                            <%= f.days %>
                                        </div>
																				<div class="form-group">
                                            <label style="font-weight:normal;">Status:</label>
                                            <%= f.status %>
                                        </div>
                                        
                                        
                                    
                                        
                                        
                                        <ul class="navigation-btns" style="list-style: none;display:inline;">  
                                        <%= link_to "Edit", edit_employee_leave_history_path(@employee, f), :class=>"btn btn-success pull-right" %>  
                                      <!--      <li><button type="submit" class="btn btn-success pull-left">Save</button> </li> --> 
                                        </ul>
                                  <hr>
                                 
                                </div>
                                <% end %>

                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>




             <div id="page-wrapper"><br>
              
               <div class="add">      
						      <label style="margin-top:-5px;" class = "pull-right"><%= link_to 'Apply Leave',  new_leave_history_path(), :class => "fa fa-plus " %> </label> 
						   </div>
    
                <div class="page-header">Leaves Waiting for Approval</div>               
                 <div class="panel panel-default">              
                  <div class="panel-heading">
                     Leaves Waiting for Approval
                  </div>
									<div class="panel-body"> 
                    <% if employee_has_hold_leaves? %>
										<table class="table table-striped table-hover" id="sample-table-2">
											<thead>
												<tr>
													<th> Date </th>												
													<th> Full Name </th>
													<th> Day(s) </th>
													<th> Reason </th>
													<th> Leave Type </th>
													<th> Remaining Leaves </th>
													<th> Used Leaves </th>														
													<th colspan="2"><center>Action </center></th>												
												</tr>
											</thead>
											 <% @leaves.each do |f| %>
											 <% if f.status == "HOLD" %>
											<tbody>
												<tr>
													<td>From - to dates  </td>
													<td><%= @employee.full_name %> </td>													
													<td><!-- <%No of Days %> --> day(s)</td>
													<td><!--<% Reason For Leave %> --> </td>
													<td><!--<% Leave Type %> --> </td>													
													<td><%= total_balance_leaves(@employee) %> day(s)</td>
													<td><%= total_used_leaves(@employee)%> day(s)</td>
													<!-- <td><%= waiting_for_approval(@employee)%></td> -->
													<td>
													     <ul class="navigation-btns pull-right" style="list-style: none;display:inline;">
                                   <li><%= link_to "Approve" %></li>
                                   <li><%= link_to "Reject" %></li>                                  
                               </ul>
													</td>
												</tr>
											</tbody>
									<% end %>
									<% end %>
										</table>
										<div class="pagination ">   
									    <%= paginate @leaves %>
									  </div>
										<% else %>
										  <div class="alert alert-info alert-dismissable">
                          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                           You have No Leaves Requests 
                      </div>
										<% end %>
									</div>
									</div>
									
									
								 <div class="page-header"> Approved Leaves List</div> 							
                   <div class="panel panel-default">
                      <div class="panel-heading">
                          Approved Leaves List
                      </div>
                    <div class="panel-body">
										  <% if @leave_histories.present? %> 	
										    <table class="table table-striped table-hover" id="sample-table-2">
											<thead>
												<tr>
												  <th> Full Name </th>
													<th> Date </th>
													<th> Day(s) </th>
													<th> Reason </th>
													<th> Leave Type </th>
													<th> Remaining Leaves </th>
													<th> Used Leaves </th>														
													<th> Status</th>
												  <th> Comments</th>
												</tr>
											</thead>
										 <% @leave_histories.each do |f| %>											
											<tbody>												
												<tr>               
												  <td> <%= @employee.full_name %> </td>
												  <td> <%= format_date (f.from_date %> to <%= format_date (f.to_date )%>  </td>
												  <td> <%= f.days %> </td>
												  <td> <%= f.reason %> </td>
												  <td> <%= f.leave_type.type_name if f.leave_type.present? %>  </td>
												  <td> <!-- <% Remaining leaves %> --> day(s)</td>
													<td> <!-- <% Used leaves %> -->day(s)</td> 
												  <td> <%= f.status %> </td>
												  <td> <%= f.feedback %> </td>
												</tr>												
											</tbody>
								      <% end %>	                   
										</table>										
                      <div class="pagination ">                      
                          <%= paginate @leave_histories %>                       
                      </div>									
										<% else %>
										  <div class="alert alert-info alert-dismissable">
                          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                           You have No Leaves Requests 
                      </div>
                     
										<% end %>											
								 </div> 							

                      </div>
                    <!-- /.panel .chat-panel -->
                    </div>
                    <!-- /.col-lg-4 -->    
                  </div>
                  <!-- /.row -->
              </div>
              <!-- /#page-wrapper -->


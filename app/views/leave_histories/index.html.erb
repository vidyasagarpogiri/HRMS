</head>

<body>

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">                
                <a class="navbar-brand" href="index.html">Employee Management</a>
            </div>
            <!-- /.navbar-header -->            
           </nav> 
        

           <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        
                        <li>
                            <a href="index.html"><i class="fa fa-dashboard fa-fw"></i> Leaves List</a>
                        </li>
                        <li>
                            <a href="tables.html"><i class="fa fa-calendar fa-fw"></i> Holiday-Calender</a>
                            <%= link_to "Holiday-Calender", group_path(@employee.group) %>
                        </li>
                        <li>
                            <a href="forms.html"><i class="fa fa-calendar fa-fw"></i> Leave-calender</a>
                        </li>
                    </div>
                </div>
            <br>
             <div id="page-wrapper">  
            
						<label style="font-weight:normal;padding:13px;" class = "pull-right"><%= link_to 'Apply Leave',  new_employee_leave_history_path(@employee), :class => "fa fa-plus " %> </label> 
<br><br><br>         
               <div class="panel panel-default">
               
                  <div class="panel-heading">
                      Applied Leaves List
                  </div>
									<div class="panel-body">
										<table class="table table-striped table-hover" id="sample-table-2">
											<thead>
												<tr>
													<th class="center">Full Name</th>
													<th> Leaves Used </th>
													<th class="hidden-xs">Leaves Balance</th>
													<th class="hidden-xs">Remaining Carry Forward Leaves</th>
													<th class="hidden-xs">Waiting For Approval</th>
												</tr>
											</thead>
											 <% @leaves.each do |f| %>
												<% if f.status == "HOLD" %>
											<tbody>
												<tr>
													<td class="center"><a href="view.html"> Employee Name</td>
													<td>05</td>
													<td>08</td>
													<td>2</td>
													<td>0</td>
												</tr>
											</tbody>
									<% end %>
									<% end %>
										</table>
									</div> 
								 </div>          
                   <div class="panel panel-default">
                      <div class="panel-heading">
                          Applied Leaves List
                      </div>
                    <div class="panel-body">
										    <table class="table table-striped table-hover" id="sample-table-2">
											<thead>
												<tr>
												  <th> Full Name</th>
													<th class="center">Date</th>
													<th class="hidden-xs">No 0f Days</th>													
													<th class="hidden-xs">Leaves Type</th>
													<th class="hidden-xs">Leaves Balance</th>
													<th> Leaves Used </th>
													<th class="hidden-xs">Status</th>
													<th class="hidden-xs">Feedback</th>
												</tr>
											</thead>
										 <% @leaves.each do |f| %>
												<% unless f.status == "HOLD" %>
											<tbody>												
												<tr>               <td><%= @employee.full_name %></td>
													                  <td class="center"> <%= f.from_date %>  </td>
													                  <!--<td>  <%# f.to_date %> </td> -->
													                  <td> <%= f.days %> </td>
													                  <td> <%= f.leave_type.type_name if f.leave_type.present? %>  </td>
													                 <!-- <td> <%# f.reason %> </td> -->
																						<td></td>
																						<td></td>
													                  <td> <%= f.status %> </td>
													               
												                  </tr>
											
												
												
											</tbody>
								<% end %>
	<% end %>
										</table>
									</div>
								</div>
                   
                        <!-- /.panel-body -->
                        <div class="panel-footer " >
                            <div class="input-group">
                                <input id="btn-input" type="text" class="form-control input-sm" placeholder="Type your message here..." />
                                <span class="input-group-btn">
                                    <button class="btn btn-warning btn-sm" id="btn-chat">
                                        Send
                                    </button>
                                </span>
                            </div>
                        </div>
                        <!-- /.panel-footer -->
                    </div>
                    <!-- /.panel .chat-panel -->
                </div>




<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header"> Employee Leave List </h2>
                                        

                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                          <label style="font-weight:normal;padding:20px;" class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "Apply Leave",  new_employee_leave_history_path  %></label>
                                 

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <table class="table table-striped table-hover" id="sample-table-2">
											                  <thead>											      
												                  <tr>
													                  <th class="center">Leave From </th>
													                  <th>Leave Till</th>
													                  <th>Total Days</th>		
													                  <th>Leave Type </th>	
													                  <th>Reason for leave</th>
													                  <th>Status</th>
													                  <th></th>
													                 	                  										      		
												                  </tr>
											                  </thead>											                  
	                                        <% @leaves.each do |f| %>
											                  <tbody>
												                  <tr>               
													                  <td class="center"> <%= f.from_date %>  </td>
													                  <td>  <%= f.to_date %> </td>
													                  <td> <%= f.days %> </td>
													                  <td> <%= f.leave_type.type_name if f.leave_type.present? %>  </td>
													                  <td> <%= f.reason %> </td>
													                  <td> <%= f.status %> </td>
													                  <td> <%= link_to "Edit", edit_employee_leave_history_path(@employee, f), :class=>"btn btn-success pull-right" %> </td>
												                  </tr>
											                  </tbody>
											                  <% end %>
									                  </table>              
                             

                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>



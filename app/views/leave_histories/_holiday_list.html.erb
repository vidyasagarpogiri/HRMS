<div class="panel panel-info">
  <div class="panel-heading">   
    Holiday calender <%= link_to ' Apply Leave',  new_leave_history_path, :class => "icon-plus-sign pull-right " %>
  </div>		   	         
  <div class="row">
    <div class="col-sm-12">
      <section class="panel">
        <header class="panel-heading">
          
        </header>
        <div class="panel-body"> 
       <% if @holiday_calenders.present? %> 
       <table class="table table-striped table-bordered table-condensed">
				  <thead>
						<tr>
							<th class="center">Event Name</th>
							<th> Event Date  </th>
							<th> Mandatory/Optional  </th>
						</tr>
					</thead>					
					<% @holiday_calenders.each do |holiday| %>
					<tbody>
						<tr>
						  <td class="center"><%= holiday.event.event_name %></td>	
						  <td class="center"><%=format_date(holiday.event.event_date) %></td>
						   <td class="center"><% if holiday.mandatory_or_optional? %>Mandatory<%else%>Optional<%end%></td>		
					  </tr>
				 </tbody>
				 <% end %>
			</table>
			<% else %>  
			    <div class="alert alert-success alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  No Holidays List for this Department
          </div>                                   
		  <% end %>		        
		  </div>
      </section>
    </div>
  </div>
</div>     		     	                                                                        	

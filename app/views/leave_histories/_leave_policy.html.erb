

<div class="module-head">							
  <h3>Leave Policy</h3> 
</div>
<div class="module-body">		               
  <% if @leave.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Personal Leaves Per Month</th>
          <th>Carry forword Leaves per year</th>
          <th>Maximum Carry forward Leaves</th>
          <th>Floating Holiday Period</th>
         </tr>
       </thead>
       <tbody>          
          <% unless @leave.nil? %>
       <tr>
        <td><%= @leave.pl_this_year %></td>
        <td> <%= @leave.eligible_carry_forward_leaves %></td>
        <td><%= @leave.max_carry_forward_leaves %></td>
        <td><%= float_leave(@leave.floating_leave_period) %></td>
       </tr>
          <% end %>
          </tbody>                        
    </table> 
  <% else %>      
      <div class="alert alert-info alert-dismissable">
         <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
           No Leave  for this Department
      </div>                                   
   <% end %>			 
</div> 

    

<div id="page-wrapper">
                <div class="row">
                <div class="col-lg-12">
                   New Leave History
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           New Leave details of :<label> <%= @employee.first_name %></label>
                        </div>
                        <div class="panel-body">
   
                                 <%= form_for ([@employee, @leavetype, @leavehistory]) do |f| %>
                                        
                                        <div class="form-group">
                                            <label>Leave From:</label>
                                            <%= f.text_field :from_date, :id => "disabledSelect", :class => "form-control datepicker" %>
                                        </div>
                                        <div class="form-group">
                                            <label>Leave Till:</label>
                                            <%= f.text_field :to_date, :id => "disabledSelect", :class => "form-control datepicker" %>
                                        </div>
                                        <div class="form-group">
                                            <label>Total no of days:</label>
                                            <%= f.text_field :days,  :class => "form-control" %>
                                        </div>
                                         <div class="form-group">
                                            <label>Reason for leave:</label>
                                            <%= f.text_field :reason,  :class => "form-control" %>
                                        </div>
                                        <div class="form-group">
                                            <label>Feedback from respective authority:</label>
                                            <%= f.text_field :feedback,  :class => "form-control" %>
                                        </div>
                                       
                                        <ul class="navigation-btns" style="list-style: none;display:inline;">
                                           <li> <%= f.submit  'Save', :class => "btn btn-success pull-left" %></li> 
                                        </ul> 
                                                    
                                    <% end %>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
           
         </div>
          <!-- /#page wrapper -->

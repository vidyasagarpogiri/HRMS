                               <div class="col-lg-12">                                       
                                <div class="col-lg-6">                                        
                                  <div class="form-group col-lg-4">
                                      <label class="required" >From</label>
                                      <%= f.text_field :from_date, :id => "idnm1", :class => "form-control datepicker3" %>
                                  </div>                                        
                                  <div class="form-group col-lg-4">

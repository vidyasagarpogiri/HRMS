 <br>                             
<h4>Increments</h4><hr>
<div class="new_increments">
  <%=render 'salary_increments/new' %><hr>
</div>
                    <% if current_user.employee.role.id == 2 %>
                        <div class="hide-button"> 
                          <label style="font-weight:normal;" class = "pull-right">
                            <i class="fa fa-plus "></i>
                              <%= link_to 'New Increment', "#", :id=>"new_increment_form"  %>
                           </label>
                         </div>
                      <% end %>
                              <table class="table table-striped table-hover" id="sample-table-2">
											            <thead>											      
												            <tr>
													            <th class="center">Date Of Increment</th>
													            <th>Percentage </th>	
													            <th></th>										      		
												            </tr>
											            </thead>
											             <% @salary_increments.each do |salary_increment| %> 
											            <tbody>
												            <tr>               
													            <td class="center"><%= salary_increment.increment_date %></td>
													            <td> <%= salary_increment.increment_value %></td>
<% if current_user.employee.role.id == 2 %>
													            <td> 
													             <ul class="navigation-btns" style="list-style: none;display:inline;">
													            <li><%= link_to 'Edit', edit_employee_salary_salary_increment_path(@employee.id, @salary.id, salary_increment.id),:class => "btn btn-success pull-left" %></li>
																			<li><%= link_to 'Delete', employee_salary_salary_increment_path(@employee.id, @salary.id, salary_increment.id), method: :delete , :class => "btn btn-danger pull-left" %></li></ul></td>
<% end %>
												            </tr>
											            </tbody>
											            <% end %>
									            </table> 									         
										         <script>
										          $(function(){
										            $(".new_increments").hide();
										          });
										         $("#new_increment_form").click(function(){
										            $(".new_increments").show();
										            $(".hide-button").hide();
										         });
										         </script>

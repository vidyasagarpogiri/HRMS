

    <table class="table table-striped table-bordered table-condensed">
      <thead>
	    <tr>
	      <th>Id</th>
	      <th>Name</th>
	      <th>Designation</th>
	      <th>Level</th>
	      <th>Date of Join</th>
	    </tr>
      </thead>
      
      <tbody>
	    <% @employees.each do |employee| %>
	    <tr>
	      <td><%= employee.employee_id %></td>
	      <td><%= employee.full_name %></td>
	      <td><%= employee.designation.designation_name if employee.designation.present? %></td>
	      <td><%= employee.grade.value if employee.grade.present? %></td>
	      <td><%= format_date(employee.date_of_join) %></td>
	    </tr>
	    <% end %>
      </tbody>
    </table>

<div class="module">
 <div class="module-head">	
  <h3>Designation info</h3>
  <label style="font-weight:normal;margin-top:-50px;" class = "pull-right"><a><i class="fa fa-plus "></i></a> <%= link_to "Add New Designation",  new_designation_path, :remote => true %></label>
 </div> 
  <div class="module-body">  
 <% if @designations.present? %> 

 <table class="table table-striped table-hover" id="sample-table-2">
 <thead>
		<tr>
		  <tr>
         <th>Name Of Designation</th>
       <th>Action</th>
		</tr>
	  </thead>
	    <% @designations.each do |designation| %>
	  <tbody>
		<tr>
		<td><%= link_to designation.designation_name, designation_path(designation)%></td>
    

     <% if current_user.department == Department::HR %>
      <td> 
        <ul class="navigation-btns" style="list-style: none;display:inline;">
          <li><%= link_to 'Edit', edit_designation_path(designation.id), :class => "btn btn-success pull-left", :remote => true %></li>                        
          <li><%= link_to "Delete", designation_path(designation.id), method: :delete, data: {confirm: "Are You sure?"}, :class=>"btn btn-danger pull-left" %></li>                                         
        </ul>
       </td>
     <% end %>
		</tr>
	  </tbody>
	  <% end %>
	</table>
	<% else %>  
							    <div class="alert alert-success alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          No Designations List for this Department
                  </div>                                   
						  <% end %>		        		     		    
		      </div><!--module -body-->                                                                                
     </div><!--/.module -->

<div id="page-wrapper">
  <div class="row">    
      <div class="page-header">
        <%= @department.department_name %> Department
      </div>
  </div>
  
  <div class="row"> 
    <div class=" col-lg-12 ">
     <div class="panel panel-default">

    


                    
                    
                    
                    
	<div class="row">
    <div class="col-lg-12">
          <div class="panel-heading">
             List Of Employees
             <label style="font-weight:normal;padding:-20px;" class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "Add New Employee ", add_employee_department_path(@department) %></label>
           </div>
           <div class="panel-body">                               
              <%= form_for(@department) do |department| %>       
              	<table class="table table-striped table-hover" id="sample-table-2">
									<thead>
										<tr>
											<th class="center">Employee Name</th>
											<th> Email  </th>
										</tr>
									</thead>
							<% @employees.each do |employee| %>
									<tbody>
										<tr>
										<th class="center"><%= link_to employee.first_name, employee_path(employee) %></th>	
										<th class="center"><%= employee.user.email %></th>	
										</tr>
									</tbody>
							<% end %>
								</table>                       
               <% end %>

		  <!-- /.col-lg-4 (nested) -->
		</div>
      <!-- /.row (nested) -->
      
</div>
    <!-- /.1st panel-body -->

</div>
<!-- /.panel -->




 </div>
 <!-- /.col-lg-6 -->
 
 <div class="row">
    <div class="col-lg-12">
  	
        <div class="panel panel-default">
          <div class="panel-heading">
             List Of Designations

           </div>
           <div class="panel-body">                               
              
              	<table class="table table-striped table-hover" id="sample-table-2">
									<thead>
										<tr>
											<th class="center">Designation</th>
											<th class="center">No.Of.Employees</th>
										
										</tr>
									</thead>
							<% @designations.each do |d| %>
									<tbody>
										<tr>
										<th class="center"><%= link_to d.designation_name, designation_path(d) %></th>	
								    <th><%= d.employees.count %></th>
										</tr>
									</tbody>
							<% end %>
								</table>                       
              
		  <!-- /.col-lg-4 (nested) -->
		</div>
      <!-- /.row (nested) -->
</div>
<!-- /#page wrapper -->




            

<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header"><%= @department.department_name %> Department</div>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row"> 
    <div class=" col-lg-12 ">
      <div class="page-header">Leave Policy</div>
        <table class="table table-striped table-hover">
          <thead>
						<tr>
              <th>Personal leaves Per Year</th>
              <th>Sick Leaves per Year</th>
              <th>Minimum Carry forword Leaves</th>
              <th></th>
            </tr>
           </thead>
           <tbody>          
             <tr>
              <% unless @leave_policy.nil? %>
								<td><%= @leave_policy.sl_this_year%></td>
                <td><%= @leave_policy.pl_this_year %></td>
                <td> <%= @leave_policy.eligible_carry_forward_leaves %></td>
                <td><%= link_to 'Edit', edit_department_leave_policy_path(@department, @leave_policy), :class => "btn btn-success pull-right" %><td> 
              <% end %>
             </tr>
					</tbody>                        
        </table>       
   </div>
   <!-- /.col-lg12 -->
  </div><br>
  <!-- /.row -->
                    
                    
                    
	<div class="row">
    <div class="col-lg-6">
      <% unless @leave_policy.present?%>
        <%= link_to 'Add New Leave Policy', new_department_leave_policy_path(@department) %>	
      <% end %>	
      <% unless @holiday_calender.present?%>
        <%= link_to 'Add New Holiday calender', new_department_holiday_calender_path(@department) %>
      <% end %>			
        <div class="panel panel-default">
          <div class="panel-heading">
             List Of Employees
             <label style="font-weight:normal;padding:-20px;" class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "Add New Employee ", add_employee_department_path(@department) %></label>
           </div>
           <div class="panel-body">                               
              <%= form_for(@department) do |department| %>       
              	<table class="table table-striped table-hover" id="sample-table-2">
									<thead>
										<tr>
											<th class="center">Employee Name</th>
											<th> Email  </th>
										</tr>
									</thead>
							<% @employees.each do |employee| %>
									<tbody>
										<tr>
										<th class="center"><%= link_to employee.first_name, employee_path(employee) %></th>	
										<th class="center"><%= employee.user.email %></th>	
										</tr>
									</tbody>
							<% end %>
								</table>                       
               <% end %>
           </div><!-- /.2nd panel-body -->   
				</div><!-- /.2nd panel-default -->                                    
    </div><!-- /.col-lg-6 -->
    
    
            
       <div class=" col-lg-4 ">
         <div class="panel panel-default">
		       <div class="page-header">Holiday calender</div>
		       <label style="font-weight:normal;padding:20px;margin-top:-15px;" class = "pull-right"><a><i class="fa fa-plus "></i></a><%= link_to "Add Event",  new_department_holiday_calender_path(@department ) %></label> 
		          <div class="panel-body">  
    		        <table class="table table-striped table-hover" id="sample-table-2">
								  <thead>
										<tr>
											<th class="center">Event Name</th>
											<th> Event Date  </th>
										</tr>
									</thead>
									<% @holiday_calender.each do |holiday| %>
									<tbody>
										<tr>
										  <th class="center"><%= holiday.event_name %></th>	
										  <th class="center"><%=holiday.event_date %></th>	
									  </tr>
								 </tbody>
								 <% end %>
							</table>          
		      </div>
		        <!-- /.3nd panel-body -->
		   </div>
		    <!-- /.3nd panel-default --> 
		 </div>
		  <!-- /.col-lg-4 (nested) -->
		</div>
      <!-- /.row (nested) -->
</div>
    <!-- /.1st panel-body -->

</div>
<!-- /.panel -->

 </div>
 <!-- /.col-lg-6 -->
</div>
<!-- /#page wrapper -->




            

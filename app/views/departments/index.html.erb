            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">Department List </div>
                    <div class="add">
                     <label  class = "pull-right"><a><i class="fa fa-plus "></i></a>&nbsp<%= link_to "New Department", new_department_path %></label>
                    </div> 
                </div>

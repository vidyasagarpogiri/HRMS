<div class="panel panel-info">
  <div class="panel-heading">
    Department Appraisal  <a href="/departments" ><i class="fa fa-arrow-circle-left pull-right" title = "Back to Departments"> </i></a>  
    <% if current_user.designation == Designation::HRADMIN %>
      <%= link_to " Change Review Template", edit_department_path(@department), :class => "pull-right", remote: true %>
    <% end %>
  </div>
  <div class="panel-body">
  <% if @appraisal.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <th>Department</th>
        <th>Review Template</th>
      </thead>
      <tbody>
        <td><%= @department.department_name %></td>
        <td><%= @appraisal.title %></td>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            This department did not have any appraisal template
    </div>      
  <% end %>   						 									        							
	</div><!--/.module-body-->
</div>

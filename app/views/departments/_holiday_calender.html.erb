        <div class="module">
		      <div class="module-head">							
             <h3> Holiday calender</h3>
		          <label style="font-weight:normal;margin-top:-20px;" class = "pull-right"><a><i class="icon-plus-sign "></i></a> <%= link_to "Add Event",  new_department_holiday_calender_path(@department ), :remote => true %></label> 
          </div>		   	         
		        <div class="module-body">   
		         <%= puts @holiday_calenders.inspect %>
		          <% if @holiday_calenders.present? %> 
    		        <table class="table table-striped table-hover" id="sample-table-2">
								  <thead>
										<tr>
											<th class="center">Event Name</th>
											<th> Event Date  </th>
											<th> Mandatory/Optional  </th>
										</tr>
									</thead>
									
									<% @holiday_calenders.each do |holiday| %>
									<tbody>
										<tr>
										  <td class="center"><%= holiday.event.event_name %></td>	
										  <td class="center"><%=format_date(holiday.event.event_date) %></td>
										   <td class="center"><% if holiday.mandatory_or_optional? %>Mandatory<%else%>Optional<%end%></td>		
									  </tr>
								 </tbody>
								 <% end %>
							</table>
							<% else %>  
							    <div class="alert alert-info alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          No Holidays List for this Department
                  </div>                                   
						  <% end %>		        
		     
		     
		</div><!--module -body-->                                                              
                  
        	         </div><!--/.module -->

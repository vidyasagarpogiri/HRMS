<div class="panel panel-info">
  <div class="panel-heading">
		Add Appraisal Template
	</div>
	<div class="panel-body">							
	  <%= form_for @department, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal row-fluid"}, remote: true do |dep| %>						
	    <div class="control-group">   
	      <label class="control-label" for="basicinput">Department</label>
          <div class="controls">
            <%= dep.text_field :department_name, disabled: true, :class => "form-control" %>
          <span class="help-block with-errors"></span>
         </div>
       </div>
       <div class="control-group">   
	     <label class="control-label" for="basicinput">Appraisal Template</label>
         <div class="controls">
            <%= dep.collection_select :appraisal_id, Appraisal.all, :id, :title, { :prompt => "Please Select" }, { :class => "departments, form-control", required: true } %>
          <span class="help-block with-errors"></span>
         </div>
       </div>									        							
		   <button type="submit" class="btn btn-success editthree">Save </button>
		   <%= link_to "Cancel", department_path(@department),:class => "btn btn-danger "%>							 
    <% end %>
	</div><!--/.panel-body-->
</div>
            
         <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>
            
                    
                    

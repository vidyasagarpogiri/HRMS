<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Holidays List </h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                <% if @holidays.present? %>
                    <div class="panel panel-default">                                  
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <table class="table table-striped table-hover" id="sample-table-2">
											                  <thead>											      
												                  <tr>												                  													                
													                  <th>Event Name</th>
																						<th>Holiday Date</th>
																						<th> Mandatory/Optional  </th>
												                  </tr>
											                  </thead>											                  
	                                       <% @holidays.each do |holiday| %>
											                  <tbody>
											                  <tr>													                 
													                <td> <%= holiday.event.event_name %>  </td>
													                <td> <%= format_date(holiday.event.event_date) %> </td>	
													                <td class="center"><% if holiday.mandatory_or_optional? %>Mandatory<%else%>Optional<%end%></td>													                  
													              </tr>
											                  </tbody>
											                  <% end %>
									                  </table>              
                             <% else %>
                              <div class="alert alert-success alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                 You Have no holidays list to display
                              </div>
									
									        </div>
								          </div>
                           	<% end %>
                           
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->                                                
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
         <%= render "leave_policies/index"%>
       

 <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>


          
<div class="wrapper">
 <div class="container">
	<div class="row">

  <div class="span12">
		<div class="content">

			<div class="module">
				<div class="module-head">
					<h3>Add New Department</h3>
						</div>
							<div class="module-body">
							
							<%= form_for @department, :data => {:toggle => "validator"}, :html => {:class=>"form-horizontal row-fluid"} do |dep| %>
						
							<div class="control-group">   
							 <label class="control-label" for="basicinput">Department</label>
                   <div class="controls">
                      <%= dep.text_field :department_name, :class => "span8 form-control", :placeholder =>"Enter Department", :data => {:error => "Please Enter Department Name"}, :required =>true,:pattern => '[a-zA-Z/s ]*' %>
                    <span class="help-block with-errors"></span>
							          </div>
								          </div>
									        							
												 <button type="submit" class="btn btn-success">Save </button><br>
												  <%= link_to "Back", departments_path,:class => "btn btn-info "%>
											 
										<% end %>
							</div><!--/.module-body-->
						</div><!--/.module-->
					</div><!--/.content-->
				</div><!--/.span12-->
			</div><!--/.row-->
		</div><!--/.container-->
	</div><!--/.wrapper-->
	
	 <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>
            
     

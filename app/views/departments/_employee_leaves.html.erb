<div class="panel panel-info">
	<div class="panel-heading">							
    Leaves  <a href="/departments" ><i class="fa fa-arrow-circle-left pull-right" title = "Back to Departments"> </i></a>       
  </div>
  <div class="panel-body">	  
    <% if @leaves.present? %>                  
    <div class="adv-table">
      <table  class="display table table-bordered table-striped table-dynamic" id="dynamic-table">
        <thead>
          <tr>
            <th width="80px">Full Name</th>
	          <th width="80px">Date</th>
	          <th width="80px">No of Days</th>													
	          <th width="80px">Leaves Type</th>
	          <th> Reason </th>
	          <th width="100px">Leaves Balance</th>													
	          <th width="60px">Status</th>
	          <th width="120px">Reporting Manger</th>													
          </tr>
        </thead>		      
        <tbody>		
        	<% @leaves.each do |f| %>								
          <tr class="gradeA">               
            <td> <%= f.employee.full_name %></td>
            <td> <%= format_date(f.from_date) %> to <%= format_date(f.to_date) %>  </td>
            <td> <center><%= f.days %> </center></td>
            <td> <%= f.leave_type.type_name if f.leave_type.present? %>  </td>
            <td> <%= f.reason %> </td> 
            <td><center> <%= total_balance_leaves(f.employee) %> </center></td>												  
            <td> <%= f.status %> </td>
            <td> <%= f.employee.reporting_manager%></td>
          </tr>
          <% end %>
        </tbody>      	
	    </table>
	  <div>            
		<% else %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          You have No Leaves Requests 
    </div>                                   
		<% end %>										
  </div>
</div>

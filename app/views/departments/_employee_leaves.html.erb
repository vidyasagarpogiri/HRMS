
      
       <% if @leaves.present? %>                  

    <table class="table table-striped table-bordered table-condensed">
				<thead>
					<tr>
					  <th> Full Name</th>
						<th>Date</th>
						<th>No of Days</th>													
						<th>Leaves Type</th>
						<th> Reason </th>
						<th>Leaves Balance</th>													
						<th>Status</th>
						<th>Reporting Manger</th>													
					</tr>
				</thead>

			
			  <% @leaves.each do |f| %>		
        <tbody>												

					<tr>               
					  <td> <%= f.employee.full_name %></td>
				    <td> <%= format_date(f.from_date) %> to <%= format_date(f.to_date) %>  </td>
					  <td> <%= f.days %> </td>
					  <td> <%= f.leave_type.type_name if f.leave_type.present? %>  </td>
					  <td> <%= f.reason %> </td> 
					  <td> <%= total_balance_leaves(f.employee) %></td>												  
					  <td> <%= f.status %> </td>
					  <td> <%= f.employee.reporting_manager%></td>
					</tr>
       </tbody>
	<% end %>
	

			</table>

          <div class="pagination ">                       

              <%# paginate @leaves %>                       
          </div>
			<% else %>
      <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              You have No Leaves Requests 
      </div>                                   
			<% end %>										

 

<div id="page-wrapper">
  <div class="row">    
      <div class="page-header">
        <%= @department.department_name %> Department
      </div>
  </div>
  
  <div class="row"> 
    <div class=" col-lg-12 ">
     <div class="panel panel-default">
      <div class="panel-heading">
          Leave Policy
          <label style="font-weight:normal;" class = "pull-right"><a><i class="fa fa-plus "></i></a><%= link_to "Add Leave Policy",  new_department_leave_policy_path(@department ) %></label>
      </div>
      <div class="panel-body">
       <% if @leave_policy.present? %>
        <table class="table table-striped table-hover" id="sample-table-2">
          <thead>
						<tr>
              <th>Personal leaves Per Year</th>
             
              <th>Minimum Carry forword Leaves</th>
              <th></th>
            </tr>
           </thead>
           <tbody>          
             <tr>
              <% unless @leave_policy.nil? %>
								<td><%= @leave_policy.pl_this_year %></td>
                <td> <%= @leave_policy.eligible_carry_forward_leaves %></td>
                <td><%= link_to 'Edit', edit_department_leave_policy_path(@department, @leave_policy), :class => "btn btn-success pull-right" %><td> 
              <% end %>
             </tr>
					</tbody>                        
        </table> 
        <% else %>      
          <div class="alert alert-info alert-dismissable">
             <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
               No Leave  for this Department
          </div>                                   
			 <% end %>			 
			 </div>
			    <!-- /.col-lg-panel body -->
     </div>
       <!-- /.default -->
     </div>
       <!-- /.col-lg12 -->
    </div><br/>
     <!-- /.row -->
               
                    
                    
                    
	<div class="row">
    <div class="col-lg-12">
      <%# unless @leave_policy.present?%>
        <%# link_to 'Add New Leave Policy', new_department_leave_policy_path(@department) %>	
      <% #end %>	
      <% #unless @holiday_calender.present?%>
        <%# link_to 'Add New Holiday calender', new_department_holiday_calender_path(@department) %>
      <% #end %>			
                                         
    </div> <!--/.col-lg-6 --> 
    
    
            
       <div class=" col-lg-12 ">
         <div class="panel panel-default">
		       <div class="panel-heading">Holiday calender</div>
		       <label style="font-weight:normal;margin-top:-25px;padding-right:10px;" class = "pull-right"><a><i class="fa fa-plus "></i></a><%= link_to "Add Event",  new_department_holiday_calender_path(@department ) %></label> 
		          <div class="panel-body"> 
		          <% if @holiday_calender.present? %> 
    		        <table class="table table-striped table-hover" id="sample-table-2">
								  <thead>
										<tr>
											<th class="center">Event Name</th>
											<th> Event Date  </th>
										</tr>
									</thead>
									<% @holiday_calender.each do |holiday| %>
									<tbody>
										<tr>
										  <td class="center"><%= holiday.event_name %></td>	
										  <td class="center"><%=format_date(holiday.event_date) %></td>	
									  </tr>
								 </tbody>
								 <% end %>
							</table>
							<% else %>  
							    <div class="alert alert-info alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          No Holidays List for this Department
                  </div>                                   
						  <% end %>		        
		      </div>
		        <!-- /.3nd panel-body -->
		   </div>
		    <!-- /.3nd panel-default --> 
		 </div>
		  <!-- /.col-lg-4 (nested) -->
		</div>
      <!-- /.row (nested) -->
</div>
    <!-- /.1st panel-body -->

</div>
<!-- /.panel -->

 </div>
 <!-- /.col-lg-6 -->
</div>
<!-- /#page wrapper -->




            
         <script>
          $(function(){
  
    $("#active").toggleClass("active").children("ul").collapse("toggle");

          });
        </script>
            
                    
                    





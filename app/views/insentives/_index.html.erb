 <br>                             
<h4>Increments</h4><hr>
<div class="new_insentives">
  <%=render 'insentives/new' %><hr>
</div>
<% if current_user.employee.role.id == 2 %>
<%= link_to "New Bonus", "#", :id=>"new_bonus_form"%>
<% end %>
           

                                <table class="table table-striped table-hover" id="sample-table-2">
											            <thead>											      
												            <tr>
													            <th class="center">Name of Bonus </th>
													            <th>Value/Percentage </th>	
													            <th></th>										      		
												            </tr>
											            </thead>
                                   <% @insentives.each do |insentive| %>
											            <tbody>
												            <tr>               
													            <td class="center"><%= insentive.insentive_type %></td>
													            <td><%= insentive.value %></td>
																		<% if current_user.employee.role.id == 2 %>
													            <td><%= link_to 'edit', edit_employee_salary_insentive_path(@employee.id, @salary.id, insentive.id) , :class => "btn btn-success pull-left" %></td>
																			<td><%= link_to 'delete', employee_salary_insentive_path(@employee.id, @salary.id, insentive.id), method: :delete , :class => "btn btn-success pull-left" %></td>
																		<% end %>
												            </tr>
											            </tbody>
											            <% end %>
										            </table> 
                                     
                            <script>
										          $(function(){
										            $(".new_insentives").hide();
										          });
										         $("#new_bonus_form").click(function(){
										            $(".new_insentives").show();
										            $(this).hide();
										         });
										         </script>

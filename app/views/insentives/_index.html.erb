                     <div class="page-header">Insentives</div>
                  <% if current_user.department == Department::HR %>
                        <div class=" add" id="add_new"> 
                          <label  class = " pull-right"><i class="fa fa-plus "></i>
                              <%= link_to 'New Bonus', "#", :id=>"new_bonus_form"  %>
                           </label>
                         </div>
                      <% end %>         
                    <div class="new_insentives">
                      <%=render 'insentives/new' %>
                    </div>
                         
                         <% if @insentives.present? %>
                                <table class="table table-striped table-hover" id="sample-table-2">
											            <thead>											      
												            <tr>
													            <th class="center">Name of Bonus </th>
													            <th>Value/Percentage </th>	
													            <th></th>										      		
												            </tr>
											            </thead>
                                   <% @insentives.each do |insentive| %>
											            <tbody>
												            <tr>               
													            <td class="center"><%= insentive.insentive_type %></td>
													            <td><%= insentive.value %></td>
																		<% if current_user.department == Department::HR %>
          							            <td>
													            <ul class="navigation-btns" style="list-style: none;display:inline;">
													              <li><%= link_to 'Edit', edit_employee_salary_insentive_path(@employee.id, @salary.id, insentive.id) , :class => "btn btn-success pull-left" %></li>
													              <li><%= link_to 'Delete', employee_salary_insentive_path(@employee.id, @salary.id, insentive.id), method: :delete ,data: {confirm: "Are You sure?"}, :class => "btn btn-danger pull-left" %></li>
													            </ul>
													          </td>

																		<% end %>
												            </tr>
											            </tbody>
											            <% end %>
										            </table> 
										            <% else %>
										            <div class="alert alert-success alert-dismissable examp1" id="new_form">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                     You have No Insentive Details to display.
                               </div>
										          <% end%>
										          
										            
                                     
                            <script>
										          $(function(){
										            $(".new_insentives").hide();
										          });
										         $("#new_bonus_form").click(function(){
										            $(".new_insentives").show();
										            $(".hide-button").hide();
										         });
										         </script>
										         <script>
										            $("#add_new").click(function(){
										            $("#new_form").hide();
										         });
										         </script>
										       

class BonusesController < ApplicationController
def index
  #raise params.inspect
  
  @salary = Salary.find(params[:salary_id])
  @bonus = @salary.bonuses
 end
 
 def new
 #raise params.inspect
   @employee= Employee.find(params[:employee_id])
   @salary = Salary.find(params[:salary_id])
   @allowance = Bonus.new
 end
 
 def create
 #raise params.inspect
  @bonus = Bonus.create(params_bonus)
  @bonus.save
  @employee= Employee.find(params[:employee_id])
  @salary = Salary.find(params[:salary_id])
  redirect_to employee_salary_path(@employee, @salary)
 end
 
 def show
 end
 
 private
   
  def params_bonus
    params.require(:bonus).permit(:bonus_name, :value).merge(:salary_id => params[:salary_id])
  end
  
  
end
